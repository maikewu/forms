      "cardHeadline": {
        "de": "Allgemeine Informationen"
      },
      "children": {
        "technician": {
          "fieldType": "REMBERG_USER_SELECT",
          "label": {
            "de": "Techniker"
          },
          "hiddenInPdf": false,
          "width": 0.5,
          "autofillCurrentUser": false,
          "printEmailAddress": false,
          "required": false,
          "hideInPdfIfEmpty": true
        },
        "contactPerson": {
          "fieldType": "REMBERG_USER_SELECT",
          "label": {
            "de": "Ansprechpartner"
          },
          "hiddenInPdf": false,
          "width": 0.5,
          "autofillCurrentUser": false,
          "printEmailAddress": false,
          "required": false,
          "hideInPdfIfEmpty": true
        },
        "telefonHelpText": {
          "fieldType": "HELP_TEXT",
          "text": {
            "de": "Telefon Ansprechpartner"
          },
          "hiddenInPdf": true,
          "width": 1
        },
        "contactPhone": {
          "fieldType": "REMBERG_PHONE",
          "required": false,
          "hiddenInPdf": false,
          "hideInPdfIfEmpty": true,
          "width": 0.5,
          "label": {
            "de": "Ansprechpartner Telefon"
          }
        },
        "customer0": {
          "fieldType": "REMBERG_CUSTOMER_SELECT",
          "required": false,
          "hideInPdfIfEmpty": true,
          "width": 0.5,
          "label": {
            "de": "Auftraggeber"
          },
          "messages": {
            "onChange": [
              {
                "to": "01-generalInformation",
                "actions": [
                  {
                    "name": "PATCH_DATA",
                    "_dynamicData": {
                      "input": {
                        "_field": {
                          "_field": {
                            "_field": {
                              "_field": "customer0",
                              "_propertyName": "customer"
                            },
                            "_functionName": "GET_ACCOUNT"
                          },
                          "_propertyName": "company"
                        },
                        "_propertyName": "billingAddress"
                      },
                      "output": {
                        "_field": "customer0Location"
                      }
                    }
                  }
                ]
              }
            ]
          }
        },
        "customer0Location": {
          "fieldType": "REMBERG_ADDRESS",
          "width": 0.5,
          "hideInPdfIfEmpty": true,
          "label": {
            "de": "Adresse Auftraggeber"
          },
          "messages": {
            "onChange": [
              {
                "to": "B1-signatureCustomer",
                "actions": [
                  {
                    "name": "PATCH_DATA",
                    "_dynamicData": {
                      "input": {
                        "_field": "customer0Location",
                        "_propertyName": "city"
                      },
                      "output": {
                        "_formArray": "signature1",
                        "_formArrayIndex": 0,
                        "_propertyName": "location"
                      }
                    }
                  }
                ]
              },
              {
                "to": "B1-signatureFessmann",
                "actions": [
                  {
                    "name": "PATCH_DATA",
                    "_dynamicData": {
                      "input": {
                        "_field": "customer0Location",
                        "_propertyName": "city"
                      },
                      "output": {
                        "_formArray": "signature2",
                        "_formArrayIndex": 0,
                        "_propertyName": "location"
                      }
                    }
                  }
                ]
              }
            ]
          }
        },
        "customer": {
          "fieldType": "REMBERG_CUSTOMER_SELECT",
          "required": false,
          "hideInPdfIfEmpty": true,
          "width": 0.5,
          "label": {
            "de": "Warenempfänger"
          },
          "messages": {
            "onChange": [
              {
                "to": "01-generalInformation",
                "actions": [
                  {
                    "name": "PATCH_DATA",
                    "_dynamicData": {
                      "input": {
                        "_field": {
                          "_field": {
                            "_field": {
                              "_field": "customer",
                              "_propertyName": "customer"
                            },
                            "_functionName": "GET_ACCOUNT"
                          },
                          "_propertyName": "company"
                        },
                        "_propertyName": "billingAddress"
                      },
                      "output": {
                        "_field": "customerLocation"
                      }
                    }
                  }
                ]
              }
            ]
          }
        },
        "customerLocation": {
          "fieldType": "REMBERG_ADDRESS",
          "width": 0.5,
          "hideInPdfIfEmpty": true,
          "label": {
            "de": "Adresse Warenempfänger"
          }
        }
      },
      "messages": {
        "onLoaded": [
          {
            "to": "ROOT",
            "actions": [
              {
                "name": "PATCH_DATA",
                "_dynamicData": {
                  "input": {
                    "_field": "ARGS",
                    "_propertyName": "address"
                  },
                  "output": {
                    "_field": "customerLocation",
                    "_propertyName": ""
                  }
                }
              }
            ]
          },
          {
            "to": "ROOT",
            "actions": [
              {
                "name": "PATCH_DATA",
                "_dynamicData": {
                  "input": {
                    "_field": "ARGS",
                    "_propertyName": "customerAddress"
                  },
                  "output": {
                    "_field": "customer0Location",
                    "_propertyName": ""
                  }
                }
              }
            ]
          },
          {
            "to": "ROOT",
            "actions": [
              {
                "name": "PATCH_DATA",
                "_dynamicData": {
                  "input": {
                    "_field": {
                      "_field": "ARGS",
                      "_propertyName": "asset",
                      "_functionName": "GET_PRODUCT"
                    },
                    "_propertyName": "customer"
                  },
                  "output": {
                    "_field": "customer0",
                    "_propertyName": "customer"
                  }
                }
              }
            ]
          },
          {
            "to": "ROOT",
            "actions": [
              {
                "name": "PATCH_DATA",
                "_dynamicData": {
                  "input": {
                    "_field": "ARGS",
                    "_propertyName": "customer"
                  },
                  "output": {
                    "_field": "contactPerson",
                    "_propertyName": "account"
                  }
                }
              }
            ]
          }
        ]
      }
    },
