              {
                "name": "PATCH_DATA",
                "_dynamicData": {
                  "input": {
                    "_field": "ARGS",
                    "_propertyName": "customer"
                  },
                  "output": {
                    "_field": "asset",
                    "_propertyName": "customerFilter"
                  }
                }
              }
            ]
          }
        ]
      }
