{
  "general": {
    "name": {
      "en": "Checklist offer preparation",
      "de": "Checkliste Angebotserstellung"
    }
  },
  "formStructure": {
    "1-allgmeineInformationen": {
      "isForm": true,
      "ui": "CARD",
      "initialExpand": true,
      "hideFormIdInPdf": true,
      "cardHeadline": {
        "de": "Allgemeine Informationen",
        "en": "General information"
      },
      "stateIndicator": true,
      "hasNextStep": true,
      "required": true,
      "children": {
        "customer": {
          "fieldType": "REMBERG_CUSTOMER_SELECT",
          "required": false,
          "hideInPdfIfEmpty": true,
          "width": 1,
          "label": {
            "de": "Kunde",
            "en": "Customer"
          },
          "messages": {
            "onChange": [
              {
                "to": "1-allgmeineInformationen",
                "actions": [
                  {
                    "name": "PATCH_DATA",
                    "_dynamicData": {
                      "input": {
                        "_field": {
                          "_field": {
                            "_field": {
                              "_field": "customer",
                              "_propertyName": "customer"
                            },
                            "_functionName": "GET_ACCOUNT"
                          },
                          "_propertyName": "company"
                        },
                        "_propertyName": "billingAddress"
                      },
                      "output": {
                        "_field": "customeraddress"
                      }
                    }
                  }
                ]
              },
              {
                "to": "1-allgmeineInformationen",
                "actions": [
                  {
                    "name": "PATCH_DATA",
                    "_dynamicData": {
                      "input": {
                        "_field": "customer",
                        "_propertyName": "customer"
                      },
                      "output": {
                        "_field": "asset",
                        "_propertyName": "customerFilter"
                      }
                    }
                  }
                ]
              }
            ]
          }
        },
        "customeraddress": {
          "fieldType": "REMBERG_ADDRESS",
          "label": {
            "de": "Kundenadresse",
            "en": "Customer address"
          },
          "hiddenInPdf": false,
          "hideInPdfIfEmpty": true,
          "width": 0.5,
          "required": false
        },
        "workorderaddress": {
          "fieldType": "REMBERG_ADDRESS",
          "label": {
            "de": "Lieferadresse",
            "en": "Delivery address"
          },
          "hiddenInPdf": false,
          "hideInPdfIfEmpty": true,
          "width": 0.5,
          "required": false,
          "messages": {
            "onChange": [
              {
                "to": "5-signature_technician",
                "actions": [
                  {
                    "name": "PATCH_DATA",
                    "_dynamicData": {
                      "input": {
                        "_field": {
                          "_field": {
                            "_field": {
                              "_field": {
                                "_field": "customer",
                                "_propertyName": "customer"
                              },
                              "_functionName": "GET_ACCOUNT"
                            },
                            "_propertyName": "company"
                          },
                          "_propertyName": "billingAddress"
                        },
                        "_propertyName": "city"
                      },
                      "output": {
                        "_formArray": "signature1",
                        "_formArrayIndex": 0,
                        "_propertyName": "location"
                      }
                    }
                  }
                ]
              },
              {
                "to": "6-signature_customer",
                "actions": [
                  {
                    "name": "PATCH_DATA",
                    "_dynamicData": {
                      "input": {
                        "_field": {
                          "_field": {
                            "_field": {
                              "_field": {
                                "_field": "customer",
                                "_propertyName": "customer"
                              },
                              "_functionName": "GET_ACCOUNT"
                            },
                            "_propertyName": "company"
                          },
                          "_propertyName": "billingAddress"
                        },
                        "_propertyName": "city"
                      },
                      "output": {
                        "_formArray": "signature2",
                        "_formArrayIndex": 0,
                        "_propertyName": "location"
                      }
                    }
                  }
                ]
              }
            ]
          }
        },
        "text_1": {
          "fieldType": "INPUT_TEXT",
          "label": {
            "de": "Ansprechpartner",
            "en": "Contact person"
          },
          "required": false,
          "width": 0.5,
          "hiddenInPdf": false,
          "hideInPdfIfEmpty": true,
          "disabled": false,
          "messages": {
            "onChange": [
              {
                "to": "05-signature",
                "actions": [
                  {
                    "name": "PATCH_DATA",
                    "_dynamicData": {
                      "input": {
                        "_field": "contactName"
                      },
                      "output": {
                        "_formArray": "signature_05",
                        "_formArrayIndex": 0,
                        "_propertyName": "name"
                      }
                    }
                  }
                ]
              }
            ]
          }
        },
        "text_2": {
          "fieldType": "INPUT_TEXT",
          "label": {
            "de": "Eventuelle Vorgangsnummer",
            "en": "Eventual transaction number"
          },
          "required": false,
          "width": 0.5,
          "hiddenInPdf": false,
          "hideInPdfIfEmpty": true,
          "disabled": false
        },
        "helptext_1": {
          "fieldType": "HELP_TEXT",
          "hiddenInPdf": true,
          "width": 1,
          "text": {
            "de": "Nicht vor/bei dem Kunden ausfüllen, sondern nach Kundengespräch/Einsatz im Auto/Büro.",
            "en": "Do not fill out in front of/at the customer, but after customer meeting in the car/office."
          }
        }
      },
      "messages": {
        "onLoaded": [
          {
            "to": "ROOT",
            "actions": [
              {
                "name": "PATCH_DATA",
                "_dynamicData": {
                  "input": {
                    "_field": {
                      "_field": "ARGS",
                      "_propertyName": "asset",
                      "_functionName": "GET_PRODUCT"
                    },
                    "_propertyName": "customer"
                  },
                  "output": {
                    "_field": "customer",
                    "_propertyName": "customer"
                  }
                }
              }
            ]
          },
          {
            "to": "ROOT",
            "actions": [
              {
                "name": "PATCH_DATA",
                "_dynamicData": {
                  "input": {
                    "_field": "ARGS",
                    "_propertyName": "customerAddress"
                  },
                  "output": {
                    "_field": "customeraddress",
                    "_propertyName": ""
                  }
                }
              }
            ]
          },
          {
            "to": "ROOT",
            "actions": [
              {
                "name": "PATCH_DATA",
                "_dynamicData": {
                  "input": {
                    "_field": "ARGS",
                    "_propertyName": "address"
                  },
                  "output": {
                    "_field": "workorderaddress",
                    "_propertyName": ""
                  }
                }
              }
            ]
          }
        ]
      }
    }
  }
}