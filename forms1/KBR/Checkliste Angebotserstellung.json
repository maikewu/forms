{
  "general": {
    "name": {
      "en": "Checklist offer preparation new plant",
      "de": "Checkliste Angebotserstellung Neuanlange"
    }
  },
  "formStructure": {
    "01_allgmeineInformationen": {
      "isForm": true,
      "ui": "CARD",
      "initialExpand": true,
      "hideFormIdInPdf": true,
      "cardHeadline": {
        "de": "Allgemeine Informationen",
        "en": "General information"
      },
      "stateIndicator": true,
      "hasNextStep": true,
      "required": true,
      "children": {
        "customer": {
          "fieldType": "REMBERG_CUSTOMER_SELECT",
          "required": false,
          "hideInPdfIfEmpty": true,
          "width": 1,
          "label": {
            "de": "Kunde",
            "en": "Customer"
          },
          "messages": {
            "onChange": [
              {
                "to": "01_allgmeineInformationen",
                "actions": [
                  {
                    "name": "PATCH_DATA",
                    "_dynamicData": {
                      "input": {
                        "_field": {
                          "_field": {
                            "_field": {
                              "_field": "customer",
                              "_propertyName": "customer"
                            },
                            "_functionName": "GET_ACCOUNT"
                          },
                          "_propertyName": "company"
                        },
                        "_propertyName": "billingAddress"
                      },
                      "output": {
                        "_field": "customeraddress"
                      }
                    }
                  }
                ]
              }
            ]
          }
        },
        "customeraddress": {
          "fieldType": "REMBERG_ADDRESS",
          "label": {
            "de": "Kundenadresse",
            "en": "Customer address"
          },
          "hiddenInPdf": false,
          "hideInPdfIfEmpty": true,
          "width": 0.5,
          "required": false,
          "messages": {
            "onChange": [
              {
                "to": "04_signature_technician",
                "actions": [
                  {
                    "name": "PATCH_DATA",
                    "_dynamicData": {
                      "input": {
                        "_field": {
                          "_field": {
                            "_field": {
                              "_field": {
                                "_field": "customer",
                                "_propertyName": "customer"
                              },
                              "_functionName": "GET_ACCOUNT"
                            },
                            "_propertyName": "company"
                          },
                          "_propertyName": "billingAddress"
                        },
                        "_propertyName": "city"
                      },
                      "output": {
                        "_formArray": "signature1",
                        "_formArrayIndex": 0,
                        "_propertyName": "location"
                      }
                    }
                  }
                ]
              }
            ]
          }
        }
      }
    },
    "02_notwendigeBilder": {
      "isForm": true,
      "ui": "CARD",
      "initialExpand": true,
      "hideFormIdInPdf": true,
      "cardHeadline": {
        "de": "Notwendige Bilder",
        "en": "Required pictures"
      },
      "stateIndicator": true,
      "hasNextStep": true,
      "required": true,
      "children": {
        "helpText_1": {
          "fieldType": "HELP_TEXT",
          "hiddenInPdf": true,
          "width": 1,
          "text": {
            "de": "Notwendige Bilder der Umgebung (Freiraum), des Typenschild der Bestandsanlage sowie der Zuleitung (Anschlusspunkt). (sollte Photographien beim Kunden untersagt sein, Kunden bitten, Bilder zur Verfügung zu stellen)",
            "en": "Necessary pictures of the surroundings (free space), the type plate of the existing installation as well as the supply line (connection point). (if photography is prohibited at the customer's site, ask the customer to provide pictures)."
          }
        },
        "picturesUpload": {
          "width": 1,
          "fieldType": "REMBERG_FILE_UPLOAD",
          "required": false,
          "label": {
            "de": "Bilder hochladen",
            "en": "Upload pictures"
          }
        }
      }
    },
    "03_notwendigeDaten": {
      "isForm": true,
      "ui": "CARD",
      "initialExpand": true,
      "hideFormIdInPdf": true,
      "cardHeadline": {
        "de": "Notwendige Daten",
        "en": "Required data"
      },
      "stateIndicator": true,
      "hasNextStep": true,
      "required": true,
      "children": {
        "headline_1": {
          "fieldType": "H3",
          "hiddenInPdf": false,
          "width": 1,
          "text": {
            "de": "Umgebung",
            "en": "Environment"
          }
        },
        "height": {
          "fieldType": "INPUT_TEXT",
          "label": {
            "de": "Höhe des zur Verfügung stehenden Freiraumes",
            "en": "Height of the available free space"
          },
          "required": false,
          "width": 0.3,
          "hiddenInPdf": false,
          "disabled": false
        },
        "width": {
          "fieldType": "INPUT_TEXT",
          "label": {
            "de": "Breite des zur Verfügung stehenden Freiraumes",
            "en": "Width of the available free space"
          },
          "required": false,
          "width": 0.3,
          "hiddenInPdf": false,
          "disabled": false
        },
        "depth": {
          "fieldType": "INPUT_TEXT",
          "label": {
            "de": "Tiefe des zur Verfügung stehenden Freiraumes",
            "en": "Depth of the available free space"
          },
          "required": false,
          "width": 0.3,
          "hiddenInPdf": false,
          "disabled": false
        },
        "temperature": {
          "fieldType": "INPUT_TEXT",
          "label": {
            "de": "Umgebungstemperatur",
            "en": "Ambient temperature"
          },
          "required": false,
          "width": 0.3,
          "hiddenInPdf": false,
          "disabled": false
        },
        "overtemperatureShutdowns": {
          "fieldType": "INPUT_TEXT",
          "label": {
            "de": "Übertemperarturabschaltungen",
            "en": "Overtemperature shutdowns"
          },
          "required": false,
          "width": 0.3,
          "hiddenInPdf": false,
          "disabled": false
        },
        "headline_2": {
          "fieldType": "H3",
          "hiddenInPdf": false,
          "width": 1,
          "text": {
            "de": "Umgebungsbedingungen",
            "en": "Environmental conditions"
          }
        },
        "checkbox_1": {
          "fieldType": "CHECKBOX",
          "label": {
            "de": "Sauberer Schaltraum/Umgebung",
            "en": "Clean control room/environment"
          },
          "required": true,
          "width": 0.3,
          "hiddenInPdf": false,
          "checked": true
        },
        "checkbox_2": {
          "fieldType": "CHECKBOX",
          "label": {
            "de": "Hohe Verschmutzung (Schwerindustrie, Schotterwerke)",
            "en": "High pollution (heavy industry, gravel works)"
          },
          "required": true,
          "width": 0.3,
          "hiddenInPdf": false,
          "checked": true
        },
        "checkbox_3": {
          "fieldType": "CHECKBOX",
          "label": {
            "de": "Aggressive Luft (Schwimmbäder, Kläranlagen, TKB Anlagen)",
            "en": "Aggressive air (swimming pools, sewage treatment plants, TKB plants)"
          },
          "required": true,
          "width": 0.3,
          "hiddenInPdf": false,
          "checked": true
        },
        "headline_3": {
          "fieldType": "H3",
          "hiddenInPdf": false,
          "width": 1,
          "text": {
            "de": "Besonderheiten Einbringung",
            "en": "Special features insertion"
          }
        },
        "checkbox_4": {
          "fieldType": "CHECKBOX",
          "label": {
            "de": "Baugruppen lose liefern",
            "en": "Deliver assemblies loose"
          },
          "required": true,
          "width": 0.3,
          "hiddenInPdf": false,
          "checked": true
        },
        "headline_4": {
          "fieldType": "H3",
          "hiddenInPdf": false,
          "width": 1,
          "text": {
            "de": "Neuanlange",
            "en": "New plant"
          }
        },
        "U": {
          "fieldType": "INPUT_TEXT",
          "label": {
            "de": "Un",
            "en": "Un"
          },
          "required": false,
          "width": 0.5,
          "hiddenInPdf": false,
          "disabled": false
        },
        "Qges": {
          "fieldType": "INPUT_TEXT",
          "label": {
            "de": "Q ges.",
            "en": "Q total"
          },
          "required": false,
          "width": 0.5,
          "hiddenInPdf": false,
          "disabled": false
        },
        "QStufe": {
          "fieldType": "INPUT_TEXT",
          "label": {
            "de": "Q Stufe",
            "en": "Q Step"
          },
          "required": false,
          "width": 0.5,
          "hiddenInPdf": false,
          "disabled": false
        },
        "verdrosselung": {
          "fieldType": "INPUT_TEXT",
          "label": {
            "de": "Verdrosselung",
            "en": "Choking"
          },
          "required": false,
          "width": 0.5,
          "hiddenInPdf": false,
          "disabled": false
        },
        "Schütz/Thyro": {
          "fieldType": "INPUT_TEXT",
          "label": {
            "de": "Schütz/Thyro",
            "en": "Schütz/Thyro"
          },
          "required": false,
          "width": 0.5,
          "hiddenInPdf": false,
          "disabled": false
        },
        "regler": {
          "fieldType": "INPUT_TEXT",
          "label": {
            "de": "Regler",
            "en": "Controller"
          },
          "required": false,
          "width": 0.5,
          "hiddenInPdf": false,
          "disabled": false
        },
        "netzform": {
          "fieldType": "INPUT_TEXT",
          "label": {
            "de": "Netzform(TN/TT/IT)",
            "en": "Network form(TN/TT/IT)"
          },
          "required": false,
          "width": 0.5,
          "hiddenInPdf": false,
          "disabled": false
        },
        "zusaetze": {
          "fieldType": "INPUT_TEXT",
          "label": {
            "de": "Zusätze z.B. Steuertrafo, Hauptschalter, Wunschfarbe, Türanschlag rechts, Rauchmeldelöscheinrichtung, IP54, usw.",
            "en": "Add-ons e.g. control transformer, main switch, desired color, door hinge right, smoke detector extinguishing device, IP54, etc."
          },
          "required": false,
          "width": 0.5,
          "hiddenInPdf": false,
          "disabled": false
        }
      }
    },
    "04_signature_technician": {
      "width": 1,
      "unbreakable": true,
      "isForm": true,
      "ui": "CARD",
      "initialExpand": false,
      "cardHeadline": {
        "en": "Signature Service technician",
        "de": "Unterschrift Servicetechniker"
      },
      "stateIndicator": true,
      "hasNextStep": true,
      "children": {
        "signature1": {
          "showTime": false,
          "fieldType": "REMBERG_SIGNATURE",
          "label": {
            "de": "Servicetechniker",
            "en": "Service technician"
          },
          "required": true,
          "autofillCurrentUser": true
        }
      }
    },
    "06_send": {
      "isForm": true,
      "ui": "CARD",
      "initialExpand": false,
      "hiddenInPdf": true,
      "cardHeadline": {
        "en": "Send filled checklist",
        "de": "Ausgefüllte Checkliste absenden"
      },
      "stateIndicator": true,
      "hasNextStep": false,
      "children": {
        "send1": {
          "fieldType": "REMBERG_SEND",
          "prefillConfig": {
            "subject": "Checkliste Potenzialanalyse",
            "content": "Diese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail.",
            "to": {
              "currentUser": false
            },
            "cc": {
              "currentUser": true
            },
            "bcc": {
              "currentUser": false
            }
          },
          "label": {
            "de": "Gesendet an",
            "en": "Sent to"
          },
          "required": false
        }
      },
      "messages": {
        "onFinish": [
          {
            "to": "ROOT",
            "actions": [
              {
                "name": "SAVE_TO_BACKEND"
              }
            ]
          }
        ]
      }
    }
  }
}