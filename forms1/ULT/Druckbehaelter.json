      "messages": {
        "onLoaded": [
          {
            "to": "ROOT",
            "actions": [
              {
                "name": "PATCH_DATA",
                "_dynamicData": {
                  "input": {
                    "_field": "ARGS",
                    "_propertyName": "tasks",
                    "_functionName": "GET_TASKS"
                  },
                  "output": {
                    "_field": "tasks",
                    "_propertyName": ""
                  }
                }
              }
            ]
          }
        ]
      }
    },
    "07-signatureTechnician": {
      "isForm": true,
      "ui": "CARD",
      "initialExpand": false,
      "cardHeadline": {
        "en": "Signature Technician",
        "de": "Unterschrift Prüfer"
      },
      "stateIndicator": true,
      "width": 0.5,
      "unbreakable": true,
      "hasNextStep": true,
      "children": {
        "signature_technician": {
          "fieldType": "REMBERG_SIGNATURE",
          "label": {
            "de": "Prüfer/befähigte Person",
            "en": "Technician"
          },
          "hiddenInPdf": false,
          "showTime": false,
          "autofillCurrentUser": true,
          "required": true
        }
      }
    },
    "09-send": {
      "isForm": true,
      "ui": "CARD",
      "initialExpand": false,
      "cardHeadline": {
        "en": "Send/sent form as E-Mail",
        "de": "Kundenausfertigung als E-Mail senden/gesendet"
      },
      "stateIndicator": true,
      "hiddenInPdf": true,
      "hasNextStep": true,
      "children": {
        "send": {
          "fieldType": "REMBERG_SEND",
          "label": {
            "de": "Gesendet an",
            "en": "Sent to"
          },
          "prefillConfig": {
            "subject": "ULT Protokoll Druckbehälter",
            "content": "Diese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail.\n\nSehr geehrte Damen und Herren,\n\nIm Anhang finden Sie das abgeschlossene Protokoll als PDF.\n\nMit freundlichen Grüßen,\nIhr Service-Außendienst",
            "to": {
              "currentUser": false
            },
            "cc": {
              "currentUser": true
            },
            "bcc": {
              "currentUser": false
            }
          },
          "required": false
        }
      }
    },
    "10_addendum": {
      "isForm": true,
      "ui": "CARD",
      "initialExpand": true,
      "cardHeadline": {
        "en": "Addendum",
        "de": "Interner Nachtrag"
      },
      "stateIndicator": true,
      "hasNextStep": true,
      "children": {
        "commentAddendum": {
          "fieldType": "TEXTAREA",
          "label": {
            "de": "Bemerkungen & Hinweise",
            "en": "Comments & Notes"
          },
          "hiddenInPdf": false,
          "hideInPdfIfEmpty": false,
          "required": false,
          "width": 1
        },
        "filesHeadline": {
          "fieldType": "H3",
          "width": 1,
          "text": {
            "de": "Dokumentenanhang",
            "en": "Documents Attachment"
          },
          "required": false,
          "hiddenInPdf": true
        },
        "files": {
          "fieldType": "REMBERG_FILE_UPLOAD",
          "required": false,
          "label": {
            "de": "Dokument(e)",
            "en": "Documents"
          }
        }
      }
    },
    "11-send": {
      "isForm": true,
      "ui": "CARD",
      "initialExpand": false,
      "cardHeadline": {
        "en": "Send/sent form as E-Mail",
        "de": "Protokoll mit internem Nachtrag als E-Mail senden/gesendet"
      },
      "stateIndicator": true,
      "hiddenInPdf": true,
      "hasNextStep": true,
      "children": {
        "send2": {
          "fieldType": "REMBERG_SEND",
          "label": {
            "de": "Gesendet an",
            "en": "Sent to"
          },
          "prefillConfig": {
            "subject": "Protokoll Druckbehälter - Interner Nachtrag",
            "content": "Diese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail.",
            "to": {
              "currentUser": false
            },
            "cc": {
              "currentUser": true
            },
            "bcc": {
              "currentUser": false
            }
          },
          "required": false
        }
      },
      "messages": {
        "onFinish": [
          {
            "to": "ROOT",
            "actions": [
              {
                "name": "SAVE_TO_BACKEND"
              }
            ]
          }
        ]
      }
    }
  }
}