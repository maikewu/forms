{
  "$schema": "https://pastebin.com/raw/eysKfZ7M",
  "general": {
    "singleInstanceForm": false,
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_generalInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "onChange": [
              {
                "target": {
                  "id": "customerLocation"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress"
                ]
              }
            ],
            "prefill": {
              "selectedCompany": [
                {
                  "input": "currentAccountId",
                  "steps": []
                }
              ]
            }
          }
        },
        {
          "id": "customerLocation",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Kundenadresse",
                "en": "Customer Adress"
              }
            }
          }
        },
        {
          "id": "customerContactPerson",
          "type": "userSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kontaktperson",
                "en": "Contact Person"
              }
            }
          }
        },
        {
          "id": "reason",
          "type": "staticSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Grund",
                "en": "Reason"
              }
            },
            "value": {
              "options": {
                "request": {
                  "de": "Anfrage",
                  "en": "Request"
                },
                "problem": {
                  "de": "Problem",
                  "en": "Problem"
                },
                "salesOption": {
                  "de": "Vertriebsmöglichkeit",
                  "en": "Sales Option"
                },
                "workOrder": {
                  "de": "Auftrag",
                  "en": "Work Order"
                },
                "meterReading": {
                  "de": "Zählerfernauslesung",
                  "en": "Remote Meter Reading"
                },
                "leakageMonitoring": {
                  "de": "Leckageüberwachung",
                  "en": "Leakage Monitoring"
                },
                "meterChange": {
                  "de": "Zählerwechsel/Überprüfung",
                  "en": "Meter Change/Check"
                },
                "other": {
                  "de": "Sonstiges",
                  "en": "Other"
                }
              }
            }
          }
        }
      ]
    },
    {
      "id": "02_assetInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Anlagenerfassung",
          "en": "Asset Information"
        }
      },
      "fields": [
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlage wählen",
                "en": "Choose Asset"
              }
            }
          }
        },
        {
          "id": "assetLocation",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Anlagenstandort",
                "en": "Asset Location"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    "assetToLocationAddress"
                  ]
                }
              ]
            }
          }
        },
        {
          "id": "pressureLevel",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Druckstufe Anlage (lt. Typenschild)",
                "en": "Pressure Level"
              }
            }
          }
        },
        {
          "id": "manufacturerÜGS",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Hersteller der ÜGS",
                "en": "ÜGS Manufacturer"
              }
            }
          }
        },
        {
          "id": "typeÜGS",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "ÜGS Typ",
                "en": "ÜGS Type"
              }
            }
          }
        },
        {
          "id": "manufacturerVolumeFlowRegulator",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Hersteller der Volumenstromregler",
                "en": "Volume Flow Regulator Manufacturer"
              }
            }
          }
        },
        {
          "id": "typeVolumeFlowRegulator",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Volumenstromregler Typ",
                "en": "Volume Flow Regulator Type"
              }
            }
          }
        },
        {
          "id": "actuator",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Stellantrieb",
                "en": "Actuator"
              }
            }
          }
        },
        {
          "id": "connector",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Verbindung primärseitige Zuleitung",
                "en": "Connector of primary inlet"
              }
            }
          }
        },
        {
          "id": "pressureGauge",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Anzeigebereich Druckmanometer (z.B. 0-16 bar) ",
                "en": "Scale of Pressure Gauge (eg. 0-16 bar)"
              }
            }
          }
        }
      ]
    },
    {
      "id": "03_assetDefects",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Mängel",
          "en": "Defects"
        }
      },
      "fields": [
        {
          "id": "defects",
          "type": "staticSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Mängel an der Kundenanlage",
                "en": "Defects in customer asset"
              }
            },
            "value": {
              "options": {
                "yes": {
                  "de": "Ja",
                  "en": "Yes"
                },
                "no": {
                  "de": "Nein",
                  "en": "No"
                }
              }
            }
          }
        },
        {
          "id": "defectReport",
          "type": "booleanInput",
          "config": {
            "label": {
              "text": {
                "de": "Mängelbericht ausgefüllt",
                "en": "Filled out defect report"
              }
            }
          }
        },
        {
          "id": "commentDefect",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Kommentar",
                "en": "Comment"
              }
            }
          }
        }
      ]
    },
    {
      "id": "04_networkOperator",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Netzbetreiber",
          "en": "Network Operator"
        }
      },
      "fields": [
        {
          "id": "safeOperation",
          "type": "staticSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Sicherer Betrieb möglich",
                "en": "Safe operation possible"
              }
            },
            "value": {
              "options": {
                "yes": {
                  "de": "Ja",
                  "en": "Yes"
                },
                "no": {
                  "de": "Nein",
                  "en": "No"
                }
              }
            }
          }
        },
        {
          "id": "defectsDetected",
          "type": "staticSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Mängel vorhanden",
                "en": "Defects Detected"
              }
            },
            "value": {
              "options": {
                "yes": {
                  "de": "Ja",
                  "en": "Yes"
                },
                "no": {
                  "de": "Nein",
                  "en": "No"
                }
              }
            }
          }
        }
      ]
    },
    {
      "id": "05_signatureTechnician",
      "type": "signatureSection",
      "config": {
        "required": false,
        "headlineText": {
          "en": "Signature technician",
          "de": "Unterschrift Monteur"
        },
        "fields": {
          "dateInput": {
            "disable": false,
            "required": false,
            "pdfHide": false
          },
          "locationSingleLineTextInput": {
            "disable": false,
            "required": false,
            "pdfHide": false
          },
          "nameSingleLineTextInput": {
            "disable": false,
            "required": false,
            "pdfHide": false,
            "capitalizeFirstLetterOfEveryWord": false
          }
        },
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "pdfHide": false,
        "pdfHideIfValueIsEmpty": false
      }
    },
    {
      "id": "06_addendum",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Anhang",
          "en": "Addendum"
        }
      },
      "fields": [
        {
          "id": "fileUpload",
          "type": "fileUpload",
          "config": {
            "label": {
              "text": {
                "de": "Datei Anhang",
                "en": "Attache File"
              }
            }
          }
        }
      ]
    },
    {
      "id": "07_send",
      "type": "emailSection",
      "config": {
        "headlineText": {
          "en": "Send/sent form as E-Mail",
          "de": "Zustandsfeststellung als E-Mail senden/gesendet"
        },
        "hidePreviewPdfButton": false,
        "hideDownloadPdfButton": false,
        "emailDialogPrefill": {
          "to": {
            "currentUser": true
          },
          "body": {
            "static": "Diese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail."
          },
          "subject": {
            "static": "Zustandsfeststellung"
          }
        }
      }
    }
  ]
}