{
  "$schema": "https://app.remberg.de/api/forms/v2/documentation/form-template-config-schema.json",
  "general": {
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_inspectionPlace",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Abnahmestelle",
          "en": "Inspection Place"
        }
      },
      "fields": [
        {
          "id": "headlineGeneralInformation",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"Abnahmestelle",
              "en":"Inspection Place"
            },
            "pdfWidth": 1,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlage",
                "en": "Asset"
              }
            },
            "required": true
          }
        },
        {
          "id": "assetLocation",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Adresse",
                "en": "Address"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    "assetToLocationAddress"
                  ]
                }
              ]
            }
          }
        }
      ]
    },
    {
      "id": "02_customerInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Kundeninformationen",
          "en": "Customer Information"
        }
      },
      "fields": [
        {
          "id": "headlineCustomerInformation",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"Kundeninformationen",
              "en":"Customer Information"
            },
            "pdfWidth": 1,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "prefill": {
              "selectedCompany": [
                {
                  "input": "currentAccountId",
                  "steps": []
                }
              ]
            }
          }
        }
      ]
    },
    {
      "id": "03_workOrderInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Auftragsinformationen",
          "en": "Work Order Information"
        }
      },
      "fields": [
        {
          "id": "reason",
          "type": "staticSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Grund",
                "en": "Reason"
              }
            },
            "value": {
              "options": {
                "request": {
                  "de": "Anfrage",
                  "en": "Request"
                },
                "problem": {
                  "de": "Problem",
                  "en": "Problem"
                },
                "salesOption": {
                  "de": "Vertriebsmöglichkeit",
                  "en": "Sales Opportunity"
                },
                "workOrder": {
                  "de": "Auftrag",
                  "en": "Work Order"
                },
                "meterReading": {
                  "de": "Zählerfernauslesung",
                  "en": "Remote Meter Reading"
                },
                "leakageMonitoring": {
                  "de": "Leckageüberwachung",
                  "en": "Leakage Monitoring"
                },
                "meterChange": {
                  "de": "Zählerwechsel/Überprüfung",
                  "en": "Meter Change/Check"
                },
                "other": {
                  "de": "Sonstiges",
                  "en": "Other"
                }
              }
            }
          }
        },
        {
          "id": "whiteSpace",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"",
              "en":""
            },
            "pdfWidth": 1,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "headlineAssetInformation",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"Anlagenerfassung",
              "en":"Asset Information"
            },
            "pdfWidth": 1,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "pressureLevel",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Druckstufe Anlage (lt. Typenschild)",
                "en": "Pressure Level (according to type label)"
              }
            }
          }
        },
        {
          "id": "manufacturerÜGS",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Hersteller der ÜGS",
                "en": "ÜGS Manufacturer"
              }
            }
          }
        },
        {
          "id": "typeÜGS",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "ÜGS Typ",
                "en": "ÜGS Type"
              }
            }
          }
        },
        {
          "id": "manufacturerVolumeFlowRegulator",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Hersteller der Volumenstromregler",
                "en": "Volume Flow Regulator Manufacturer"
              }
            }
          }
        },
        {
          "id": "typeVolumeFlowRegulator",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Volumenstromregler Typ",
                "en": "Volume Flow Regulator Type"
              }
            }
          }
        },
        {
          "id": "actuator",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Stellantrieb",
                "en": "Actuator"
              }
            }
          }
        },
        {
          "id": "connector",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Verbindung primärseitige Zuleitung",
                "en": "Connector of primary inlet"
              }
            }
          }
        },
        {
          "id": "pressureGauge",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Anzeigebereich Druckmanometer (z.B. 0-16 bar) ",
                "en": "Scale of Pressure Gauge (eg. 0-16 bar)"
              }
            }
          }
        },
        {
          "id": "whiteSpace2",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"",
              "en":""
            },
            "pdfWidth": 1,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "headlineAssetDefects",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"Kundenalage",
              "en":"Customer Asset"
            },
            "pdfWidth": 1,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "defects",
          "type": "staticSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Mängel an der Kundenanlage",
                "en": "Defects in customer asset"
              }
            },
            "value": {
              "options": {
                "yes": {
                  "de": "Ja",
                  "en": "Yes"
                },
                "no": {
                  "de": "Nein",
                  "en": "No"
                }
              }
            }
          }
        },
        {
          "id": "defectReport",
          "type": "booleanInput",
          "config": {
            "label": {
              "text": {
                "de": "Mängelbericht ausgefüllt",
                "en": "Filled out defect report"
              }
            }
          }
        },
        {
          "id": "commentDefect",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Kommentar",
                "en": "Comment"
              }
            }
          }
        },
        {
          "id": "whiteSpace3",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"",
              "en":""
            },
            "pdfWidth": 1,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "headlineNetworkOperator",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"Netzbetreiber",
              "en":"Network Operator"
            },
            "pdfWidth": 1,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "safeOperation",
          "type": "staticSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Sicherer Betrieb",
                "en": "Safe operation"
              }
            },
            "value": {
              "options": {
                "yes": {
                  "de": "Ja", 
                  "en": "Yes"
                },
                "no": {
                  "de": "Nein",
                  "en": "No"
                }
              }
            }
          }
        },
        {
          "id": "defectsDetected",
          "type": "staticSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Mängel vorhanden",
                "en": "Defects Detected"
              }
            },
            "value": {
              "options": {
                "yes": {
                  "de": "Ja",
                  "en": "Yes"
                },
                "no": {
                  "de": "Nein",
                  "en": "No"
                }
              }
            }
          }
        },
        {
          "id": "commentDefect2",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Kommentar",
                "en": "Comment"
              }
            }
          }
        }
      ]
    },
    {
      "id": "03_addendum",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Dokument hinzufügen",
          "en": "Document Upload"
        }
      },
      "fields": [
        {
          "id": "fileUpload",
          "type": "fileUpload",
          "config": {
            "label": {
              "text": {
                "de": "Dokument",
                "en": "Documents"
              }
            }
          }
        }
      ]
    },
    {
      "id": "04_signatureTechnician",
      "type": "signatureSection",
      "config": {
        "required": false,
        "headlineText": {
          "en": "Signature Assembler",
          "de": "Unterschrift Monteur"
        },
        "fields": {
          "dateInput": {
            "disable": false,
            "required": true,
            "pdfHide": false
          },
          "locationSingleLineTextInput": {
            "disable": false,
            "required": true,
            "pdfHide": false
          },
          "nameSingleLineTextInput": {
            "disable": false,
            "required": true,
            "pdfHide": false,
            "capitalizeFirstLetterOfEveryWord": false
          }
        },
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "pdfHide": false,
        "pdfHideIfValueIsEmpty": false
      }
    },
    {
      "id": "07_send",
      "type": "emailSection",
      "config": {
        "headlineText": {
          "en": "Send/sent form as E-Mail",
          "de": "Zustandsfeststellung als E-Mail senden/gesendet"
        },
        "hidePreviewPdfButton": false,
        "hideDownloadPdfButton": false,
        "emailDialogPrefill": {
          "to": {
            "currentUser": true
          },
          "body": {
            "static": "Sehr geehrte Damen und Herren,\n\nanbei finden Sie Ihr Dokument.\n\nDiese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail.\n\nFür Rückfragen stehen wir gerne unter folgenden Adressen zur Verfügung:\nService E-Mail Fernwärme: fernwaerme@sw-olching.de\nService E-Mail Ladelösungen: ladeinfrastruktur@sw-olching.de\n\nMit freundlichen Grüßen\nIhr Stadtwerke Olching Team"
          },
          "subject": {
            "static": "Zustandsfeststellung"
          }
        }
      }
    }
  ]
}
