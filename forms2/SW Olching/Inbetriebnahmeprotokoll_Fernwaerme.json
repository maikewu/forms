{
  "$schema": "https://pastebin.com/raw/eysKfZ7M",
  "general": {
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_inspectionPlace",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Auftragsinformationen",
          "en": "Work Order Information"
        }
      },
      "fields": [
        {
          "id": "headlineInspectionPlace",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"Auftragsinformationen",
              "en":"Work Order Information"
            },
            "pdfWidth": 1,
            "pdfTextSize": "H3"
          }
        },
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "useAsFilterForFields": ["asset"],
            "required": true,
            "onChange": [
              {
                "target": {
                  "id": "customerAddress"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress"
                ]
              }
            ],
            "prefill": {
              "selectedCompany": [
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    "assetToCustomerAccountId"
                  ]
                }
              ]
            }
          } 
        },
        {
          "id": "customerAddress",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Kundenadresse",
                "en": "Customer Address"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "organizationId",
                  "steps": ["accountIdToAccount", "accountToBillingAddressAddress"]
                }
              ]
            }
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlage",
                "en": "Asset"
              }
            },
            "required": true,
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            },
            "onChange": [
              {
                "target": {"id": "assetAddress"},
                "steps": ["assetInfoToAsset","assetToLocationAddress"]
              }
            ]
          }
        },
        {
          "id": "assetAddress",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Adresse",
                "en": "Address"
              }
            },
            "pdfHideIfValueIsEmpty": true,
            "prefill": {
              "value":[
                {
                  "input": "assetId",
                  "steps": ["assetIdToAsset", "assetToLocationAddress"]
                }
              ]
            }
          }
        },
        {
          "id": "installationCompany",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Installationsfirma",
                "en": "Installation Company"
              }
            }
          }
        },
        {
          "id": "dateWorkOrder",
          "type": "dateInput",
          "config": {
            "label": {
              "text": {
                "de": "Auftrag zur Inbetriebnahme vom",
                "en": "Date of order for Commissioning"
              }
            }
          }
        }
      ]
    },
    {
