      "type": "signatureSection",
      "config": {
        "headlineText": {
          "de": "Unterschrift Monteur",
          "en": "Signature Assembler"
        },
        "required": true,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "pdfHideIfValueIsEmpty": true,
        "pdfHide": false,
        "fields": {
          "dateInput": {
            "required": true,
            "pdfHide": false,
            "disable": false
