        },
        {
          "id": "headlineCustomerInformation",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"Kundeninformation",
              "en":"Customer Information"
            },
            "pdfWidth": 1,
            "pdfTextSize": "H3"
          }
        },
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "useAsFilterForFields": ["asset"],
            "required": true,
            "onChange": [
              {
                "target": {
                  "id": "customerAddress"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress"
                ]
              }
            ],
            "prefill": {
              "selectedCompany": [
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    "assetToCustomerAccountId"
                  ]
                }
              ]
            }
          } 
        },
        {
          "id": "customerAddress",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Kundenadresse",
                "en": "Customer Address"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "organizationId",
                  "steps": ["accountIdToAccount", "accountToBillingAddressAddress"]
                }
              ]
            }
          }
        }
      ]
