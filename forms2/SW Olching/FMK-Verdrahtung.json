{
  "$schema": "https://pastebin.com/raw/eysKfZ7M",
  "general": {
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_inspectionPlace",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Abnahmestelle",
          "en": "Inspection Place"
        }
      },
      "fields": [
        {
          "id": "headlineInspectionPlace",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"Abnahmestelle",
              "en":"Inspection Place"
            },
            "pdfWidth": 1,
            "pdfTextSize": "H3"
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlage",
                "en": "Asset"
              }
            },
            "required": true,
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            },
            "onChange": [
              {
                "target": {"id": "assetAddress"},
                "steps": ["assetInfoToAsset","assetToLocationAddress"]
              }
            ]
          }
        },
        {
          "id": "assetAddress",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Adresse",
                "en": "Address"
              }
            },
            "pdfHideIfValueIsEmpty": true,
            "prefill": {
              "value":[
                {
                  "input": "assetId",
                  "steps": ["assetIdToAsset", "assetToLocationAddress"]
                }
              ]
            }
          }
        }
      ]
    },
    {
      "id": "02_customerInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Kundeninformationen",
