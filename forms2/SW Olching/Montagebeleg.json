    {
      "id": "01_generalInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "id": "headlinegeneralInformation",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"Allgemeine Informationen",
              "en":"General Information"
            },
            "pdfWidth": 1,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "onChange": [
              {
                "target": {
                  "id": "customerLocation"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress"
                ]
              },
              {
                "target": {
                  "id": "03_signatureTechnician",
                  "propertyName": "location"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress",
                  "addressToCityString"
                ]
              }
            ],
            "useAsFilterForFields": [
              "assetDismount",
              "assetInstallation"
            ]
          }
        },
        {
          "id": "customerLocation",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Kundenadresse",
                "en": "Customer Adress"
              }
            }
          }
        },
        {
          "id": "customerContactPerson",
          "type": "userSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kontaktperson",
                "en": "Contact Person"
              }
            }
          }
        },
        {
          "id": "reason",
          "type": "staticSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Einbaugrund",
                "en": "Reason of Installation"
              }
            },
            "value": {
              "options": {
                "initiation": {
                  "de": "Erstinbetriebnahme",
                  "en": "Initial Start-Up"
                },
                "rotation": {
                  "de": "Turnus",
                  "en": "Rotation"
                },
                "malfunction": {
                  "de": "Defekt",
                  "en": "Malfunction"
                },
                "other": {
                  "de": "Sonstiges",
                  "en": "Other"
                }
              }
            }
          }
        }
      ]
    },
