{
  "general": {
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_inspectionPlace",
      "type": "fieldSection",
      "config": {
        "headline": {
          "text": {
            "de": "Abnahmestelle",
            "en": "Inspection Place"
          },
          "pdfHide": true
        }
      },
      "fields": [
        {
          "id": "headlineInspectionPlace",
          "type": "headlineDisplay",
          "config": {
            "uiHide": true,
            "text": {
              "de": "Abnahmestelle",
              "en": "Inspection Place"
            },
            "pdfWidth": 1,
            "type": "H2"
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlage",
                "en": "Asset"
              }
            },
            "required": true,
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            },
            "onChange": [
              {
                "target": {
                  "id": "assetAddress"
                },
                "steps": [
                  "assetInfoToAsset",
                  "assetToLocationAddress"
                ]
              }
            ]
          }
        },
        {
          "id": "assetAddress",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Adresse",
                "en": "Address"
              }
            },
            "pdfHideIfValueIsEmpty": true,
            "prefill": {
              "value": [
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    "assetToLocationAddress"
                  ]
                }
              ]
            }
          }
        }
      ]
    },
    {
      "id": "02_customerInformation",
      "type": "fieldSection",
      "config": {
        "headline": {
          "text": {
            "de": "Kundeninformationen",
            "en": "Customer Information"
          },
          "pdfHide": true
        }
      },
      "fields": [
        {
          "id": "whiteSpace1",
          "type": "headlineDisplay",
          "config": {
            "text": {
              "de": "",
              "en": ""
            },
            "uiHide": true,
            "type": "H2"
          }
        },
        {
          "id": "headlineCustomerInformation",
          "type": "headlineDisplay",
          "config": {
            "uiHide": true,
            "text": {
              "de": "Kundeninformation",
              "en": "Customer Information"
            },
            "pdfWidth": 1,
            "type": "H2"
          }
        },
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "useAsFilterForFields": [
              "asset"
            ],
            "onChange": [
              {
                "target": {
                  "id": "customerAddress"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress"
                ]
              }
            ],
            "prefill": {
              "selectedCompany": [
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    "assetToCustomerAccountId"
                  ]
                }
              ]
            }
          }
        },
        {
          "id": "customerAddress",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Kundenadresse",
                "en": "Customer Address"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "organizationId",
                  "steps": [
                    "accountIdToAccount",
                    "accountToBillingAddressAddress"
                  ]
                }
              ]
            }
          }
        }
      ]
    },
