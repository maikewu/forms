        {
          "id": "reason",
          "type": "staticSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Grund",
                "en": "Reason"
              }
            },
            "pdfWidth": 0.5,
            "value": {
              "options": {
                "1": {
                  "de": "Zu geringe Vorlauftemperaturen",
