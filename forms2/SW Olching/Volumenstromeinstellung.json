    {
      "id": "04_sign",
      "type": "signatureSection",
      "config": {
        "headlineText": {
          "de": "Unterschrift Monteur",
          "en": "Signature Assembler"
        },
        "required": true,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "pdfHideIfValueIsEmpty": true,
        "pdfHide": false,
        "fields": {
          "dateInput": {
            "required": true,
            "pdfHide": false,
            "disable": false
          },
          "locationSingleLineTextInput": {
            "required": true,
            "pdfHide": false,
            "disable": false
          },
          "nameSingleLineTextInput": {
            "required": true,
            "pdfHide": false,
            "disable": false,
            "capitalizeFirstLetterOfEveryWord": true
          }
        },
        "prefill": {
          "date": [
            {
              "input": "creationDateTime",
              "steps": [
                "dateTimeToDate"
              ]
            }
          ],
          "location": [
            {
              "input": "assetId",
              "steps": [
                "assetIdToAsset",
                "assetToLocationAddress",
                "addressToCityString"
              ]
            }
          ],
          "name": [
            {
              "input": "currentUser",
              "steps": [
                "userToFullNameString"
              ]
            }
          ]
        }
      }
    },
