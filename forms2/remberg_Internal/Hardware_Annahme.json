{
  "general": {
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_generalInformation",
      "type": "fieldSection",
      "config": {
        "headline": {
          "text": {
            "de": "Informationen zum Arbeitsverhältnis",
            "en": "Employment relationship information"
          }
        }
      },
      "fields": [
        {
          "id": "line3",
          "type": "htmlDisplay",
          "config": {
            "text": {
              "de": "<hr>",
              "en": "<hr>"
            },
            "uiHide": true
          }
        },
        {
          "id": "user",
          "type": "userSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Nutzer:in",
                "en": "User"
              }
            },
            "pdfWidth": 0.5,
            "onChange": [
              {
                "steps": [
                  "userToFullNameString"
                ],
                "target": {
                  "id": "03_signatureEmployee",
                  "propertyName": "name"
                }
              }
            ]
          }
        },
        {
          "id": "date",
          "type": "dateInput",
          "config": {
            "label": {
              "text": {
                "de": "Beginn des Arbeitsverhältnis",
                "en": "Beginning of the employment relationship"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "team",
          "type": "staticSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Team",
                "en": "Team"
              }
            },
            "pdfWidth": 0.5,
            "value": {
              "options": {
                "1": {
                  "de": "Marketing",
                  "en": "Marketing"
                },
                "2": {
                  "de": "Sales",
                  "en": "Sales"
                },
                "3": {
                  "de": "Customer Success",
                  "en": "Customer Success"
                },
                "4": {
                  "de": "People & Operations",
                  "en": "People & Operations"
                },
                "5": {
                  "de": "Finance & Legal",
                  "en": "Finance & Legal"
                },
                "6": {
                  "de": "Design",
                  "en": "Design"
                },
                "7": {
                  "de": "Product",
                  "en": "Product"
                },
                "8": {
                  "de": "Engineering",
                  "en": "Engineering"
                },
                "9": {
                  "de": "Leadership",
                  "en": "Leadership"
                },
                "10": {
                  "de": "Other",
                  "en": "Other"
                }
              }
            }
          }
        },
        {
          "id": "position",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Position",
                "en": "Position"
              }
            },
            "pdfWidth": 0.5
          }
        }
      ]
    },
    {
      "id": "02_hardware",
      "type": "fieldSection",
      "config": {
        "headline": {
          "text": {
            "de": "Hardware",
            "en": "Hardware"
          }
        }
      },
      "fields": [
        {
          "id": "line1",
          "type": "htmlDisplay",
          "config": {
            "text": {
              "de": "<hr>",
              "en": "<hr>"
            },
            "uiHide": true
          }
        },
        {
          "id": "hardware",
          "type": "assetMultiSelect",
          "config": {
            "label": {
              "text": {
                "de": "Entgegen genommene Hardware",
                "en": "Received hardware"
              }
            }
          }
        },
        {
          "id": "comments",
          "type": "multiLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Bemerkungen (Mängel, Gebrauchsspure etc.)",
                "en": "Remarks (defects, traces of use, etc.)"
              }
            },
            "pdfHideIfValueIsEmpty": true
          }
        },
        {
          "id": "line2",
          "type": "htmlDisplay",
          "config": {
            "text": {
              "de": "<hr>",
              "en": "<hr>"
            },
            "uiHide": true
          }
        }
      ]
    },
    {
      "id": "03_signatureEmployee",
      "type": "signatureSection",
      "config": {
        "headlineText": {
          "de": "Unterschrift Arbeitnehmer:in",
          "en": "Signature Employee"
        },
        "required": false,
        "helpTextHtmlAbove": {
          "text": {
            "de": "<h4><b>Hiermit bestätige ich die Annahme obig genannter Hardware.</b></h4>",
            "en": "<h4><b>I hereby confirm acceptance of the above hardware.</b></h4>"
          }
        },
        "fields": {
          "dateInput": {
            "disable": false,
            "pdfHide": false,
            "required": false
          },
          "locationSingleLineTextInput": {
            "disable": false,
            "pdfHide": false,
            "required": false
          },
          "nameSingleLineTextInput": {
            "disable": false,
            "pdfHide": false,
            "capitalizeFirstLetterOfEveryWord": false,
            "required": false
          }
        },
        "pdfHide": false,
        "pdfHideIfValueIsEmpty": false,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "prefill": {
          "date": [
            {
              "input": "creationDateTime",
              "steps": [
                "dateTimeToDate"
              ]
            }
          ],
          "location": [
            {
              "input": "currentAccountId",
              "steps": [
                "accountIdToAccount",
                "accountToBillingAddressAddress",
                "addressToCityString"
              ]
            }
          ]
        }
      }
    },
    {
      "id": "04_send",
      "type": "emailSection",
      "config": {
        "headlineText": {
          "de": "Annahmebestätigung als E-Mail senden",
          "en": "Send acceptance confirmation as e-mail"
        },
        "hidePreviewPdfButton": false,
        "hideDownloadPdfButton": false,
        "emailDialogPrefill": {
          "bcc": {
            "assignee": false,
            "creator": false,
            "currentUser": false,
            "staticEmails": []
          },
          "cc": {
            "assignee": false,
            "creator": false,
            "currentUser": true,
            "staticEmails": []
          },
          "to": {
            "assignee": false,
            "creator": false,
            "currentUser": false,
            "staticEmails": []
          },
          "body": {
            "de": "Diese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail.",
            "en": "This email was generated automatically.\nPlease do not reply to this email."
          },
          "subject": {
            "de": "Annahmebestätigung remberg Hardware",
            "en": "Acceptance confirmation remberg hardware"
          }
        }
      }
    }
  ]
}