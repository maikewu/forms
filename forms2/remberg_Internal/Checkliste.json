{
  "$schema": "https://app.remberg.de/api/forms/v2/documentation/form-template-config-schema.json",
  "general": {
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "machine",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Maschine",
          "en": "Machine"
        }
      },
      "fields": [
        {
          "id": "machineSelect",
          "type": "assetSingleSelect",
          "config": {
            "required": true,
            "label": {
              "text": {
                "de": "Maschine",
                "en": "Machine"
              }
            },
            "onChange": [
              {
                "target": {
                  "id": "customer"
                },
                "steps": [
                  "assetInfoToCustomerId",
                  "accountIdToAccount",
                  "accountToAccountInfo"
                ]
              }
            ],
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            }
          }
        }
      ]
    },
    {
      "id": "generalInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "id": "issuedBy",
          "type": "userSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Ausgestellt durch",
                "en": "Issued by"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "assignedUserId",
                  "steps": []
                }
              ]
            }
          }
        },
        {
          "id": "issueDate",
          "type": "dateInput",
          "config": {
            "label": {
              "text": {
                "de": "Ausstellungsdatum",
                "en": "Date of Issue"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "creationDateTime",
                  "steps": [
                    "dateTimeToDate"
                  ]
                }
              ]
            }
          }
        },
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "required": true,
            "label": {
              "text": {
                "de": "Kundenauswahl (Firma)",
                "en": "Select Customer (Company)"
              }
            },
            "prefill": {
              "selectedCompany": [
                {
                  "input": "organizationId",
                  "steps": []
                }
              ]
            }
          }
        },
        {
          "id": "comment",
          "type": "richTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Kommentar",
                "en": "Comment"
              }
            },
            "placeHolderText": {
              "en": "Comment",
              "de": "Kommentar"
            }
          }
        }
      ]
    },
    {
      "id": "checklist",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Checkliste: Software",
          "en": "Check List: Software"
        }
      },
      "fields": [
        {
          "id": "checkbox1",
          "type": "booleanInput",
          "config": {
            "prefill": {
              "value": [
                {
                  "input": "none",
                  "steps": [
                    [
                      "staticBoolean",
                      false
                    ]
                  ]
                }
              ]
            },
            "label": {
              "text": {
                "de": "Softwareversion Pr端fen (ggf. Update)",
                "en": "Test software version (possibly do update)"
              }
            }
          }
        },
        {
          "id": "checkbox2",
          "type": "booleanInput",
          "config": {
            "prefill": {
              "value": [
                {
                  "input": "none",
                  "steps": [
                    [
                      "staticBoolean",
                      false
                    ]
                  ]
                }
              ]
            },
            "label": {
              "text": {
                "de": "Datum und Uhrzeit pr端fen = muss auf GMT/UTC eingestellt werden",
                "en": "Test date and time = has to be GMT/UTC"
              }
            }
          }
        },
        {
          "id": "checkbox3",
          "type": "booleanInput",
          "config": {
            "prefill": {
              "value": [
                {
                  "input": "none",
                  "steps": [
                    [
                      "staticBoolean",
                      false
                    ]
                  ]
                }
              ]
            },
            "label": {
              "text": {
                "de": "Einstellungen pr端fen und anpassen",
                "en": "Test and modify settings"
              }
            }
          }
        },
        {
          "id": "checkbox4",
          "type": "booleanInput",
          "config": {
            "prefill": {
              "value": [
                {
                  "input": "none",
                  "steps": [
                    [
                      "staticBoolean",
                      false
                    ]
                  ]
                }
              ]
            },
            "label": {
              "text": {
                "de": "Neues System installieren",
                "en": "Install new system"
              }
            }
          }
        },
        {
          "id": "checkbox5",
          "type": "booleanInput",
          "config": {
            "prefill": {
              "value": [
                {
                  "input": "none",
                  "steps": [
                    [
                      "staticBoolean",
                      false
                    ]
                  ]
                }
              ]
            },
            "label": {
              "text": {
                "de": "Internetverbindung pr端fen",
                "en": "Check internet connection"
              }
            }
          }
        }
      ]
    }
  ]
}