              ]
            },
            "onChange": [
              {
                "target": {
                  "id": "customer"
                },
                "steps": [
                  "assetInfoToCustomerId",
                  "accountIdToAccount",
                  "accountToAccountInfo"
                ]
              }
            ]
          }
        },
        {
          "id": "operatingHours",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Betriebsstunden",
                "en": "Operating hours"
              }
