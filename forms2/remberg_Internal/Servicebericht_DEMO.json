{
  "$schema": "https://pastebin.com/raw/19EgpgEK",
  "general": {
    "singleInstanceForm": false,
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "1-allgemeineInformationen",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "id": "technicians",
          "type": "userSingleSelect",
          "config": {
            "required": true,
            "label": {
              "text": {
                "de": "Servicetechniker",
                "en": "Service Technicians"
              }
            }
          }
        },
        {
          "id": "ausgestelltDurch",
          "type": "userSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Ausgestellt durch",
                "en": "Issued by"
              }
            }
          }
        }
      ]
    },
    {
      "id": "2-maschine",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Maschine",
          "en": "Machine"
        }
      },
      "fields": [
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Maschine",
                "en": "Asset"
              }
            },
            "onChange": [
              {
                "target": {
                  "id": "customerLocation"
                },
                "steps": [
                  "assetInfoToAsset",
                  "assetToLocationAddress"
                ]
              },
              {
                "target": {
                  "id": "customer"
                },
                "steps": [
                  "assetInfoToCustomerId"
                ]
              }
            ]
          }
        },
        {
          "id": "operatingHours",
          "type": "singleLineInput",
          "config": {
            "label": {
              "text": {
                "de": "Betriebsstunden",
                "en": "Operating hours"
              }
            }
          }
        }
      ]
    },
    {
      "id": "3-customerInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "en": "Customer Information",
          "de": "Kunden-Information"
        }
      },
      "fields": [
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kundenauswahl (Firma)",
                "en": "Select Customer (Company)"
              }
            }
          }
        },
        {
          "id": "customerLocation",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Kundenadresse",
                "en": "Customer Adress"
              }
            },
            "onChange": [
              {
                "target": {
                  "id": "10-signatureTechnician",
                  "propertyName": "location"
                },
                "steps": [
                  "addressToCityString"
                ]
              },
              {
                "target": {
                  "id": "11-signatureCustomer",
                  "propertyName": "location"
                },
                "steps": [
                  "addressToCityString"
                ]
              }
            ]
          }
        },
        {
          "id": "customerContactPerson",
          "type": "userSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Ansprechpartner-Auswahl",
                "en": "Select Customer Contact"
              }
            }
          }
        }
      ]
    },
