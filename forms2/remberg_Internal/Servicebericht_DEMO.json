      "fields": [
        {
          "id": "orderNumber",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Auftragsnummer",
                "en": "Service Order Number"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "technicians",
          "type": "userSingleSelect",
          "config": {
            "required": true,
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Servicetechniker",
                "en": "Service Technicians"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "assignedUserId",
                  "steps": []
