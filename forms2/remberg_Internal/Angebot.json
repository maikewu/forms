{
  "$schema": "https://pastebin.com/raw/19EgpgEK",
  "general": {
    "singleInstanceForm": false,
    "timezone": "Europe/Berlin"
  },
  "sections": [{
    "id": "00_customerInformation",
    "type": "fieldSection",
    "config": {
      "headlineText": {
        "en": "Customer Information",
        "de": "Kundeninformationen"
      },
    },
    "fields": [{
      "id": "customer",
      "type": "companySingleSelect",
      "config": {
        "label": {
          "text": {
            "de": "Kunde",
            "en": "Customer"
          }
        },
        "pdfHideIfValueIsEmpty": true,
        "pdfWidth": 0.5,
        "onChange": [{
          "target": {
            "id": "customerLocation"
          },
          "steps": [
            "accountInfoToAccount",
            "accountToBillingAddressAddress"
          ]
        }, {
          "target": {
            "id": "customerTwo"
          },
          "steps": []
        }],
        "prefill": {
          "selectedCompany": [
            {
              "input": "assetId",
              "steps": [
                "assetIdToAsset",
                "assetToCustomerAccountId"
              ]
            }
          ]
        }
      }
    }, {
      "id": "customerLocation",
      "type": "addressInput",
      "config": {
        "label": {
          "text": {
            "de": "Adresse",
            "en": "Address"
          }
        },
        "pdfHideIfValueIsEmpty": true,
        "pdfWidth": 0.5,
        "onChange": [{
          "target": {
            "id": "10-signature_customer",
            "propertyName": "location"
          },
          "steps": [
            "addressToCityString"
          ]
        }],
        "prefill": {
          "value": [
            {
              "input": "organizationId",
              "steps": [
                "accountIdToAccount",
                "accountToBillingAddressAddress"
              ]
            }
          ]
        }
      }
    }]
  }, {
    "id": "01_generaloffer",
    "type": "fieldSection",
    "config": {
      "headlineText": {
        "en": "Offer",
        "de": "Angebot"
      }
    },
    "fields": [{
      "id": "helptext",
      "type": "htmlDisplay",
      "config": {
        "text": {
          "de": "Sehr geehrte Damen und Herren,\n\nvielen Dank für Ihre Anfrage und das damit verbundene Interesse an unseren Dienstleistungen.\n\nGerne unterbreiten wir Ihnen folgendes Angebot:",
          "en": "Dear Sir or Madam,\nThank you for your inquiry and the included interest in our products.\nWe are pleased to submit the following offer:"
        }
      }
    }]
  }, {
    "id": "02_serviceinformation",
    "type": "fieldSection",
    "config": {
      "headlineText": {
        "en": "1. Service Asset and Service Rate",
        "de": "1. Servicegegenstand und Servicerate"
      }
    },
    "fields": [{
      "id": "service_repeater",
      "type": "fieldRepeater",
      "config": {
        "helptextBefore": {},
        "helptextAfter": {},
        "label": {
          "text": {
            "en": "1. Service Asset and Service Rate",
            "de": "1. Servicegegenstand und Servicerate"
          }
        },
        "fields": [{
          "id": "serviceitem",
          "type": "singleLineInput",
          "config": {
            "label": {
              "text": {
                "de": "Servicegegenstand",
                "en": "Service item"
              }
            },
            "pdfHideIfValueIsEmpty": true,
            "pdfWidth": 0.5
          }
        }, {
          "id": "asset1",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlagen-ID",
                "en": "Asset ID"
              }
            },
            "pdfHideIfValueIsEmpty": true
          }
        }, {
          "id": "asset2",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlagen-ID",
                "en": "Asset ID"
              }
            },
            "pdfHideIfValueIsEmpty": true
          }
        }, {
          "id": "servicerate",
          "type": "singleLineInput",
          "config": {
            "label": {
              "text": {
                "de": "Pauschale Servicerate (in € je Gerät, zzgl. MwSt)",
                "en": "Service rate (in € per asset, plus VAT)"
              }
            },
            "pdfHideIfValueIsEmpty": true,
            "pdfWidth": 0.5
          }
        }]
      }
    }]
  }, {
    "id": "04_operationsite",
    "type": "fieldSection",
    "config": {
      "headlineText": {
        "en": "2. Operation Site",
        "de": "2. Einsatzort"
      }
    },
    "fields": [{
      "id": "customerTwo",
      "type": "companySingleSelect",
      "config": {
        "pdfWidth": 0.5,
        "label": {
          "text": {
            "de": "Kunde",
            "en": "Customer"
          }
        },
        
      }
    }]
  }, {
    "id": "06_service_scope",
    "type": "fieldSection",
    "config": {
      "headlineText": {
