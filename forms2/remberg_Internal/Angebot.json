{
  "$schema": "https://pastebin.com/raw/19EgpgEK",
  "general": {
    "singleInstanceForm": false,
    "timezone": "Europe/Berlin"
  },
  "sections": [{
    "id": "00_customerInformation",
    "type": "fieldSection",
    "config": {
      "headlineText": {
        "en": "Customer Information",
        "de": "Kundeninformationen"
      }
    },
    "fields": [{
      "id": "customer",
      "type": "companySingleSelect",
      "config": {
        "label": {
          "text": {
            "de": "Kunde",
            "en": "Customer"
          }
        },
        "pdfHideIfValueIsEmpty": true,
        "pdfWidth": 0.5,
        "onChange": [{
          "target": {
            "id": "customerLocation"
          },
          "steps": [
            "accountInfoToAccount",
            "accountToBillingAddressAddress"
          ]
        }, {
          "target": {
            "id": "customerTwo"
          },
          "steps": []
        }],
        "prefill": {
          "selectedCompany": [
            {
              "input": "assetId",
              "steps": [
                "assetIdToAsset",
                "assetToCustomerAccountId"
              ]
            }
          ]
        }
      }
    }, {
      "id": "customerLocation",
      "type": "addressInput",
      "config": {
        "label": {
          "text": {
            "de": "Adresse",
            "en": "Address"
          }
        },
        "pdfHideIfValueIsEmpty": true,
        "pdfWidth": 0.5,
        "onChange": [{
          "target": {
            "id": "10-signature_customer",
            "propertyName": "location"
          },
          "steps": [
            "addressToCityString"
          ]
        }],
        "prefill": {
          "value": [
            {
              "input": "organizationId",
              "steps": [
                "accountIdToAccount",
                "accountToBillingAddressAddress"
              ]
            }
          ]
        }
      }
    }]
  }, {
