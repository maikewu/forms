      "fields": [
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "pdfHideIfValueIsEmpty": true,
            "pdfWidth": 0.5,
            "required": true,
            "useAsFilterForFields": [
              "asset",
              "customerContactPerson"
            ],
            "onChange": [
              {
                "target": {
                  "id": "customerLocation"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress"
                ]
              }
            ],
            "prefill": {
              "selectedCompany": [
                {
                  "input": "organizationId",
                  "steps": []
