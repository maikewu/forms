{
  "$schema": "https://pastebin.com/raw/eysKfZ7M",
  "general": {
    "singleInstanceForm": false,
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "1-allgmeineInformationen",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "required": true,
            "prefill": {
              "selectedCompany": [
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    "assetToCustomerAccountId"
                  ]
                }
              ]
            } 
          }
        },
        {
          "id": "inventoryId",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Inventar Nummer",
                "en": "Inventory Number"
              }
            }
          }
        },
        {
          "id": "location",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Standort",
                "en": "Location"
              }
            }
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Art",
                "en": "Type"
              }
            },
            "required": true,
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            }
          }
        },
        {
          "id": "costCentre",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Kostenstelle",
                "en": "Cost Centre"
              }
            }
          }
        },
        {
          "id": "building",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Gebäude",
                "en": "Building"
              }
            }
          }
        },
        {
          "id": "serialNumber",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Hersteller / Ser.Nr.",
                "en": "Serial Number"
              }
            }
          }
        },
        {
          "id": "protectionLevel",
          "type": "staticSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Schutzklasse",
                "en": "Protection Level"
              }
            },
            "value": {
              "options": {
                "protectionLevel1": {
                  "de": "SK 1",
                  "en": "SK 1"
                },
                "protectionLevel2": {
                  "de": "SK 2",
                  "en": "SK 2"
                },
                "protectionLevel3": {
                  "de": "SK 3",
                  "en": "SK 3"
                }
              }
            }
          }
        },
        {
          "id": "room",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Raum",
                "en": "Room"
              }
            }
          }
        },
        {
          "id": "examinationType",
          "type": "staticSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Art der Prüfung",
                "en": "Type of Examination"
              }
            },
            "value": {
              "options": {
                "examinationType1": {
                  "de": "DIN VDE 0701-0702",
                  "en": "DIN VDE 0701-0702"
                },
                "examinationType2": {
                  "de": "DIN VDE 0105-100",
                  "en": "DIN VDE 0105-100"
                },
                "examinationType3": {
                  "de": "DIN VDE 0113-1",
                  "en": "DIN VDE 0113-1"
                }
              }
            }
          }
        },
        {
          "id": "testDevice",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Prüfmittel",
                "en": "Test Device"
              }
            }
          }
        },
        {
          "id": "technician",
          "type": "userSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Prüfer",
                "en": "Technician"
              }
            },
            "onChange": [
              {
                "target": {
                  "id": "3-signature",
                  "propertyName": "name"
                },
                "steps": [
                  "userToFullNameString"
                ]
              }
            ]
          }
        },
        {
          "id": "currentExamination",
          "type": "dateInput",
          "config": {
            "label": {
              "text": {
                "de": "Prüfdatum",
                "en": "Date of Examination"
              }
            }
          }
        },
        {
          "id": "upcommingExamination",
          "type": "dateInput",
          "config": {
            "label": {
              "text": {
                "de": "Nächste Prüfung",
                "en": "Upcomming Examination"
              }
            }
          }
        }
      ]
    },
    {
      "id": "2-prüfergebnisse",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Prüfergebnisse",
          "en": "Findings"
        }
      },
      "fields": [
        {
          "id": "resultRepeater",
          "type": "fieldRepeater",
          "config": {
            "label": {
              "text": {
                "de": "Es wurden noch keine Einträge hinzugefügt.",
                "en": "No entries added yet."
              }
            },
            "fields": [
              {
                "id": "function",
                "type": "singleLineTextInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "Funktion",
                      "en": "Function"
                    }
                  }
                }
              },
              {
                "id": "workStep",
                "type": "singleLineTextInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "Arbeitsschritt",
                      "en": "Work Step"
                    }
                  }
                }
              },
              {
                "id": "criteria",
                "type": "singleLineTextInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "Kriterien (Einheit)",
                      "en": "Criteria"
                    }
                  }
                }
              },
              {
                "id": "testResult",
                "type": "singleLineTextInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "Ergebnis",
                      "en": "Result"
                    }
                  }
                }
              },
              {
                "id": "result1",
                "type": "staticSingleSelect",
                "config": {
                  "label": {
                    "text": {
                      "de": "OK",
                      "en": "OK"
                    }
                  },
                  "value": {
                    "options": {
                      "ok": {
                        "de": "OK",
                        "en": "OK"
                      },
                      "notOk": {
                        "de": "Unzureichend",
                        "en": "Deficient"
                      }
                    }
                  }
                }
              }
            ]
          }
        },
        {
          "id": "result",
          "type": "staticSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Gesamtergebnis",
                "en": "Final Result"
              }
            },
            "value": {
              "options": {
                "noDefects": {
                  "de": "Keine Mängel",
                  "en": "No Defects"
                },
                "minorDefects": {
                  "de": "Geringe Mängel",
                  "en": "Minor Defects"
                },
                "majorDefects": {
                  "de": "Erhebliche Mängel",
                  "en": "Major Defects"
                }
              }
            }
          }
        }
      ]
    },
    {
      "id": "3-signature",
      "type": "signatureSection",
      "config": {
        "headlineText": {
          "de": "Unterschrift Techniker",
          "en": "Signature Technician"
        },
        "required": true,
        "fields": {
          "dateInput": {
            "disable": false,
            "pdfHide": false,
            "required": false
          },
          "locationSingleLineTextInput": {
            "disable": false,
            "pdfHide": false,
            "required": false
          },
          "nameSingleLineTextInput": {
            "disable": false,
            "pdfHide": false,
            "capitalizeFirstLetterOfEveryWord": false,
            "required": false
          }
        },
        "pdfHide": false,
        "pdfHideIfValueIsEmpty": false,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "prefill": {
          "name": [
            {
              "input": "currentUser",
              "steps": [
                "userToFullNameString"
              ]
            }
          ]
        }
      }
    },
    {
      "id": "4-send",
      "type": "emailSection",
      "config": {
        "headlineText": {
          "de": "Formular als E-Mail senden",
          "en": "Send form as E-Mail"
        },
        "hidePreviewPdfButton": false,
        "hideDownloadPdfButton": false,
        "emailDialogPrefill": {
          "bcc": {
            "assignee": false,
            "creator": false,
            "currentUser": false,
            "staticEmails": []
          },
          "cc": {
            "assignee": false,
            "creator": false,
            "currentUser": false,
            "staticEmails": []
          },
          "to": {
            "assignee": false,
            "creator": false,
            "currentUser": false,
            "staticEmails": []
          },
          "body": {},
          "subject": {}
        }
      }
    }
  ]
}