{
  "$schema": "https://pastebin.com/raw/eysKfZ7M",
  "general": {
    "singleInstanceForm": false,
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01-assetInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Asset-Informationen",
          "en": "Asset Information"
        }
      },
      "fields": [
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Maschine auswählen",
                "en": "Select Asset"
              }
            },
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            },
            "onChange": [
              {
                "target": {
                  "id": "customerLocation"
                },
                "steps": [
                  "assetInfoToAsset",
                  "assetToLocationAddress"
                ]
              },
              {
                "target": {
                  "id": "customer"
                },
                "steps": [
                  "assetIdToAsset",
                  "assetToCustomerAccountId"
                ]
              }
            ]
          }
        }
      ]
    },
    {
      "id": "2-customerInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Kunden-Informationen",
          "en": "Customer Information"
        }
      },
      "fields": [
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "required": true,
            "useAsFilterForFields": [
              "customerContactPerson"
            ]
          }
        },
        {
          "id": "customerLocation",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Kundenadresse",
                "en": "Customer Address"
              }
            }
          }
        },
        {
          "id": "customerContactPerson",
          "type": "userSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Ansprechpartner-Auswahl",
                "en": "Select Customer Contact"
              }
            }
          }
        }
      ]
    },
    {
      "id": "3-notesInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Anmerkungen",
          "en": "Remarks"
        }
      },
      "fields": [
        {
          "id": "generalNotes",
          "type": "multiLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Ihre Anmerkungen & Hinweise",
                "en": "General Remarks"
              }
            }
          }
        }
      ]
    },
    {
      "id": "4-signature",
      "type": "signatureSection",
      "config": {
        "required": true,
        "headlineText": {
          "de": "Unterschrift Servicemitarbeiter Innendienst",
          "en": "Signature Service Back Office Agent"
        },
        "fields": {
          "dateInput": {
            "disable": false,
            "pdfHide": false,
            "required": false
          },
          "locationSingleLineTextInput": {
            "disable": false,
            "pdfHide": false,
            "required": false
          },
          "nameSingleLineTextInput": {
            "disable": false,
            "pdfHide": false,
            "capitalizeFirstLetterOfEveryWord": false,
            "required": false
          }
        },
        "pdfHide": false,
        "pdfHideIfValueIsEmpty": false,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false
      }
    },
    {
      "id": "5-send",
      "type": "emailSection",
      "config": {
        "headlineText": {
          "de": "Ausgefülltes Formular absenden",
          "en": "Send filled form"
        },
        "hidePreviewPdfButton": false,
        "hideDownloadPdfButton": false,
        "emailDialogPrefill": {
          "bcc": {
            "assignee": false,
            "creator": false,
            "currentUser": true,
            "staticEmails": []
          },
          "cc": {
            "assignee": false,
            "creator": true,
            "currentUser": false,
            "staticEmails": []
          },
          "to": {
            "assignee": true,
            "creator": false,
            "currentUser": false,
            "staticEmails": []
          },
          "body": {
            "dynamic": "tbd"
          },
          "subject": {
            "dynamic": "tbd"
          }
        }
      }
    }
  ]
}