        {
          "id": "customerLocation",
          "type": "addressInput",
          "config": {
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Standort der Anlage"
              }
            },
            "pdfHideIfValueIsEmpty": true,
            "onChange": [
              {
                "target": {
                  "id": "A1-signatureTechnican",
                  "propertyName": "location"
                },
                "steps": ["addressToCityString"]
              },
              {
                "target": {
                  "id": "B1-signatureTechnican",
                  "propertyName": "location"
                },
                "steps": ["addressToCityString"]
              },
              {
                "target": {
                  "id": "A1-signatureCustomer",
                  "propertyName": "location"
                },
                "steps": ["addressToCityString"]
              },
              {
                "target": {
                  "id": "B1-signatureCustomer",
                  "propertyName": "location"
                },
                "steps": ["addressToCityString"]
              }
