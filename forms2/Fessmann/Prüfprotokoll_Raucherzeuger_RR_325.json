{
  "$schema": "https://pastebin.com/raw/eysKfZ7M",
  "general": {
    "singleInstanceForm": false,
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01-generalInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen"
        }
      },
      "fields": [
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Name des Betreibers"
              }
            },
            "prefill": {
              "selectedCompany": [
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    "assetToCustomerAccountId"
                  ]
                }
              ]
            },
            "onChange": [
              {
                "target": {
                  "id": "customerLocation"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress"
                ]
              }
            ],
            "useAsFilterForFields": [
              "asset"
            ]
          }
        },
        {
          "id": "customerLocation",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Standort der Anlage"
              }
            },
            "pdfHideIfValueIsEmpty": true,
            "onChange": [
              {
                "target": {
                  "id": "A1-signatureTechnician",
                  "propertyName": "location"
                },
                "steps": [
                  "addressToCityString"
                ]
              },
              {
                "target": {
                  "id": "B1-signatureCustomer",
                  "propertyName": "location"
                },
                "steps": [
                  "addressToCityString"
                ]
              },
              {
                "target": {
                  "id": "A2-signatureTechnician",
                  "propertyName": "location"
                },
                "steps": [
                  "addressToCityString"
                ]
              },
              {
                "target": {
                  "id": "B2-signatureCustomer",
                  "propertyName": "location"
                },
                "steps": [
                  "addressToCityString"
                ]
              }
            ]
          }
        },
        {
          "id": "asset_customer",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Kundenanlagen-Bezeichnung"
              }
            },
            "pdfHideIfValueIsEmpty": true
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Serialnummer"
              }
            },
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            }
          }
        },
        {
          "id": "asset_runningtime",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Baujahr"
              }
            }
          }
        },
        {
          "id": "serviceTechnicians",
          "type": "userSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "FESSMANN Servicetechniker"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "currentUserId",
                  "steps": []
                }
              ]
            }
          }
        },
        {
          "id": "testDate",
          "type": "dateInput",
          "config": {
            "label": {
              "text": {
                "de": "Prüfdatum"
              }
            }
          }
        }
      ]
    },
    {
      "id": "02-testSteps",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Prüfschritte"
        }
      },
      "fields": [
        {
          "id": "headline1",
          "type": "htmlDisplay",
          "config": {
            "text": {
              "de": "<h3>Leistungskennziffer 1001</h3>"
            }
          }
        },
        {
          "id": "subline1",
          "type": "htmlDisplay",
          "config": {
            "text": {
              "de": "<h1>Tür auf Dichtheit prüfen</h1>"
            },
            "pdfWidth": 0.3
          }
        },
        {
          "id": "iBox1",
          "type": "booleanInput",
          "config": {
            "label": {
              "text": {
                "de": "i.O."
              }
            },
            "pdfWidth": 0.1
          }
        },
        {
          "id": "dBox1",
          "type": "booleanInput",
          "config": {
            "label": {
              "text": {
                "de": "defekt"
              }
            },
            "pdfWidth": 0.1
          }
        },
        {
          "id": "note1",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Bemerkung"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "headline2",
          "type": "htmlDisplay",
          "config": {
            "text": {
              "de": "<h3>Leistungskennziffer 1002</h3>"
            },
            "pdfWidth": 0.3
          }
        },
        {
          "id": "subline2",
          "type": "htmlDisplay",
          "config": {
            "text": {
              "de": "<h1>Türgriff auf Spiel prüfen</h1>"
            },
            "pdfWidth": 0.3
          }
        },
        {
          "id": "iBox2",
          "type": "booleanInput",
          "config": {
            "label": {
              "text": {
                "de": "i.O."
              }
            },
            "pdfWidth": 0.1
          }
        },
        {
          "id": "dBox2",
          "type": "booleanInput",
          "config": {
            "label": {
              "text": {
                "de": "defekt"
              }
            },
            "pdfWidth": 0.1
          }
        },
        {
          "id": "note3",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Bemerkung"
              }
            },
            "pdfWidth": 0.5
          }
        }
      ]
    }
  ]
}