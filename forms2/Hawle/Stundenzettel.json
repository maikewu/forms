{
  "$schema": "https://app.remberg.de/api/forms/v2/documentation/form-template-config-schema.json",
  "general": {
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_generalInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "id": "headlineGeneralInformation",
          "type": "headlineDisplay",
          "config": { 
            "uiHide": true,
            "pdfTextSize": "H3",
            "text": {
              "de": "Allgemeine Informationen",
              "en": "General Information" 
            }
          }
        },
        {
          "id": "maintenanceNr",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Auftragsnummer",
                "en": "Work Order Number"
              }
            },
            "required": true
          }
        },
        {
          "id": "ausgestelltDurch",
          "type": "userSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Mitarbeiter",
                "en": "Employee"
              }
            },
            "required": true,
            "onChange": [
              {
                "target": {
                  "id": "04_signatureTechnician",
                  "propertyName": "name"
                },
                "steps": [
                  "userToFullNameString"
                ]
              }
            ],
            "prefill": {
              "value": [
                {
                  "input": "assignedUserId",
                  "steps": []
                }
              ]
            }
          }
        },
        
        {
          "id": "companySingleSelect_1",
          "type": "companySingleSelect",
          "config": {
            "required": false,
            "pdfHideIfValueIsEmpty": true,
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "en": "Customer",
                "de": "Kunde"
              }
            },
            "prefill": {
              "selectedCompany": [
                {
                  "input": "organizationId",
                  "steps": []
                }
              ]
            }
          }
        }
      ]
    },
    {
      "id": "02_workTimes",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Arbeitszeiten",
          "en": "Work Hours"
        }
      },
      "fields": [
        {
          "id": "whitespace1",
          "type": "headlineDisplay",
          "config": {
            "uiHide": true,
            "pdfTextSize": "H2",
            "text": {
              "de": "",
              "en": ""
            }
          }
        },
        {
          "id": "headlineTimes",
          "type": "headlineDisplay",
          "config": {
            "uiHide": true,
            "pdfTextSize": "H3",
            "text": {
              "de": "Arbeitszeiten",
              "en": "Work Hours"
            }
          }
        },
        {
          "id": "tavelAndWorkingTimes",
          "type": "timeTrackingListInput",
          "config": {
            "label": {
              "text": {
                "de": "Arbeitszeiten",
                "en": "Work Hours"
              }
            },
            "pdfWidth": 1,
            "pdfHideIfValueIsEmpty": true,
            "fields": {
              "timeTrackingTypeStaticSingleSelect": {
                "pdfHide": false
              },
              "startDateTimeInput": {
                "pdfHide": false
              },
              "endDateTimeInput": {
                "pdfHide": false
              },
              "breakNumericInput": {
                "disabled": false,
                "required": false,
                "pdfHide": false
              },
              "durationDisplay": {
                "disabled": false,
                "pdfHide": false
              },
              "distanceNumericInput": {
                "disabled": false,
                "required": false,
                "pdfHide": false
              },
              "technicianUserSingleSelect": {
                "disabled": true,
                "required": false,
                "pdfHide": true,
                "pdfPrintEmailAddress": false
              },
              "commentMultiLineTextInput": {
                "disabled": false,
                "required": false,
                "pdfHide": false
              }
            }
          }
        }
      ]
    },
    {
      "id": "03_expenses",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Spesen",
          "en": "Expenses"
        }
      },
      "fields": [
        {
          "id": "expenses",
          "type": "expenseListInput",
          "config": {
            "label": {
              "text": {
                "de": "Ausgaben",
                "en": "Expenses"
              }
            },
            "pdfWidth": 1,
            "pdfHideIfValueIsEmpty": true,
            "fields": {
              "dateInput": {
                "pdfHide": false,
                "disabled": false,
                "required": false
              },
              "commentMultiLineTextInput": {
                "pdfHide": false,
                "disabled": false,
                "required": false
              },
              "expenseAmountNumericInput": {
                "pdfHide": false,
                "disabled": false,
                "required": true
              },
              "expenseTypeSingleSelectInput": {
                "pdfHide": false,
                "disabled": false,
                "required": false,
                "values": {
                  "flight": {
                      "de": "Flug",
                      "en": "Flight"
                  },
                  "rental_car": {
                      "de": "Mietauto",
                      "en": "Rental Car"
                  },
                  "board": {
                      "de": "Verpflegung",
                      "en": "Board"
                  },
                  "accommodation": {
                      "de": "Unterkunft",
                      "en": "Accommodation"
                  },
                  "parking": {
                      "de": "Parken",
                      "en": "Parking"
                  },
                  "toll": {
                      "de": "Maut",
                      "en": "Toll"
                  },
                  "transportation": {
                      "de": "Transport",
                      "en": "Transportation"
                  },
                  "vignette": {
                      "de": "Vignette",
                      "en": "Vignette"
                  },
                  "other": {
                      "de": "Sonstiges",
                      "en": "Other"
                  }                      
                }
              }
            }
          }
        }
      ]
    },
    {
      "id": "04_signatureTechnician",
      "type": "signatureSection",
      "config": {
        "required": true,
        "headlineText": {
          "de": "Unterschrift Techniker",
          "en": "Signature technician"
        },
        "fields": {
          "dateInput": {
            "disable": false,
            "pdfHide": false,
            "required": false
          },
          "locationSingleLineTextInput": {
            "disable": false,
            "pdfHide": false,
            "required": false
          },
          "nameSingleLineTextInput": {
            "disable": false,
            "pdfHide": false,
            "capitalizeFirstLetterOfEveryWord": false,
            "required": false
          }
        },
        "pdfHide": false,
        "pdfHideIfValueIsEmpty": false,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "prefill": {
          "name": [
            {
              "input": "currentUser",
              "steps": [
                "userToFullNameString"
              ]
            }
          ],
          "date": [
            {
              "input": "creationDateTime",
              "steps": [
                "dateTimeToDate"
              ]
            }
          ]
        }
      }
    },
    {
      "id": "05_send",
      "type": "emailSection",
      "config": {
        "headlineText": {
          "de": "Stundenzettel als E-Mail senden/gesendet",
          "en": "Send/sent report as email"
        },
        "hidePreviewPdfButton": false,
        "hideDownloadPdfButton": false,
        "emailDialogPrefill": {
          "bcc": {
            "assignee": false,
            "creator": false,
            "currentUser": true,
            "staticEmails": []
          },
          "cc": {
            "assignee": false,
            "creator": true,
            "currentUser": false,
            "staticEmails": []
          },
          "to": {
            "assignee": true,
            "creator": false,
            "currentUser": false,
            "staticEmails": []
          },
          "body": {
            "de": "Stundenzettel",
            "en": "Time Sheet"
          },
          "subject": {
            "de": "Diese E-Mail wurde automatisch erstellt.\nBitte antworten Sie nicht auf diese E-Mail.",
            "en": "This email was generated automatically.\nPlease do not reply to this email."
          }
        }
      }
    }
  ]
}