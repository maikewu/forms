{
  "general": {
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_customerInformation",
      "type": "fieldSection",
      "config": {
        "headline": {
          "text": {
            "en": "Customer Information",
            "de": "Kundeninformationen"
          },
          "pdfHide": false
        }
      },
      "fields": [
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "disabled": false,
            "required": false,
            "pdfHide": false,
            "pdfHideIfValueIsEmpty": false,
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "en": "Customer",
                "de": "Kunde"
              }
            },
            "useAsFilterForFields": [
              "asset",
              "contactPerson"
            ],
            "prefill": {
              "selectedCompany": [
                {
                  "input": "organizationId",
                  "steps": []
                },
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    "assetToCustomerAccountId"
                  ]
                }
              ]
            },
            "onChange": [
              {
                "target": {
                  "id": "customerAddress",
                  "propertyName": ""
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress"
                ]
              }
            ]
          }
        },
        {
          "id": "customerAddress",
          "type": "addressInput",
          "config": {
            "disabled": false,
            "pdfHide": false,
            "pdfHideIfValueIsEmpty": false,
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "en": "Customer address",
                "de": "Kundenanschrift"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "organizationId",
                  "steps": [
                    "accountIdToAccount",
                    "accountToBillingAddressAddress"
                  ]
                }
              ]
            },
            "onChange": [
              {
                "target": {
                  "id": "03_signatureCustomer",
                  "propertyName": "location"
                },
                "steps": [
                  "addressToCityString"
                ]
              }
            ]
          }
        },
        {
          "id": "contactPerson",
          "type": "userSingleSelect",
          "config": {
            "required": false,
            "disabled": false,
            "pdfHide": false,
            "pdfHideIfValueIsEmpty": false,
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "en": "Contact person",
                "de": "Ansprechpartner"
              }
            },
            "onChange": [
              {
                "target": {
                  "id": "03_signatureCustomer",
                  "propertyName": "name"
                },
                "steps": [
                  "userToFullNameString"
                ]
              },
              {
                "target": {
                  "id": "telephoneCustomer",
                  "propertyName": ""
                },
                "steps": [
                  "userInfoToUser",
                  "userToPhoneNumberString",
                  "phoneNumberStringToPhoneNumberObject"
                ]
              }
            ]
          }
        },
        {
          "id": "telephoneCustomer",
          "type": "phoneNumberInput",
          "config": {
            "disabled": false,
            "required": false,
            "pdfHide": false,
            "pdfHideIfValueIsEmpty": false,
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "en": "Telephone",
                "de": "Telefon Kunde"
              }
            },
            "value": {
              "validators": {
                "supportedNonNumericCharacters": "-/()"
              }
            },
            "prefill": {
              "value": []
            }
          }
        },
        {
          "id": "whitespace2",
          "type": "headlineDisplay",
          "config": {
            "text": {
              "en": "",
              "de": ""
            },
            "uiHide": true,
            "type": "H1",
            "pdfTextSize": 14,
            "pdfHide": false,
            "pdfWidth": 1
          }
        }
      ]
    },
    {
      "id": "02_workOrderInformation",
      "type": "fieldSection",
      "config": {
        "headline": {
          "text": {
            "en": "Assignment for remote maintenance",
            "de": "Beauftragung zur Fernwartung"
          },
          "pdfHide": false
        }
      },
      "fields": [
        {
          "id": "description",
          "type": "multiLineTextInput",
          "config": {
            "required": false,
            "disabled": false,
            "pdfHide": false,
            "pdfHideIfValueIsEmpty": false,
            "pdfWidth": 1,
            "label": {
              "text": {
                "en": "Short description why remote maintenance is necessary",
                "de": "Kurze Beschreibung, warum Fernwartung notwendig ist"
              }
            }
          }
        },
        {
          "id": "uniqueId",
          "type": "headlineDisplay",
          "config": {
            "text": {
              "de": "",
              "en": ""
            },
            "pdfTextSize": 14
          }
        },
        {
          "id": "Html1",
          "type": "htmlDisplay",
          "config": {
            "pdfWidth": 0.65,
            "text": {
              "de": "Hiermit wird bestätigt, dass folgende Maschine zur Fernwartung bereit ist:",
              "en": "This is to confirm that the following machine is ready for remote maintenance:"
            }
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlage",
                "en": "Asset"
              },
              "pdfHide": true
            },
            "pdfWidth": 0.35,
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            }
          }
        },
        {
          "id": "Boolean1.1",
          "type": "booleanInput",
          "config": {
            "prefill": {
            "value": [{
              "input": "none",
              "steps": [["staticBoolean", true]]
            }]
          },
            "label": {
              "text": {
                "de": "Anlage steht, Netzspannung EIN",
                "en": "Plant is at standstill, mains voltage ON"
              }
            }
          }
        },
        {
          "id": "Boolean1.2",
          "type": "booleanInput",
          "config": {
            "prefill": {
            "value": [{
              "input": "none",
              "steps": [["staticBoolean", true]]
            }]
          },
            "label": {
              "text": {
                "de": "keine Person im Gefahrenbereich der Maschine",
                "en": "No person in the danger zone of the machine"
              }
            }
          }
        },
        {
          "id": "Boolean1.3",
          "type": "booleanInput",
          "config": {
            "prefill": {
            "value": [{
              "input": "none",
              "steps": [["staticBoolean", true]]
            }]
          },
            "label": {
              "text": {
                "de": "sämtliche Schutzvorrichtungen vorhanden und geschlossen",
                "en": "all protective devices present and closed"
              }
            }
          }
        },
        {
          "id": "Html2",
          "type": "htmlDisplay",
          "config": {"pdfWidth": 1,
            "text": {
              "de": "und nach Abschluss der Fernwartung eine Überprüfung der Funktionsfähigkeit stattfindet und diese innerhalb 2h bestätigt wird.",
              "en": "and after completion of the remote maintenance, a check of the functionality takes place and this is confirmed within 2h."
            }
          }
        }
      ]
    },
    {
      "id": "03_signatureCustomer",
      "type": "signatureSection",
      "config": {
        "required": false,
        "headlineText": {
          "en": "Confirmed by",
          "de": "Bestätigt durch"
        },
        "pdfHide": false,
        "pdfHideIfValueIsEmpty": false,
        "hidePreviewPdfButton": false,
        "hideDownloadPdfButton": false,
        "fields": {
          "dateInput": {
            "disable": false,
            "required": false,
            "pdfHide": false,
            "autofill": "onlyEmpty",
            "onChange": []
          },
          "locationSingleLineTextInput": {
            "disable": false,
            "required": false,
            "pdfHide": false,
            "onChange": []
          },
          "nameSingleLineTextInput": {
            "disable": false,
            "required": false,
            "pdfHide": false,
            "capitalizeFirstLetterOfEveryWord": false,
            "onChange": []
          }
        },
        "prefill": {
          "location": [
            {
              "input": "workOrderId",
              "steps": [
                "workOrderIdToWorkOrder",
                "workOrderToLocationAddress",
                "addressToCityString"
              ]
            },
            {
              "input": "assetId",
              "steps": [
                "assetIdToAsset",
                "assetToLocationAddress",
                "addressToCityString"
              ]
            },
            {
              "input": "organizationId",
              "steps": [
                "accountIdToAccount",
                "accountToBillingAddressAddress",
                "addressToCityString"
              ]
            }
          ]
        }
      }
    },
