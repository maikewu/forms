        },
        {
          "id": "workorder_location",
          "type": "addressInput",
          "config": {
            "required": {
              "company": false,
              "supplement": false,
              "street": true,
              "streetNumber": false,
              "city": true,
              "zipPostCode": true,
              "state": false,
              "country": true
            },
            "label": {
              "text": {
                "de": "Auftragsadresse",
                "en": "Work order location"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "workOrderId",
                  "steps": [
                    "workOrderIdToWorkOrder",
                    "workOrderToLocationAddress"
                  ]
                },
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    "assetToLocationAddress"
                  ]
                },
                {
                  "input": "organizationId",
                  "steps": [
                    "accountIdToAccount",
                    "accountToBillingAddressAddress"
                  ]
                }
              ]
            },
            "onChange": [
              {
                "target": {
                  "id": "05_signature_technician",
                  "propertyName": "location"
                },
                "steps": [
                  "addressToCityString"
