            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Anlagen Nr.",
                "en": "Asset No."
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    [
                      "assetToCustomPropertyValue",
                      9
                    ],
                    "customPropertyValueToString"
                  ]
