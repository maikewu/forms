{
  "$schema": "https://pastebin.com/raw/eysKfZ7M",

  "general": {
    "singleInstanceForm": false,
    "timezone": "Europe/Berlin"
  },
  "sections":[
    {
      "id": "01_generalInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Eigentümer",
                "en": "Owner"
              }
            },
            "required": true,
            "pdfWidth": 0.5,
            "useAsFilterForFields": ["asset"],
            "prefill": {
              "selectedCompany": [
                {
                  "input": "organizationId",
                  "steps": []
                }
              ]
            },
            "onChange": [
              {
                "target": {"id": "signaturePruefer_1", "propertyName": "location"},
                "steps": ["accountInfoToAccount", "accountToBillingAddressAddress", "addressToCityString"]
              },
              {
                "target": {"id": "signaturePruefer_2", "propertyName": "location"},
                "steps": ["accountInfoToAccount", "accountToBillingAddressAddress", "addressToCityString"]
              },
              {
                "target": {"id": "customer2"},
                "steps": []
              }
            ]
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kran",
                "en": "Crane"
              }
            },
            "required": true,
            "pdfWidth": 0.5,
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            },
            "onChange": [
              {
                "target": {"id": "customer"},
                "steps": ["assetInfoToCustomerId"]
              },
              {
                "target": {"id": "location"},
                "steps": ["assetInfoToAsset",["assetToCustomPropertyValue",1]]
              }
            ]
          }
        },
        {
          "id": "kranNr",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Kran (manuelle Eingabe)",
                "en": "Crane (manual entry)"
              }
            },
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true
          }
        },
        {
          "id": "location",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Einsatzstelle",
                "en": "Location"
              }
            },
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true
          }
        },
        {
          "id": "baugroesse",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Baugröße DH",
                "en": "Size DH"
              }
            },
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true
          }
        },
        {
          "id": "seiltrommelbremse",
          "type": "staticMultiSelect",
          "config": {
            "label": {
              "text": {
                "de": "Seiltrommelbremse",
                "en": "Cable drum brake"
              }
            },
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true,
            "value": {
              "options": {
                "1": {
                  "de": "Fangbremse",
                  "en": "Catching break"
                },
                "2": {
                  "de": "Haltebremse",
                  "en": "Holding break"
                }
              }
            }
          }
        },
        {
          "id": "fabriknummer",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Fabriknummer",
                "en": "Factory No."
              }
            },
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true
          }
        },
        {
          "id": "haupthubmotor",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Haupthubmotor",
                "en": "Main hoist engine"
              }
            },
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true
          }
        },
        {
          "id": "hubgeschwindigkeit",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Hubgeschwindigkeit V2/1 [m/min]",
                "en": "Hoisting speed V2/1 [m/min]"
              }
            },
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true
          }
        },
        {
          "id": "getriebeuebersetzung",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Getriebeübersetzung",
                "en": "Gearbox ratio"
              }
            },
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true
          }
        },
        {
          "id": "helptext",
          "type": "htmlDisplay",
          "config": {
            "text": {
              "de": "<p style='font-size:9pt'>Prüfprotokoll im Prüfbuch DH - Hubwerk bzw. Kranprüfbuch ablegen.</p>",
              "en": "<p style='font-size:9pt'>File the test report in the DH hoist test logbook or crane test logbook.</p>"
            },
            "pdfWidth": 1
          }
        }
      ]
    },
    {
      "id": "02_bremskraft",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "en": "Braking Force - Slipping Force",
          "de": "Bremskraft - Rutschkraft"
        }
      },
      "fields": [
        {
          "id": "rutschkraft_eingesellt",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Eingestellt [kN]",
                "en": "Setting [kN]"
              }
            },
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true
          }
        },
        {
          "id": "rutschkraft_vorgabe",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Vorgabe [kN]",
                "en": "Target [kN]"
              }
            },
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true
          }
        }
      ]
    },
    {
      "id": "signaturePruefer_1",
      "type": "signatureSection",
      "config": {
        "required": true,
        "headlineText": {
          "de": "Unterschrift Prüfer",
          "en": "Signature Examiner"
        },
        "pdfHide": false,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "pdfHideIfValueIsEmpty": false,
        "fields": {
          "dateInput": {
            "disable": false,
            "required": true,
            "pdfHide": false
          },
          "locationSingleLineTextInput": {
            "disable": false,
            "required": false,
            "pdfHide": false
          },
          "nameSingleLineTextInput": {
            "capitalizeFirstLetterOfEveryWord": true,
            "disable": false,
            "required": true,
            "pdfHide": true
          }
        },
        "prefill": {
          "name": [
            {
              "input": "assignedUserId",
              "steps": ["userIdToUser", "userToFullNameString"]
            }
          ],
          "location": [
            {
              "input": "workOrderId",
              "steps": ["workOrderIdToWorkOrder", "workOrderToLocationAddress", "addressToCityString"]
            },
            {
              "input": "assetId",
              "steps": ["assetIdToAsset", "assetToLocationAddress", "addressToCityString"]
            }
          ]
        }
      }
    },
    {
      "id": "03_bremskraft",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "en": "Braking Force - Tightening torque of the connecting screws",
          "de": "Bremskraft - Anziehdrehmoment der Verbindungsschrauben"
        }
      },
      "fields": [
        {
          "id": "drehmoment_eingesellt",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Eingestellt [kN]",
                "en": "Setting [kN]"
              }
            },
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true
          }
        },
        {
          "id": "drehmoment_vorgabe",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Vorgabe [kN]",
                "en": "Target [kN]"
              }
            },
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true
          }
        }
      ]
    },
    {
      "id": "signaturePruefer_2",
      "type": "signatureSection",
      "config": {
        "required": true,
        "headlineText": {
          "de": "Unterschrift Prüfer",
          "en": "Signature Examiner"
        },
        "pdfHide": false,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "pdfHideIfValueIsEmpty": false,
        "fields": {
          "dateInput": {
            "disable": false,
            "required": true,
            "pdfHide": false
          },
          "locationSingleLineTextInput": {
            "disable": false,
            "required": false,
            "pdfHide": false
          },
          "nameSingleLineTextInput": {
            "capitalizeFirstLetterOfEveryWord": true,
            "disable": false,
            "required": true,
            "pdfHide": true
          }
        },
        "prefill": {
          "name": [
            {
              "input": "assignedUserId",
              "steps": ["userIdToUser", "userToFullNameString"]
            }
          ],
          "location": [
            {
              "input": "workOrderId",
              "steps": ["workOrderIdToWorkOrder", "workOrderToLocationAddress", "addressToCityString"]
            },
            {
              "input": "assetId",
              "steps": ["assetIdToAsset", "assetToLocationAddress", "addressToCityString"]
            }
          ]
        }
      }
    },
    {
      "id": "customer_order_info",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": " ",
          "en": " "
        }
      },
      "fields": [
        {
          "id": "customer2",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Eigentümer",
                "en": "Owner"
              }
            },
            "required": false,
            "pdfWidth": 0.5,
            "prefill": {
              "selectedCompany": [
                {
                  "input": "organizationId",
                  "steps": []
                }
              ]
            }
          }
        }  
      ]
    },
    {
      "id": "send",
      "type": "emailSection",
      "config": {
        "headlineText": {
          "de": "Bericht als E-Mail senden/gesendet",
          "en": "Send/sent form as e-mail"
        },
        "pdfHide": true,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "emailDialogPrefill": {
          "subject": {
            "static": "Checkliste Fangbremse"
          },
          "body": {
            "static": "Diese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail.\n\nSehr geehrte Damen und Herren,\n\nIm Anhang finden Sie die abgeschlossene Checkliste als PDF.\n\nMit freundlichen Grüßen,"
          }
        }
      }
    }
  ]
}
