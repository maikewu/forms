{
  "general": {
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "02-customerInfo",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Kundeninformationen",
          "en": "Customer Information"
        }
      },
      "fields": [
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "pdfHideIfValueIsEmpty": true,
            "pdfWidth": 0.5,
            "required": true,
            "useAsFilterForFields": [
              "asset",
              "customerContactPerson"
            ],
            "onChange": [
              {
                "target": {
                  "id": "customerLocation"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress"
                ]
              }
            ],
            "prefill": {
              "selectedCompany": [
                {
                  "input": "organizationId",
                  "steps": []
                },
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    "assetToCustomerAccountId"
                  ]
                }
              ]
            }
          }
        },
        {
          "id": "customerContactPerson",
          "type": "userSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Ansprechpartner (Kunde)",
                "en": "Contact Person (Customer)"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "customerLocation",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Kundenadresse",
                "en": "Shipping Address"
              }
            },
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true,
            "onChange": [
              {
                "target": {
                  "id": "08-signatureTechnician",
                  "propertyName": "location"
                },
                "steps": [
                  "addressToCityString"
                ]
              },
              {
                "target": {
                  "id": "09-signatureCustomer",
                  "propertyName": "location"
                },
                "steps": [
                  "addressToCityString"
                ]
              }
            ]
          }
        },
        {
          "id": "sameDeliveryAddress",
          "type": "booleanInput",
          "config": {
            "label": {
              "text": {
                "de": "Rechnungsadresse entspricht Kundenadresse",
                "en": "Billing address same as shipping address"
              }
            }
          }
        },
        {
          "id": "billingAddress",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Rechnungsadresse",
                "en": "Billing Address"
              }
            },
            "pdfHideIfValueIsEmpty": true,
            "pdfWidth": 0.5
          }
        }
      ]
    },
    {
      "id": "01-generalInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "id": "orderNumber",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Reperaturauftrag-Nr:",
                "en": "Service Order Number"
              }
            },
            "pdfWidth": 0.5,
            "prefill": {
							"value": [
								{
									"input": "workOrderId",
									"steps": [
										"workOrderIdToWorkOrder",
										"workOrderToERPReferenceString"
									]
								}
							]
						}
          }
        },
        {
          "id": "technician",
          "type": "userSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Techniker",
                "en": "Technician"
              }
            },
            "pdfWidth": 0.5,
            "prefill": {
              "value": [
                {
                  "input": "assignedUserId",
                  "steps": []
                }
              ]
            }
          }
        }
      ]
    },
    {
      "id": "02-assetInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Anlageninformationen",
          "en": "Asset Information"
        }
      },
      "fields": [
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Maschine",
                "en": "Machine"
              }
            },
            "required": true,
            "pdfWidth": 0.5,
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            },
            "onChange": [
              {
                "target": {
                  "id": "customer"
                },
                "steps": [
                  "assetInfoToCustomerId",
                  "accountIdToAccount",
                  "accountToAccountInfo"
                ]
              }
            ]
          }
        },
        {
          "id": "operatingHours",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Betriebsstunden",
                "en": "Operating Hours"
              }
            }
          }
        },
        {
          "id": "Station",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Station",
                "en": "Station"
              }
            }
          }
        },
        {
          "id": "SN",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "S/N",
                "en": "serialnumber"
              }
            }
          }
        },
        {
          "id": "location",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Standort des Gerätes",
                "en": "Location of the machine"
              }
            }
          }
        }
      ]
    },
    {
      "id": "tobeperformedtasks",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Auszuführende Reperaturarbeiten",
          "en": "Performed Tasks"
        }
      },
      "fields": [
        {
          "id": "tasks",
          "type": "taskListInput",
          "config": {
            "label": {
              "text": {
                "de": "Durchgeführte Arbeiten",
                "en": "Repair to be performed"
              }
            },
            "fields": {
              "checkboxBooleanInput": {
                "checkedByDefault": false,
                "pdfHide": false
              },
              "titleSingleLineTextInput": {
                "required": false,
                "pdfHide": false
              },
              "commentMultiLineTextInput": {
                "disabled": false,
                "required": false,
                "pdfHide": false
              },
              "highPrioBooleanInput": {
                "disabled": false,
                "pdfHide": false
              },
              "notNecessaryBooleanInput": {
                "disabled": false,
                "pdfHide": false
              }
            },
            "prefill": {
              "entries": [
                {
                  "input": "workOrderId",
                  "steps": [
                    "workOrderIdToWorkOrder",
                    "workOrderToTasks"
                  ]
                }
              ]
            }
          }
        }
      ]
    },
    {
      "id": "05_spare_parts",
