      "type": "signatureSection",
      "config": {
        "headlineText": {
          "de": "Unterschrift Techniker",
          "en": "Signature Technician"
        },
        "required": true,
        "fields": {
          "dateInput": {
            "disable": false,
            "pdfHide": false,
