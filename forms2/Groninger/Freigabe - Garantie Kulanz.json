{
  "$schema": "https://pastebin.com/raw/eysKfZ7M",
  "general": {
    "singleInstanceForm": false,
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "00-ab2500verkaufswert",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": " ",
          "en": " "
        }
      },
      "fields": [
        {
          "id": "helptext",
          "type": "htmlDisplay",
          "config": {
            "pdfWidth": 1,
            "pdfHide": true,
            "text": {
              "de": "Auszufüllen vom zuständigen Vertriebssachbearbeiter ab einem Wert von 2.500,00 € (Verkaufswert)",
              "en": "If the value reaches at least EUR 2,500,- (sales value), then the following has to be filled out by the responsible sales administrator."
            }
          }
        }
      ]
    },
    {
      "id": "01-customerInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Kundeninformationen",
          "en": "Customer Information"
        }
      },
      "fields": [
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "pdfWidth": 1,
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "prefill": {
              "selectedCompany": [
                {
                  "input": "organizationId",
                  "steps": []
                },
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    "assetToCustomerAccountId"
                  ]
                }
              ]
            },
            "onChange": [
              {
                "target": {
                  "id": "customerLocation"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress"
                ]
              }
            ]
          }
        },
        {
          "id": "customerLocation",
          "type": "addressInput",
          "config": {
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Adresse",
                "en": "Address"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "organizationId",
                  "steps": [
                    "accountIdToAccount",
                    "accountToBillingAddressAddress"
                  ]
                },
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    "assetToCustomerAccountId",
                    "accountIdToAccount",
                    "accountToBillingAddressAddress"
                  ]
                }
              ]
            }
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "pdfWidth": 1,
            "label": {
              "text": {
                "de": "Maschinennummer",
                "en": "Asset Number"
              }
            }
          }
        },
        {
          "id": "baujahr",
          "type": "singleLineTextInput",
          "config": {
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Baujahr",
                "en": "Construction Year"
              }
            }
          }
        }
      ]
    },
    {
      "id": "02_workOrderInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "en": "Work Order Information",
          "de": "Auftragsinformationen"
        }
      },
      "fields": [
        {
          "id": "workOrderType",
          "type": "staticSingleSelect",
          "config": {
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Auftragsart",
                "en": "Work Order Type"
              }
            },
            "value": {
              "options": {
                "1": {
                  "de": "GPC",
                  "en": "GPC"
                },
                "2": {
                  "de": "GAC",
                  "en": "GAC"
                },
                "3": {
                  "de": "KUC",
                  "en": "KUC"
                }
              }
            }
          }
        },
        {
          "id": "invoiceStatus",
          "type": "staticSingleSelect",
          "config": {
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Rechnungsstatus",
                "en": "Invoice Status"
              }
            },
            "value": {
              "options": {
                "1": {
                  "de": "Rechnungsstornierung (ohne Folgerechnung)",
                  "en": "Canceled invoice (without following invoice)"
                },
                "2": {
                  "de": "Rechnungsgutschrift (Garantie / Kulanz)",
                  "en": "Invoice related credit note (warranty / goodwill)"
                },
                "3": {
                  "de": "Rechnungsgutschrift (Vertragsstrafe)",
                  "en": "Invoice related credit note (contractual penalty)"
                }
              }
            }
          }
        }
      ]
    }
  ]
}