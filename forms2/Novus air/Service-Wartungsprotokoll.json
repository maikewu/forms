{
  "$schema": "https://pastebin.com/raw/eysKfZ7M",
  "general": {
    
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_generalInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Auftraggeber",
                "en": "Customer"
              }
            },
            "required": true,
            "pdfWidth": 0.5,
            "useAsFilterForFields": ["asset"],
            "onChange": [
              {
                "target": {
                  "id": "assetAddress",
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress"
                ]
              }
            ],
            "prefill": {
              "selectedCompany": [
                {
                  "input": "currentAccountId",
                  "steps": []
                }
              ]
            }
          }
        },
        {
          "id": "plannedDate",
          "type": "dateTimeInput",
          "config": {
            "label": {
              "text": {
                "de": "Geplanter Termin",
                "en": "Planned Date"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "assetAddress",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Anschrift/Standort",
                "en": "Address/Location"
              }
            },
            "pdfWidth": 0.5,

          }
        }
      ]
    }
  ]
}