          "id": "companySingleSelect_1",
          "type": "companySingleSelect",
          "config": {
            "required": false,
            "pdfHideIfValueIsEmpty": true,
            "pdfWidth": 1,
            "label": {
              "text": {
                "en": "Customer",
                "de": "Kunde"
              }
            },
            "onChange": [
              {
                "target": {
                  "id": "clientAddress"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress"
                ]
              }
            ],
            "prefill": {
              "selectedCompany": [
                {
                  "input": "organizationId",
                  "steps": []
                }
              ]
            }
          }
        },
        {
          "id": "clientAddress",
          "type": "addressInput",
          "config": {
            "required": {
              "street": false,
              "streetNumber": false,
              "company": false,
              "supplement": false,
              "zipPostCode": false,
              "city": false,
              "state": false,
              "country": false
            },
            "pdfHideIfValueIsEmpty": true,
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Auftraggeber",
                "en": "Client"
              }
            },
            "value": {
              "pdfStartInNewLine": true,
              "pdfAddLineBreaks": true
            }
          }
        },
        {
          "id": "addressInput_1",
          "type": "addressInput",
          "config": {
            "required": {
              "street": false,
              "streetNumber": false,
              "company": false,
              "supplement": false,
              "zipPostCode": false,
              "city": false,
              "state": false,
              "country": false
            },
            "pdfHideIfValueIsEmpty": true,
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Kundenadresse",
                "en": "Customer address"
              }
            },
            "value": {
              "pdfStartInNewLine": true,
              "pdfAddLineBreaks": true
            },
            "prefill": {
              "value": [
                {
                  "input": "organizationId",
                  "steps": [
                    "accountIdToAccount",
                    "accountToBillingAddressAddress"
                  ]
                }
              ]
            }
          }
        },
        {
          "id": "userselect_1",
          "type": "userSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "KBR Servcietechniker",
                "en": "KBR service technician"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "currentUserId",
                  "steps": []
                }
              ]
            },
            "onChange": [
              {
                "target": {
                  "id": "signatureTechnician",
                  "propertyName": "name"
                },
                "steps": [
                  "userToFullNameString"
                ]
              }
            ]
          }
        },
      ]
    }
  ]
}