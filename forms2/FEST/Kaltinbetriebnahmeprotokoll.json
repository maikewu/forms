        {
          "id": "startCommissioning",
          "type": "dateTimeInput",
          "config": {
            "label": {
              "text": {
                "de": "Beginn Kaltinbetriebnahme",
                "en": "Start Cold Commissioning"
              }
            },
            "required": true,
            "pdfWidth": 0.5
