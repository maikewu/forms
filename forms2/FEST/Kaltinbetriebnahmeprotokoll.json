{
  "$schema": "https://pastebin.com/raw/eysKfZ7M",
  "general": {
    "singleInstanceForm": false,
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_generalInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "required": true,
            "pdfWidth": 0.5,
            "onChange": [
              {
                "target": {
                  "id": "customerLocation"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress"
                ]
              }
            ],
            "prefill": {
              "selectedCompany": [
                {
                  "input": "currentAccountId",
                  "steps": []
                }
              ]
            }
          }
        },
        {
          "id": "customerAddress",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Kundenadresse",
                "en": "Customer Address"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlage",
                "en": "Asset"
              }
            },
            "required": true,
            "pdfWidth": 1
          }
        }
      ]
    },
    {
      "id": "02_commissioningInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Informationen Kaltinbetriebnahme",
