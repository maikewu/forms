        {
          "id": "completionCommissioning",
          "type": "dateTimeInput",
          "config": {
            "label": {
              "text": {
                "de": "Fertigstellung",
                "en": "Completion"
              }
            },
            "required": true,
            "pdfWidth": 0.5
          }
