        "headlineText": {
          "de": "Abnahme",
          "en": "Acceptance"
        }
      },
      "fields": [
        {
          "id": "refusedAcceptance",
          "type": "booleanInput",
          "config": {
            "pdfHideIfValueIsEmpty": true,
            "label": {
              "text": {
                "de": "Die Abnahme der Leistung wird wegen der vorgenannten Mängel verweigert.",
                "en": "The acceptance of the service is refused due to the above mentioned defects."
