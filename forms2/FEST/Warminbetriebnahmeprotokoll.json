          }
        },
        {
          "id": "acceptance",
          "type": "booleanInput",
          "config": {
            "pdfHideIfValueIsEmpty": true,
            "label": {
              "text": {
                "de": "Die Leistung wird abgenommen.",
                "en": "The service is accepted."
              }
            }
          }
        }
