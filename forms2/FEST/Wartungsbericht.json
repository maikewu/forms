        {
          "id": "headlineGeneralInformation",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"Allgemeine Informationen",
              "en":"General Information"
            },
            "pdfWidth": 1,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "required": true,
            "pdfWidth": 0.5,
            "useAsFilterForFields": ["asset"],
