        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "required": true,
            "pdfWidth": 0.5,
            "useAsFilterForFields": [
              "asset"
            ],
            "onChange": [
              {
                "target": {
                  "id": "customerAddress"
