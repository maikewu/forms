            "label": {
              "text": {
                "de": "Kundenadresse",
                "en": "Customer Address"
              }
            },
            "pdfWidth": 0.5,
            "prefill": {
              "value": [
                {
                  "input": "workOrderId",
                  "steps": [
                    "workOrderIdToWorkOrder",
                    "workOrderToLocationAddress"
                  ]
                },
                {
                  "input": "assetId",
                  "steps": ["assetIdToAsset","assetToLocationAddress"]
                }
              ]
            }
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlage",
                "en": "Asset"
              }
            },
