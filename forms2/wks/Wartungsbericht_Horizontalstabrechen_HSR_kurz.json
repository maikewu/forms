{
  "general": {
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_generalInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "id": "headlineGeneralInformation",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"Allgemeine Informationen",
              "en":"General Information"
            },
            "pdfWidth": 1,
            "pdfTextSize": "H3" 
          }
        },
        {
          "id": "maintenanceDate",
          "type": "dateInput",
          "config": {
            "label": {
              "text": {
                "de": "Wartung - Datum der Ausführung",
                "en": "Maintenance - Date Of Procedure"
              }
            },
            "pdfWidth": 1,
            "prefill": {
              "value": [
                {
                  "input": "creationDateTime",
                  "steps": ["dateTimeToDate"]
                }
              ]
            }
          }
        },
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Stadt / Gemeinde",
                "en": "City / Municipality"
              }
            },
            "required": true,
            "pdfWidth": 0.5,
            "useAsFilterForFields": ["asset"],
            "prefill": {
              "selectedCompany": [
                  {
                      "input": "organizationId",
                      "steps": []
                  }
              ]
           }
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlagenbezeichnung",
                "en": "Asset"
              }
            },
            "pdfWidth": 0.5,
            "required": true,
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            },
            "onChange": [
              {
              "steps": [ "assetInfoToAsset", "assetToLocationAddress"],
               "target": { "id": "assetAddress" }
              }
            ]
          }
        },
        {
          "id": "assetAddress",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Adresse",
                "en": "Address"
              }
            },
            "pdfWidth": 0.5,
            "prefill": {
              "value": [
                {
                  "input": "workOrderId",
                  "steps": [
                    "workOrderIdToWorkOrder",
                    "workOrderToLocationAddress"
                  ]
                }
              ]
            },
            "onChange": [
              {
                "target": {
                  "id": "04_signatureTechnician",
                  "propertyName": "location"
                },
                "steps": [
                  "addressToCityString"
                ]
              }
            ]
          }
        },
        {
          "id": "department",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Abteilung",
                "en": "Department"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "contactPerson",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Ansprechperson",
                "en": "Contact Person"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "telephoneCustomer",
          "type": "phoneNumberInput",
          "config": {
            "label": {
              "text": {
                "de": "Telefon",
                "en": "Telephone Number"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "faxCustomer",
          "type": "phoneNumberInput",
          "config": {
            "label": {
              "text": {
                "de": "Fax",
                "en": "Fax"
              }
            },
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true
          }
        }
      ]
    },
