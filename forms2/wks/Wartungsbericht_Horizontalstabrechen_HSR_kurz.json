    {
      "id": "03_additionalService",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Zusätzlicher Serviceaufwand",
          "en": "Additional Service Work"
        }
      },
      "fields": [
        {
          "id": "whiteSpace4",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"",
              "en":""
            },
            "pdfWidth": 1,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "line2",
          "type": "htmlDisplay",
          "config": {
            "text": {
              "de": "<hr>",
