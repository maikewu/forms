{
  "general": {
    "$schema": "https://app.remberg.de/api/forms/v2/documentation/form-template-config-schema.json",
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_generalInformation",
      "type": "fieldSection",
      "config": {
        "headline": {
          "text": {
            "de": "Allgemeine Informationen",
            "en": "General Information"
          },
          "pdfHide": true
        }
      },
      "fields": [
        {
          "id": "pdfHeadline1",
          "type": "headlineDisplay",
          "config": {
            "text": {
              "de": "Allgemeine Informationen",
              "en": "General Information"
            },
            "pdfTextSize": "H3",
            "uiHide": true
          }
        },
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlagenstandort/Kunde",
                "en": "Asset Location/Customer"
              }
            },
            "required": true,
            "pdfWidth": 0.5,
            "useAsFilterForFields": [
              "asset"
            ],
            "prefill": {
              "selectedCompany": [
                {
                  "input": "organizationId",
                  "steps": []
                }
              ]
            }
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlage",
                "en": "Asset"
              },
              "pdfHide": true
            },
            "required": true,
            "pdfWidth": 0.5,
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            },
            "onChange": [
              {
                "target": {
                  "id": "assetAddress"
                },
                "steps": [
                  "assetInfoToAsset",
                  "assetToLocationAddress"
                ]
              }
            ]
          }
        },
        {
          "id": "contactPerson",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Ansprechperson",
                "en": "Contact Person"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "assetAddress",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Anschrift",
                "en": "Address"
              }
            },
            "pdfWidth": 0.5,
            "prefill": {
              "value": [
                {
                  "input": "workOrderId",
                  "steps": [
                    "workOrderIdToWorkOrder",
                    "workOrderToLocationAddress"
                  ]
                }
              ]
            },
            "onChange": [
              {
                "target": {
                  "id": "06_signatureTechnician",
                  "propertyName": "location"
                },
                "steps": [
                  "addressToCityString"
                ]
              }
            ]
          }
        },
        {
          "id": "telephoneCustomer",
          "type": "phoneNumberInput",
          "config": {
            "label": {
              "text": {
                "de": "Telefon / Telefax / Funk",
                "en": "Telephone / Fax"
              }
            },
            "pdfWidth": 0.5
          }
        }
      ]
    },
    {
      "id": "02_hoists",
      "type": "fieldSection",
      "config": {
        "headline": {
          "text": {
            "de": "1. Hebezeuge",
            "en": "1. Hoists"
          },
          "pdfHide": true
        }
      },
      "fields": [
        {
          "id": "whiteSpace6",
          "type": "headlineDisplay",
          "config": {
            "uiHide": true,
            "text": {
              "de": "",
              "en": ""
            },
            "pdfWidth": 1,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "line6",
          "type": "htmlDisplay",
          "config": {
