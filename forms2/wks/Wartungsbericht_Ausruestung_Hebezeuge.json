            },
            "pdfTextSize": "H3",
            "uiHide": true
          }
        },
        {
          "id": "conditionHoists",
          "type": "staticSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Zustand",
                "en": "Condition"
              }
            },
            "value": {
              "options": {
                "io": {
                  "de": "i.O.",
                  "en": "i.o."
                },
                "damaged": {
                  "de": "Beschädigung",
                  "en": "Damaged"
                }
              }
            }
          }
        },
        {
          "id": "maintenanceHoists",
          "type": "booleanInput",
          "config": {
            "label": {
              "text": {
                "de": "Wartung der Hebezeuge gemäß der DGUVUKV; Prüfung der Seile und Ketten Vorschrift 54, 52",
                "en": "Maintenance of hoists according to DGUVUKV; inspection of ropes and chains regulation 54, 52"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "inspectionBook",
          "type": "booleanInput",
          "config": {
            "label": {
              "text": {
                "de": "Eintrag in das Prüfbuch auf der Kläranlage",
                "en": "Entry in the inspection book at the wastewater treatment plant"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "interval6",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Intervall",
                "en": "Interval"
              }
            },
            "pdfWidth": 1
          }
        }
      ]
    },
    {
      "id": "03_furtherComments",
      "type": "fieldSection",
      "config": {
