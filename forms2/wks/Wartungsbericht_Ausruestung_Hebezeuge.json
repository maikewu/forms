              "en": "<hr>"
            },
            "uiHide": true
          }
        },
        {
          "id": "pdfHeadline9",
          "type": "headlineDisplay",
          "config": {
            "text": {
              "de": "3. Benötigte Ersatzteile",
              "en": "3. Required spare parts"
            },
            "pdfTextSize": "H3",
            "uiHide": true
          }
        },
        {
          "id": "spareParts",
          "type": "partListInput",
          "config": {
            "label": {
              "text": {
                "de": "Ersatzteile",
                "en": "Spare parts"
              }
            },
            "fields": {
              "partNumberSingleLineTextInput": {
                "required": true,
                "pdfHide": false,
                "placeHolderText": {
                  "de": "Bezeichnung",
                  "en": "Name"
                }
              },
              "quantityNumericInput": {
                "required": true,
                "pdfHide": false
              },
              "descriptionMultiLineTextInput": {
                "enable": true,
                "required": false,
                "pdfHide": false,
                "placeHolderText": {
                  "de": "Beschreibung/Bemerkung",
                  "en": "Description/Comment"
                }
              }
            }
          }
        }
      ]
    },
    {
      "id": "05_otherAgreements",
      "type": "fieldSection",
      "config": {
        "headline": {
          "text": {
            "de": "4. Sonstige Vereinbarungen",
            "en": "4. Other Agreements"
