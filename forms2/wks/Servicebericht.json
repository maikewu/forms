{
  "$schema": "https://app.remberg.de/api/forms/v2/documentation/form-template-config-schema.json",
  "general": {
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_generalInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "id": "headlineGeneralInformation",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"Allgemeine Informationen",
              "en":"General Information"
            },
            "pdfWidth": 1,
            "pdfTextSize": "H3"
          }
        },
        {
          "id": "technician",
          "type": "userSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Monteur",
                "en": "Technician"
              }
            },
            "required": true,
            "prefill": {
              "value": [
                {
                  "input": "currentUserId",
                  "steps": []
                }
              ]
            }
          }
        },
        {
          "id": "companion",
          "type": "personListInput",
          "config": {
            "label": {
              "text": {
                "de": "Begleiter",
                "en": "Companion"
              }
            },
            "value": {
              "email": {
                "pdfHide": true,
                "hide": true,
                "required": false
              },
              "firstNameRequired": true,
              "lastNameRequired": true 
            }
          }
        },
        {
          "id": "projectNumber",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Projekt-Nr.",
                "en": "Project Number"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "project",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Projekt",
                "en": "Project"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kunde/AG",
                "en": "Customer/Client"
              }
            },
            "required": true,
            "pdfWidth": 0.5,
            "prefill": {
              "selectedCompany": [
                  {
                      "input": "organizationId",
                      "steps": []
                  }
              ]
          }
          }
        },
        {
          "id": "customerAddress",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Adresse",
                "en": "Adress"
              }
            },
            "pdfWidth": 0.5,
            "prefill": {
              "value": [
                {
                  "input": "workOrderId",
                  "steps": [
                    "workOrderIdToWorkOrder",
                    "workOrderToLocationAddress"
                  ]
                }
              ]
            }
          }
        }
      ]
    },
    {
      "id": "02_workTimes",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Arbeitszeiten",
          "en": "Work Times"
        }
      },
      "fields": [
        {
          "id": "whiteSpace1",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"",
              "en":""
            },
            "pdfWidth": 1,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "workTimes",
          "type": "fieldRepeater",
          "config": {
            "label": {
              "text": {
                "de": "Zeiten",
                "en": "Times"
              }
            },
            "fields": [
              {
                "id": "workTimeDate",
                "type": "dateInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "Datum",
                      "en": "Date"
                    }
                  },
                  "required": true
                }
              },
              {
                "id": "startTime",
                "type": "timeInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "Uhrzeit von",
                      "en": "Start Time"
                    }
                  },
                  "required": true
                }
              },
              {
                "id": "endTime",
                "type": "timeInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "Uhrzeit bis",
                      "en": "End Time"
                    }
                  },
                  "required": true
                }
              },
              {
                "id": "km",
                "type": "singleLineTextInput",
                "config": {
                 "label": {
                  "text": {
                    "de": "km",
                    "en": "km"
                  }
                 } 
                }
              },
              {
                "id": "workingHours",
                "type": "singleLineTextInput",
                "config": {
                 "label": {
                  "text": {
                    "de": "Arbeitsstunden",
                    "en": "Working Hours"
                  }
                 } 
                }
              },
              {
                "id": "waitingHours",
                "type": "singleLineTextInput",
                "config": {
                 "label": {
                  "text": {
                    "de": "Wartestunden",
                    "en": "Waiting Hours"
                  }
                 } 
                }
              },
              {
                "id": "totalHours",
                "type": "singleLineTextInput",
                "config": {
                 "label": {
                  "text": {
                    "de": "Gesamtstunden",
                    "en": "Total Hours"
                  }
                 } 
                }
              }
            ]
          }
        }
      ]
    },
    {
      "id": "03_tasks",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Ausgeführte Tätigkeiten",
          "en": "Completed Tasks"
        }
      },
      "fields": [
        {
          "id": "whiteSpace2",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"",
              "en":""
            },
            "pdfWidth": 1,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "completedTasks",
          "type": "taskListInput",
          "config": {
            "label": {
              "text": {
                "de": "Tätigkeiten",
                "en": "Tasks"
              }
            },
            "prefill": {
              "entries":
              [
                {
                  "input": "workOrderId",
                  "steps": [ "workOrderIdToWorkOrder", "workOrderToTasks" ]
                }
              ]
            },
            "fields": {
              "checkboxBooleanInput": {
                "checkedByDefault": true
              }
            }
          }
        }
      ]
    },
    {
      "id": "04_comments",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Bemerkungen",
          "en": "Comments"
        }
      },
      "fields": [
        {
          "id": "whiteSpace3",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"",
              "en":""
            },
            "pdfWidth": 1,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "comments",
          "type": "multiLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Kommentar",
                "en": "Comment"
              }
            }
          }
        }
      ]
    },
    {
      "id": "05_material",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Material",
          "en": "Material"
        }
      },
      "fields": [
        {
          "id": "whiteSpace4",
          "type": "headlineDisplay",
          "config":{
            "uiHide": true,
            "text":{
              "de":"",
              "en":""
            },
            "pdfWidth": 1,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "spareParts",
          "type": "partListInput",
          "config": {
            "label": {
              "text": {
                "de": "Material",
                "en": "Spare Parts"
              }
            },
            "fields": {
              "partNumberSingleLineTextInput": {
                  "required": false,
                  "pdfHide": false,
                  "placeHolderText": {
                      "de": "Bezeichnung/Beschreibung",
                      "en": "Name/Description"
                  }
              },
              "quantityNumericInput": {
                  "required": false,
                  "pdfHide": false
              },
              "descriptionMultiLineTextInput": {
                  "enable": true,
                  "required": false,
                  "pdfHide": false,
                  "placeHolderText": {
                      "de": "Bemerkungen",
                      "en": "Comments"
                  }
              },
              "deliverToStaticSingleSelect": {
                  "enable": false,
                  "required": false,
                  "pdfHide": true
              },
              "invoiceToStaticSingleSelect": {
                  "enable": false,
                  "required": false,
                  "pdfHide": true
              },
              "warrantyBooleanInput": {
                  "enable": true,
                  "pdfHide": false
              }
            }
          }
        }
      ]
    },
    {
      "id": "06_signatureTechnician",
      "type": "signatureSection",
      "config": {
        "headlineText": {
          "de": "Unterschrift Monteur",
          "en": "Signature Assembler"
        },
        "required": true,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "pdfHideIfValueIsEmpty": true,
        "pdfHide": false,
        "fields": {
          "dateInput": {
            "required": true,
            "pdfHide": false,
            "disable": false
          },
          "locationSingleLineTextInput": {
            "required": true,
            "pdfHide": false,
            "disable": false
          },
          "nameSingleLineTextInput": {
            "required": true,
            "pdfHide": false,
            "disable": false,
            "capitalizeFirstLetterOfEveryWord": true
          }
        },
        "prefill": {
          "name": [
            {
              "input": "currentUser",
              "steps": ["userToFullNameString"]
            }
          ],
          "date": [
            {
              "input": "creationDateTime",
              "steps": ["dateTimeToDate"]
            }
          ],
          "location": [
            {
              "input": "assetId",
              "steps": [
                "assetIdToAsset",
                "assetToLocationAddress",
                "addressToCityString"
              ]
            }
          ]
        }
      }
    },
    {
      "id": "07_signatureCustomer",
      "type": "signatureSection",
      "config": {
        "headlineText": {
          "de": "Unterschrift Kunde/AG",
          "en": "Signature Customer/Client"
        },
        "required": true,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "pdfHideIfValueIsEmpty": true,
        "pdfHide": false,
        "fields": {
          "dateInput": {
            "required": true,
            "pdfHide": false,
            "disable": false
          },
          "locationSingleLineTextInput": {
            "required": true,
            "pdfHide": false,
            "disable": false
          },
          "nameSingleLineTextInput": {
            "required": true,
            "pdfHide": false,
            "disable": false,
            "capitalizeFirstLetterOfEveryWord": true
          }
        },
        "prefill": {
          "date": [
            {
              "input": "creationDateTime",
              "steps": ["dateTimeToDate"]
            }
          ],
          "location": [
            {
              "input": "assetId",
              "steps": [
                "assetIdToAsset",
                "assetToLocationAddress",
                "addressToCityString"
              ]
            }
          ]
        }
      }
    },
    {
      "id": "08_send",
      "type": "emailSection",
      "config": {
        "headlineText": {
          "de": "Bericht als E-Mail senden/gesendet",
          "en": "Send/sent report as email"
        },
        "pdfHide": true,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "emailDialogPrefill": {
          "subject": {
            "static": "Servicebericht"
          },
          "body": {
            "static": "Diese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail.\n\nSehr geehrte Damen und Herren,\n\nim Anhang finden Sie den abgeschlossenen Servicebericht als PDF.\n\nMit freundlichen Grüßen"
          }
        }
      }
    }
  ]
}
