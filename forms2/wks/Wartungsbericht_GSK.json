{
  "$schema": "https://pastebin.com/raw/eysKfZ7M",
  "general": {
    "singleInstanceForm": false,
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_generalInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "id": "firstMaintenance",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "1. Wartung",
                "en": "1st Maintenance"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlagenbezeichnung",
                "en": "Asset"
              }
            },
            "pdfWidth": 0.5,
            "required": true
          }
        },
        {
          "id": "headlineCustomer",
          "type": "headlineDisplay",
          "config": {
            "pdfWidth": 1,
            "text": {
              "de": "Zust채ndig Auftraggeber / Kunde",
              "en": "Responsible Client / Customer"
            }
          }
        },
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Stadt / Gemeinde",
                "en": "City / Municipality"
              }
            },
            "required": true,
            "pdfWidth": 0.5,
            "useAsFilterForFields": ["asset"],
            "onChange": [
              {
                "target": {
                  "id": "customerAddress"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress"
                ]
              }
            ],
            "prefill": {
              "selectedCompany": [
                {
                  "input": "currentAccountId",
                  "steps": []
                }
              ]
            }
          }
        },
        {
          "id": "department",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Abteilung",
                "en": "Department"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "contactPerson",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Ansprechperson",
                "en": "Contact Person"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "telephoneCustomer",
          "type": "phoneNumberInput",
          "config": {
            "label": {
              "text": {
                "de": "Telefon",
                "en": "Telephone Number"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "faxCustomer",
          "type": "phoneNumberInput",
          "config": {
            "label": {
              "text": {
                "de": "Fax",
                "en": "Fax"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "headlineWKS",
          "type": "headlineDisplay",
          "config": {
            "pdfWidth": 1,
            "text": {
              "de": "Zust채ndig HST-WKS",
              "en": "Responsible HST-WKS"
            }
          }
        },
        {
          "id": "projectManager",
          "type": "userSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Prjektleiter",
                "en": "Project Manager"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "telephoneWKS",
          "type": "phoneNumberInput",
          "config": {
            "label": {
              "text": {
                "de": "Telefon",
                "en": "Telephone Number"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "faxWKS",
          "type": "phoneNumberInput",
          "config": {
            "label": {
              "text": {
                "de": "Fax",
                "en": "Fax"
              }
            },
            "pdfWidth": 0.5
          }
        }
      ]
    },
    {
      "id": "02_mechanicalComponents",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Mechanische Anlagenkomponenten",
          "en": "Mechanical Asset Components"
        }
      },
      "fields": [
        {
          "id": "flap",

        },
        {
          "id": "comments",
          "type": "richTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Bemerkungen",
                "en": "Comments"
              }
            },
            "placeHolderText": "Hier tippen..."
          }
        }
      ]
    },
    {
      "id": "03_additionalService",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Zus채tzlicher Serviceaufwand",
          "en": "Additional Service Work"
        }
      },
      "fields": [
        {
          "id": "completedTasks",
          "type": "fieldRepeater",
          "config": {
            "fields": [
              {
                "id": "taskDescription",
                "type": "singleLineTextInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "T채tigkeitsbeschreibung",
                      "en": "Task Description"
                    }
                  }
                }
              },
              {
                "id": "amount",
                "type": "singleLineTextInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "Menge",
                      "en": "Amount"
                    }
                  },
                  "value": {
                    "validators": {
                      "regex": {
                        "pattern": "^[0-9]*$"
                      }
                    }
                  }
                }
              }
            ]
          }
        }
      ]
    }
  ]
}