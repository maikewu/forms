{
  "general": {
    "$schema": "https://app.remberg.de/api/forms/v2/documentation/form-template-config-schema.json",
    "timezone": "Europe/Berlin"
  }, 
  "sections": [
    {
      "id": "01_generalInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "id": "pdfHeadline1",
          "type": "headlineDisplay",
          "config": {
            "text": {
              "de": "Allgemeine Informationen",
              "en": "General Information"
            },
            "pdfTextSize": "H3",
            "uiHide": true
          }
        },
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlagenstandort/Kunde",
                "en": "Asset Location/Customer"
              }
            },
            "required": true,
            "pdfWidth": 0.5,
            "useAsFilterForFields": ["asset"],
            "prefill": {
              "selectedCompany": [
                {
                  "input": "organizationId",
                  "steps": []
                }
              ]
            },
            "onChange": [
              {
                "target": {
                  "id": "customerLocation"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress"
                ]
              },
              {
                "target": {
                  "id": "10_signatureTechnician",
                  "propertyName": "location"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress",
                  "addressToCityString"
                ]
              }
            ]
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlage",
                "en": "Asset"
              }
            },
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            },
            "pdfWidth": 0.5,
            "required": true
          }
        },
        {
          "id": "contactPerson",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Ansprechperson",
                "en": "Contact Person"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "customerLocation",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Anschrift",
                "en": "Address"
              }
            },
            "pdfWidth": 0.5,
            "prefill": {
              "value": [
                {
                  "input": "workOrderId",
                  "steps": [
                    "workOrderIdToWorkOrder",
                    "workOrderToLocationAddress"
                  ]
                }
              ]
            }
          }
        },
        {
          "id": "telephoneCustomer",
          "type": "phoneNumberInput",
          "config": {
            "label": {
              "text": {
                "de": "Telefon / Telefax / Funk",
                "en": "Telephone / Fax"
              }
            },
            "pdfWidth": 0.5
          }
        }
      ]
    },
    {
      "id": "02_slider",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "1. Schieber / Klappen / Kugelhähne / Rohrleitungen",
          "en": "1. Slider / Lids / Ball Valves / Pipelines"
        }
      },
      "fields": [
        {
          "id": "conditionSlider",
          "type": "staticSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Zustand",
                "en": "Condition"
              }
            },
            "value": {
              "options": {
                "io":{
                  "de": "i.O.",
                  "en": "i.o."
                },
                "damaged":{
                  "de": "Beschädigung",
                  "en": "Damaged"
                }
              }
            }
          }
        },
        {
          "id": "checkFunctionalitySlider",
          "type": "booleanInput",
          "config": {
            "label": {
              "text": {
                "de": "Kontrolle Funktionstüchtigkeit",
                "en": "Check Functionality"
              }
            },
            
          }
        }
      ]
    },
    {
      "id": "04_furtherComments",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "7. Kommentar zu den Mängeln",
          "en": "7. Comments regardig the defects"
        }
      },
      "fields": [
        {
          "id": "whitespace4",
          "type": "headlineDisplay",
          "config": {
            "text": {
              "de": "",
              "en": ""
            },
            "uiHide": true,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "line4",
          "type": "htmlDisplay",
          "config": {
            "text": {
              "de": "<hr>",
              "en": "<hr>"
            },
            "uiHide": true
          }
        },
        {
          "id": "pdfHeadline18",
          "type": "headlineDisplay",
          "config": {
            "text": {
              "de": "7. Kommentar zu den Mängeln",
              "en": "7. Comments regardig the defects"
            },
            "pdfTextSize": "H3",
            "uiHide": true
          }
        },
        {
          "id": "furtherComments",
          "type": "multiLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Kommentare",
                "en": "Commments"
              }
            }
          }
        }
      ]
    },
    {
      "id": "08_spareParts",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "8. Benötigte Ersatzteile",
          "en": "8. Required spare parts"
        }
      },
      "fields": [
        {
          "id": "whitespace6",
          "type": "headlineDisplay",
          "config": {
            "text": {
              "de": "",
              "en": ""
            },
            "uiHide": true,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "pdfHeadline20",
          "type": "headlineDisplay",
          "config": {
            "text": {
              "de": "8. Benötigte Ersatzteile",
              "en": "8. Required spare parts"
            },
            "pdfTextSize": "H3",
            "uiHide": true
          }
        },
        {
          "id": "spareParts",
          "type": "partListInput",
          "config": {
            "label": {
              "text": {
                "de": "Ersatzteile",
                "en": "Spare parts"
              }
            },
            "fields": {
              "partNumberSingleLineTextInput": {
                "required": true,
                "pdfHide": false,
                "placeHolderText": {
                  "de": "Bezeichnung",
                  "en": "Name"
                }
              },
              "quantityNumericInput": {
                "required": true,
                "pdfHide": false
              },
              "descriptionMultiLineTextInput": {
                "enable": true,
                "required": false,
                "pdfHide": false,
                "placeHolderText": {
                  "de": "Beschreibung/Bemerkung",
                  "en": "Description/Comment"
                }
              }
            }
          }
        }
      ]
    },
    {
      "id": "09_otherAgreements",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "9. Sonstige Vereinbarungen",
          "en": "9. Other Agreements"
        }
      },
      "fields": [
        {
          "id": "whitespace7",
          "type": "headlineDisplay",
          "config": {
            "text": {
              "de": "",
              "en": ""
            },
            "uiHide": true,
            "pdfTextSize": "H2"
          }
        },
        {
          "id": "pdfHeadline21",
          "type": "headlineDisplay",
          "config": {
            "text": {
              "de": "7. Sonstige Vereinbarungen",
              "en": "7. Other Agreements"
            },
            "uiHide": true,
            "pdfTextSize": "H3"
          }
        },
        {
          "id": "nextInspection",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Nächster Inspektionstermin",
                "en": "Next Inspection"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "maintenanceAppointment",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Evtl. erforderlicher Wartungstermin",
                "en": "Possibly required maintenance date"
              }
            },
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true
          }
        }
      ]
    },
    {
      "id": "10_signatureTechnician",
      "type": "signatureSection",
      "config": {
        "headlineText": {
          "de": "Unterschrift Monteuer",
          "en": "Signature Technician"
        },
        "required": true,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "pdfHideIfValueIsEmpty": true,
        "pdfHide": false,
        "helpTextHtmlBelow": {
          "de": "Die Inspektion wurde fachgerecht durchgeführt.",
          "en": "Maintenance was professionally performed."
        },
        "fields": {
          "dateInput": {
            "required": true,
            "pdfHide": false,
            "disable": false
          },
          "locationSingleLineTextInput": {
            "required": true,
            "pdfHide": false,
            "disable": false
          },
          "nameSingleLineTextInput": {
            "required": true,
            "pdfHide": false,
            "disable": false,
            "capitalizeFirstLetterOfEveryWord": true
          }
        },
        "prefill": {
          "name": [
            {
              "input": "currentUser",
              "steps": [
                "userToFullNameString"
              ]
            }
          ],
          "date": [
            {
              "input": "creationDateTime",
              "steps": [
                "dateTimeToDate"
              ]
            }
          ],
          "location": [
            {
              "input": "assetId",
              "steps": [
                "assetIdToAsset",
                "assetToLocationAddress",
                "addressToCityString"
              ]
            }
          ]
        }
      }
    },
    {
      "id": "11_signatureCustomer",
      "type": "signatureSection",
      "config": {
        "headlineText": {
          "de": "Unterschrift Kunde",
          "en": "Signature Customer"
        },
        "required": true,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "pdfHideIfValueIsEmpty": true,
        "pdfHide": false,
        "helpTextHtmlBelow": {
          "de": "Die Inspektion wurde fachgerecht durchgeführt.",
          "en": "Maintenance was professionally performed."
        },
        "fields": {
          "dateInput": {
            "required": true,
            "pdfHide": false,
            "disable": false
          },
          "locationSingleLineTextInput": {
            "required": true,
            "pdfHide": false,
            "disable": false
          },
          "nameSingleLineTextInput": {
            "required": true,
            "pdfHide": false,
            "disable": false,
            "capitalizeFirstLetterOfEveryWord": true
          }
        },
        "prefill": {
          "date": [
            {
              "input": "creationDateTime",
              "steps": [
                "dateTimeToDate"
              ]
            }
          ],
          "location": [
            {
              "input": "assetId",
              "steps": [
                "assetIdToAsset",
                "assetToLocationAddress",
                "addressToCityString"
              ]
            }
          ]
        }
      }
    },
    {
      "id": "12_send",
      "type": "emailSection",
      "config": {
        "headlineText": {
          "de": "Bericht als E-Mail senden/gesendet",
          "en": "Send/sent report as email"
        },
        "pdfHide": true,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "emailDialogPrefill": {
          "subject": {
            "de": "Wartungsbericht Ausrüstungen",
            "en": "Maintenance Report Equipment"
          },
          "body": {
            "de": "Diese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail.\n\nSehr geehrte Damen und Herren,\n\nim Anhang finden Sie den abgeschlossenen Wartungsbericht als PDF.\n\nMit freundlichen Grüßen",
            "en": "This email was generated automatically.\nPlease do not reply to this email.\n\nDear Sir or Madam,\n\nIn the attachment you will find the completed maintenance report as PDF.\n\nBest regards"
          }
        }
      }
    }
  ]
}