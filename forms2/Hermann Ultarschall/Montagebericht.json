{
  "$schema": "https://pastebin.com/raw/19EgpgEK",
  "general": {
    "singleInstanceForm": false,
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
     "id": "GeneralInformation",
     "type": "fieldSection",
     "config": {
       "headlineText": {
         "de": "Allgemeine Informationen",
         "en": "General Information"
       }
     },
     "fields": [
      {
        "id": "customer",
        "type": "companySingleSelect",
        "config": {
          "useAsFilterForFields": [ "asset" ],
          "pdfHideIfValueIsEmpty": true,
          "pdfWidth": 1,
          "label": {
            "text": {
              "de": "Kunde",
              "en": "Customer"
            }
          },
          "prefill": {
            "selectedCompany": [
              {
                "input": "organizationId",
                "steps": []
              }
            ]
          },
          "onChange": [
            {
              "target": {
                "id": "customerAddress"
              },
              "steps": [
                "accountInfoToAccount",
                "accountToBillingAddressAddress"
              ]
            }
          ]
        }
      },
      {
        "id": "customerAddress",
        "type": "addressInput",
        "config": {
          "pdfHideIfValueIsEmpty": true,
          "pdfWidth": 0.5,
          "label": {
            "text": {
              "de": "Kundenadresse",
              "en": "Custommer Address"
            }
          },
          "prefill": {
            "value": [
              {
                "input": "currentAccountId",
                 "steps": [
                    "accountIdToAccount",
                     "accountToBillingAddressAddress"
                ]
              }
            ]
          }
        }
      },
      {
        "id": "workOrderAddress",
        "type": "addressInput",
        "config": {
          "pdfHideIfValueIsEmpty": true,
          "pdfWidth": 0.5,
          "label": {
            "text": {
              "de": "Auftragsadresse",
              "en": "Work Order Address"
            }
          },
          "prefill": {
            "value": [
              {
                "input": "workOrderId",
                 "steps": [
                    "workOrderIdToWorkOrder",
                     "workOrderToLocationAddress"
                ]
              }
            ]
          },
          "onChange": [
            {
              "target": {
                "id": "signatureCustomer",
                "propertyName": "address"
              },
              "steps": [
                "addressToCityString"
              ]
            },
            {
              "target": {
                "id": "signatureTechnician",
                "propertyName": "address"
              },
              "steps": [
                "addressToCityString"
              ]
            }
          ]
        }
      },
      {
        "id": "workOrderNumber",
        "type": "singleLineInput",
        "config": {
          "pdfHideIfValueIsEmpty": true,
          "pdfWidth": 0.5,
          "label": {
            "text": {
              "de": "Auftragsnummer",
              "en": "Order Number"
            }
          }
        }
      },
      {
        "id": "installationReportNumber",
        "type": "singleLineInput",
        "config": {
          "pdfHideIfValueIsEmpty": true,
          "pdfWidth": 0.5,
          "label": {
            "text": {
              "de": "Montageberichtsnummer",
              "en": "Installation Report Number"
            }
          }
        }
      },
      {
        "id": "technician",
        "type": "userSingleSelect",
        "config": {
          "pdfHideIfValueIsEmpty": true,
          "pdfWidth": 0.5,
          "label": {
            "text": {
              "de": "Techniker",
              "en": "Technician"
            }
          },
          "prefill": {
            "value": [
              {
                "input": "currentUserId",
                "steps": []
              }
            ]
          }
        }
      },
      {
        "id": "AAWEditor",
        "type": "singleLineInput",
        "config": {
          "pdfHideIfValueIsEmpty": true,
          "pdfWidth": 0.5,
          "label": {
            "text": {
              "de": "AAW-Bearbeiter",
              "en": "AAW Editor"
            }
          }
        }
      },
      {
        "id": "contactPerson",
        "type": "singleLineInput",
        "config": {
          "pdfHideIfValueIsEmpty": true,
          "pdfWidth": 0.5,
          "label": {
            "text": {
              "de": "Ansprechperson",
              "en": "Contact Person"
            }
          },
          "onChange": [
            {
            "target": {
              "id": "signatureCustomer",
              "propertyName": "name"
            },
            "steps": [ "userToFullNameString" ]
            }
          ]
        }
      },
      {
        "id": "telephoneNumber",
        "type": "phoneNumberInput",
        "config": {
          "pdfHideIfValueIsEmpty": true,
          "pdfWidth": 0.5,
          "label": {
            "text": {
              "de": "Telefon",
              "en": "Phone"
            }
          }
        }
      },
      {
        "id": "faxNumber",
        "type": "singleLineInput",
        "config": {
          "pdfHideIfValueIsEmpty": true,
          "pdfWidth": 0.5,
          "label": {
            "text": {
              "de": "Fax",
              "en": "Fax"
            }
          }
        }
      },
      {
        "id": "asset",
        "type": "assetSingleSelect",
        "config": {
          "pdfHideIfValueIsEmpty": true,
          "pdfWidth": 0.5,
          "label": {
            "text": {
              "de": "Gerät und Seriennummer",
              "en": "Device And Serial Number"
            }
          },
          "prefill": {
            "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
            ]
          }
        }
      },
      {
        "id": "businessUnit",
        "type": "staticSingleSelect",
        "config": {
          "pdfHideIfValueIsEmpty": true,
          "pdfWidth": 0.5,
          "label": {
            "text": {
              "de": "Geschäftsfeld",
              "en": "Business Unit"
            }
          },
          "value": {
            "options": {
              "plastics":{
                "de": "Kunststoffe",
                "en": "Plastics"
              },
              "nonwovens":{
                "de": "Vliesstoffe",
                "en": "Nonwovens"
              },
              "packaging":{
                "de": "Packstoffe",
                "en": "Packaging"
              },
              "metals":{
                "de": "Metalle",
                "en": "Metals"
              }
            }
          }
        }
      },
      {
        "id": "costCenter",
        "type": "singleLineInput",
        "config": {
          "pdfHideIfValueIsEmpty": true,
          "pdfWidth": 0.5,
          "label": {
            "text": {
              "de": "Kostenstelle",
              "en": "Cost Center"
            }
          }
        }
      },
      {
        "id": "serviceContract",
        "type": "staticSingleSelect",
        "config": {
          "pdfHideIfValueIsEmpty": true,
          "pdfWidth": 0.5,
          "label": {
            "text": {
              "de": "Servicevertrag",
              "en": "Service Contract"
            }
          },
          "value": {
            "options": {
              "SVI":{
                "de": "SV I",
                "en": "SV I"
              },
              "SVII":{
                "de": "SV II",
                "en": "SV II"
              }
            }
          }
        }
      }
     ]
    },
    {
      "id": "times",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Arbeits- und Reisezeiten",
          "en": "Work And Travel Times"
        }
      },
      "fields": [
        {
          "id": "workAndTravelTimes",
          "type": "timeTrackingListInput",
          "config": {
            "label": {
              "text": {
                "de": "Arbeits- und Reisezeiten",
                "en": "Work And Travel Times"
              }
            }
          }
        }
      ]
    },
    {
      "id": "workingStepTypes",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Art der Arbeiten",
          "en": "Type Of Working Steps"
        }
      },
      "fields": [
        {
          "id": "workingSteps",
          "type": "taskListInput",
          "config": {
            "pdfHideIfValueIsEmpty": true,
            "label": {
              "text": {
                "de": "Arbeiten",
                "en": "Working Steps"
              }
            },
            "prefill": {
              "entries": [
                {
                  "input": "workOrderId",
                  "steps": [ "workOrderIdToWorkOrder", "workOrderToTasks" ]
                }
              ]
            }
          }
        }
      ]
    },
    {
      "id": "report",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Montagebericht",
          "en": "Installation Report"
        }
      },
      "fields": [
        {
          "id": "fullReport",
          "type": "richTextInput",
          "config": {
            "pdfHideIfValueIsEmpty": true,
            "label": {
              "text": {
                "de": "Vollständiger Bericht",
                "en": "Full Report"
              }
            },
            "placeHolderText": "Hier tippen..."
          }
        }
      ]
    },
    {
      "id": "spareParts",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Ersatzteile",
          "en": "Spare Parts"
        }
      },
      "fields": [
        {
          "id": "sparePartsSelect",
          "type": "partListInput",
          "config": {
            "pdfHideIfValueIsEmpty": true,
            "label": {
              "text": {
                "de": "Ersatzteile",
                "en": "Spare Parts"
              }
            },
            "fields": {
              "partNumberSingleLineTextInput": {
                "required": true
              },
              "quantityNumericInput": {
                "required": true
              },
              "descriptionMultiLineTextInput": {
                "required": true
              }
            }
          }
        },
        {
          "id": "helpText",
          "type": "htmlDisplay",
          "config": {
            "text": {
              "de": "Die vorstehend aufgeführten Leistungen und die aufgezeichneten Arbeitszeiten wurden in meinem/unserem Auftrag zu den bekannten Geschäfts-, Liefer- und Montagebedingungen der Firma Herrmann Ultraschalltechnik GmbH &  Co. KG ausgeführt, was nach eingehender Überprüfung hierdurch unterschriftlich bestätigt wird. Auf nachträgliche Spezifikation der oben aufgeführten Montagearbeiten und sonstigen Leistungen wird ausdrücklich verzichtet. Die aufgeführten Arbeitsstunden werden als Abrechnungsgrundlage anerkannt.",
              "en": "The above services and the recorded working hours were performed on my/our behalf under the known business, delivery and assembly conditions of Herrmann Ultraschalltechnik GmbH & Co. KG, which is hereby confirmed by signature after thorough inspection. Subsequent specification of the assembly work and other services listed above is expressly waived. The listed working hours are accepted as the basis for invoicing."
            }
          }
        }
      ]
    },
    {
      "id": "signatureTechnician",
      "type": "signatureSection",
      "config": {
        "required": true,
        "headlineText": {
          "de": "Unterschrift Monteur",
          "en": "Signature Assembler"
        },
        "pdfHide": false,
        "pdfHideIfValueIsEmpty": false,    
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "fields": {
          "dateInput": {
            "disable": false,
            "pdfHide": false,
            "required": false
          },
          "locationSingleLineTextInput": {
            "disable": false,
            "pdfHide": false,
            "required": false
          },
          "nameSingleLineTextInput": {
            "disable": false,
            "pdfHide": false,
            "capitalizeFirstLetterOfEveryWord": false,
            "required": false
          }
        },
        "prefill": {
          "name": [
            {
            "input": "currentUser",
            "steps": ["userToFullNameString"]
            }
          ],
          "location": [
            {
            "input": "assetId",
            "steps": [
              "assetIdToAsset",
              "assetToLocationAddress",
              "addressToCityString"
            ]
            },
            {
            "input": "assetId",
            "steps": [
              "assetIdToAsset",
              "assetToCustomerAccountId",
              "accountIdToAccount",
              "accountToBillingAddressAddress",
              "addressToCityString"
            ]
            },
            {
            "input": "organizationId",
            "steps": [
              "accountIdToAccount",
              "accountToBillingAddressAddress",
              "addressToCityString"
            ]
            },
            {
              "input": "none",
              "steps": [
                [
                "staticString",
                "Default Location"
                ]
              ]
            }
          ],
          "date": [
            {
              "input": "creationDateTime",
              "steps": ["dateTimeToDate"]
            }
          ]
        }
      }
    },
    {
      "id": "signatureCustomer",
      "type": "signatureSection",
      "config": {
        "required": true,
        "headlineText": {
          "de": "Unterschrift Kunde",
          "en": "Signature Customer"
        },
        "pdfHide": false,
        "pdfHideIfValueIsEmpty": false,    
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "fields": {
          "dateInput": {
            "disable": false,
            "pdfHide": false,
            "required": true
          },
          "locationSingleLineTextInput": {
            "disable": false,
            "pdfHide": false,
            "required": true
          },
          "nameSingleLineTextInput": {
            "disable": false,
            "pdfHide": false,
            "capitalizeFirstLetterOfEveryWord": false,
            "required": true
          }
        },
        "prefill": {
          "date": [
            {
              "input": "creationDateTime",
              "steps": ["dateTimeToDate"]
            }
          ]
        }
      }
    },
    {
      "id": "send1",
      "type": "emailSection",
      "config": {
        "headlineText": {
          "de": "Ausgefüllten Montagebericht absenden",
          "en": "Send filled Installation Report"
        },
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": true,
        "emailDialogPrefill": {
          "bcc": {
            "currentUser": true
          },
          "subject": {
            "static": "Montagebericht"
          },
          "body": {
            "static": "Diese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail."
          }
        }
      }
    },
    {
      "id": "addendum",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Interner Nachtrag",
          "en": "Addendum"
        }
      },
      "fields": [
        {
          "id": "commentAddendum",
          "type": "richTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Interne Bemerkungen, Hinweise und To-Dos",
                "en": "Internal Comments, Notes and To Dos"
              }
            },
            "placeHolderText": "Hier tippen..."
          }
        }
      ]
    },
    {
      "id": "send2",
      "type": "emailSection",
      "config": {
        "headlineText": {
          "de": "Ausgefüllten Montagebericht mit internem Nachtrag absenden",
          "en": "Send filled Installation Report with internal addendum"
        },
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": true,
        "emailDialogPrefill": {
          "bcc": {
            "currentUser": true
          },
          "subject": {
            "static": "Montagebericht - Interner Nachtrag"
          },
          "body": {
            "static": "Diese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail."
          }
        }
      }
    }
  ]
}
