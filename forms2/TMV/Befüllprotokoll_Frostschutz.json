{
  "general": {
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_generalInformation",
      "type": "fieldSection",
      "config": {
        "headline": {
          "text": {
            "de": "Allgemeine Informationen",
            "en": "General Information"
          },
          "pdfHide": true
        }
      },
      "fields": [
        {
          "id": "rohrleitungssystemFür",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Rohrleitungssystem für",
                "en": "Piping system for"
              }
            }
          }
        },
        {
          "id": "company1",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Auftraggeber / Bauherr",
                "en": "Client / Building owner"
              }
            },
            "prefill": {
              "selectedCompany": [
                {
                  "input": "workOrderId",
                  "steps": [
                    "workOrderIdToWorkOrder",
                    "workOrderToOrganizationAccountId"
                  ]
                },
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    "assetToCustomerAccountId"
                  ]
                }
              ]
            },
            "onChange": [
              {
                "target": {
                  "id": "03_signatureClient",
                  "propertyName": "location"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress",
                  "addressToCityString"
                ]
              },
              {
                "target": {
                  "id": "location"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress"
                ]
              }
            ]
          }
        },
        {
          "id": "buildingProject",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Bauvorhaben",
                "en": "Building project"
              }
            }
          }
        },
        {
          "id": "location",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Ort der Anlage",
                "en": "Plant location"
              }
            }
          }
        }
      ]
    },
    {
      "id": "02_testing",
      "type": "fieldSection",
      "config": {
        "headline": {
          "text": {
            "de": "Druckprobe",
            "en": "Pressure test"
          },
          "pdfHide": true
        }
      },
      "fields": [
        {
          "id": "date",
          "type": "dateInput",
          "config": {
            "label": {
              "text": {
                "de": "Tag der Befüllung",
                "en": "Filling day"
              }
            }
          }
        },
        {
          "id": "medium",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Füllmedium",
                "en": "Filling medium"
              }
            }
          }
        },
        {
          "id": "quantity",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Befüllmenge",
                "en": "Filling quantity"
              }
            }
          }
        },
        {
          "id": "antifreeze",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Prozentualer Anteil Frostschutzmittel",
                "en": "Percentage of antifreeze"
              }
            }
          }
        },
        {
          "id": "antifreeze",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Prozentualer Anteil Frostschutzmittel",
                "en": "Percentage of antifreeze"
              }
            }
          }
        },
        {
          "id": "frostFree",
          "type": "dateInput",
          "config": {
            "label": {
              "text": {
                "de": "Frostfrei bis",
                "en": "Frost free until"
              }
            }
          }
        },
        {
          "id": "helpText",
          "type": "htmlDisplay",
          "config": {
            "text": {
              "de": "<h4>Das Rohrleitungssystem war zum Zeitpunkt der Befüllung dicht.</h4>",
              "en": "<h4>The piping system was tight at the time of filling.</h4>"
            }
          }
        },
        {
          "id": "furtherComments",
          "type": "multiLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Weitere Bemerkungen",
                "en": "Further comments"
              }
            },
            "pdfWidth": 1
          }
        }
      ]
    },
    {
      "id": "03_signatureClient",
      "type": "signatureSection",
      "config": {
        "headlineText": {
          "de": "Unterschrift",
          "en": "Signature"
        },
        "required": false,
        "fields": {
          "dateInput": {
            "disable": false,
            "pdfHide": false,
            "required": false
          },
          "locationSingleLineTextInput": {
            "disable": false,
            "pdfHide": false,
            "required": false
          },
          "nameSingleLineTextInput": {
            "disable": false,
            "pdfHide": false,
            "capitalizeFirstLetterOfEveryWord": false,
            "required": false
          }
        },
        "pdfHide": false,
        "pdfHideIfValueIsEmpty": false,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "prefill": {
          "name": [
            {
              "input": "currentUser",
              "steps": [
                "userToFullNameString"
              ]
            }
          ],
          "date": [
            {
              "input": "creationDateTime",
              "steps": [
                "dateTimeToDate"
              ]
            }
          ]
        }
      }
    },
    {
      "id": "04_send",
      "type": "emailSection",
      "config": {
        "headlineText": {
          "de": "Befüllprotokoll/Frostschutz als E-Mail senden",
          "en": "Send filling log/antifreeze as e-mail"
        },
        "hidePreviewPdfButton": false,
        "hideDownloadPdfButton": false,
        "emailDialogPrefill": {
          "bcc": {
            "assignee": false,
            "creator": false,
            "currentUser": false,
            "staticEmails": []
          },
          "cc": {
            "assignee": false,
            "creator": false,
            "currentUser": true,
            "staticEmails": []
          },
          "to": {
            "assignee": false,
            "creator": false,
            "currentUser": false,
            "staticEmails": []
          },
          "body": {
            "de": "Diese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail.",
            "en": "This email was generated automatically.\nPlease do not reply to this email."
          },
          "subject": {
            "de": "Befüllprotokoll/Frostschutz",
            "en": "Filling log/antifreeze"
          }
        }
      }
    }
  ]
}
