{
  "$schema": "https://app.remberg.de/api/forms/v2/documentation/form-template-config-schema.json",
  "general": {
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_generalInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "id": "technician",
          "type": "userSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Name",
                "en": "Name"
              }
            },
            "required": true,
            "pdfWidth": 0.5,
            "prefill": {
              "value": [
                {
                  "input": "currentUserId",
                  "steps": []
                }
              ]
            }
          }
        },
        {
          "id": "personnelNumber",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Personalnummer",
                "en": "Personnel Number"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "travelDate",
          "type": "dateInput",
          "config": {
            "label": {
              "text": {
                "de": "Reisedatum",
                "en": "Travel Date"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "PPA",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Auftrag, PPA",
                "en": "Work Order, PPA"
              }
            },
            "pdfWidth": 0.5,
            "required": true
          }
        },
        {
          "id": "customer",
          "type": "singleLineTextInput",
          "config": {
            "label": {
              "text": {
                "de": "Teilnehmer Kunde",
                "en": "Attendee Customer"
              }
            }
          }
        }
      ]
    },
    {
      "id": "02_expenses",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Auslagen",
          "en": "Expenses"
        }
      },
      "fields": [
        {
          "id": "whitespace1",
          "type": "headlineDisplay",
          "config": {
            "pdfTextSize": "H2",
            "uiHide": true,
            "text": {
              "de": "",
              "en": ""
            }
          }
        },
        {
          "id": "expenses",
          "type": "fieldRepeater",
          "config": {
            "label": {
              "text": {
                "de": "Auslagen",
                "en": "Outlays"
              }
            },
            "fields": [
              {
                "id": "expense",
                "type": "staticSingleSelect",
                "config": {
                  "label": {
                    "text": {
                      "de": "Auslage",
                      "en": "Outlay"
                    }
                  },
                  "value": {
                    "options": {
                      "flightTicket":{
                        "de": "Flugticket",
                        "en": "Flight Ticket"
                      },
                      "trainTicket":{
                        "de": "Zugticket",
                        "en": "Train Ticket"
                      },
                      "taxi":{
                        "de": "Taxi",
                        "en": "Taxi"
                      },
                      "parkingFees":{
                        "de": "Park-/Mautgebühren",
                        "en": "Parking Fees/Tolls"
                      },
                      "busTicket":{
                        "de": "Busticket/Fähre",
                        "en": "Bus Ticket/Ferry"
                      },
                      "gasoline":{
                        "de": "Benzin/Diesel",
                        "en": "Gasoline/Diesel"
                      },
                      "hospitality":{
                        "de": "Bewirtung",
                        "en": "Hospitality"
                      },
                      "hotel":{
                        "de": "Hotel",
                        "en": "Hotel"
                      },
                      "visa":{
                        "de": "Visum",
                        "en": "Visa"
                      },
                      "exchangeFees":{
                        "de": "Wechselgebühren",
                        "en": "Exchange Fees"
                      },
                      "other":{
                        "de": "Sonstiges",
                        "en": "Other"
                      }
                    }
                  }
                }
              },
              {
                "id": "disclaimer1",
                "type": "htmlDisplay",
                "config": {
                  "text": {
                    "de": "Auslagen in entspr. Währung angeben",
                    "en": "Fill out expenses in respective currency"
                  },
                  "pdfHide": true
                }
              },
              {
                "id": "cash",
                "type": "singleLineTextInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "Bar",
                      "en": "Cash"
                    }
                  },
                  "value": {
                    "validators": {
                      "regex": {
                        "pattern": "^[0-9]*$"
                      }
                    }
                  }
                }
              },
              {
                "id": "creditCard",
                "type": "singleLineTextInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "Firmenkreditkarte",
                      "en": "Company Credit Card"
                    }
                  },
                  "value": {
                    "validators": {
                      "regex": {
                        "pattern": "^[0-9]*$"
                      }
                    }
                  }
                }
              },
              {
                "id": "account",
                "type": "singleLineTextInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "Auf Rechnung",
                      "en": "On Account"
                    }
                  },
                  "value": {
                    "validators": {
                      "regex": {
                        "pattern": "^[0-9]*$"
                      }
                    }
                  }
                }
              }
            ]
          }
        },
        {
          "id": "retainingFee",
          "type": "singleLineTextInput",
          "config": {
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Vorschuss (Betrag)",
                "en": "Retaining Fee (Amount)"
              }
            },
            "value": {
              "validators": {
                "regex": {
                  "pattern": "^[0-9]*$"
                }
              }
            }
          }
        },
        {
          "id": "euro",
          "type": "booleanInput",
          "config": {
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true,
            "label": {
              "text": {
                "de": "Euro",
                "en": "Euro"
              }
            }
          }
        },
        {
          "id": "foreignCurrency",
          "type": "booleanInput",
          "config": {
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true,
            "label": {
              "text": {
                "de": "Fremdwährung",
                "en": "Foreign Currency"
              }
            }
          }
        }
      ]
    },
    {
      "id": "03_travelCosts",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Fahrtkosten",
          "en": "Travel Costs"
        }
      },
      "fields": [
        {
          "id": "whitespace2",
          "type": "headlineDisplay",
          "config": {
            "pdfTextSize": "H2",
            "uiHide": true,
            "text": {
              "de": "",
              "en": ""
            }
          }
        },
        {
          "id": "travelCosts",
          "type": "fieldRepeater",
          "config": {
            "label": {
              "text": {
                "de": "Fahrtkosten",
                "en": "Travel Costs"
              }
            },
            "fields": [
              {
                "id": "car",
                "type": "staticSingleSelect",
                "config": {
                  "label": {
                    "text": {
                       "de": "Fahrzeug",
                       "en": "Vehicle"
                    }
                  },
                  "required": true,
                  "value": {
                    "options": {
                      "companyCar":{
                        "de": "Firmen PKW",
                        "en": "Company Car"
                      },
                      "rentalCar":{
                        "de": "Leihwagen",
                        "en": "Rental Car"
                      },
                      "privateCar":{
                        "de": "Privat PKW",
                        "en": "Private Car"
                      }
                    }
                  }
                }
              },
              {
                "id": "licensePlate",
                "type": "singleLineTextInput",
                "config": {
                  "required": true,
                  "label": {
                    "text": {
                      "de": "Kennzeichen",
                      "en": "License Plate"
                    }
                  }
                }
              },
              {
                "id": "disclaimer2",
                "type": "htmlDisplay",
                "config": {
                  "text": {
                    "de": "km bei Fahrer/in eintragen",
                    "en": "Fill out km in driver's report"
                  },
                  "pdfHide": true
                }
              },
              {
                "id": "km",
                "type": "singleLineTextInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "km",
                      "en": "km"
                    }
                  },
                  "value": {
                    "validators": {
                      "regex": {
                        "pattern": "^[0-9]*$"
                      }
                    }
                  }
                }
              },
              {
                "id": "passenger",
                "type": "userSingleSelect",
                "config": {
                  "pdfHideIfValueIsEmpty": true,
                  "label": {
                    "text": {
                      "de": "Mitfahrer/in bei",
                      "en": "Passenger of"
                    }
                  }
                }
              }
            ]
          }
        }
      ]
    },
    {
      "id": "04_signatureTraveler",
      "type": "signatureSection",
      "config": {
        "headlineText": {
          "de": "Unterschrift Reisende/r",
          "en": "Signature Traveler"
        },
        "required": true,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "pdfHideIfValueIsEmpty": true,
        "pdfHide": false,
        "fields": {
          "dateInput": {
            "required": true,
            "pdfHide": false,
            "disable": false
          },
          "locationSingleLineTextInput": {
            "required": true,
            "pdfHide": false,
            "disable": false
          },
          "nameSingleLineTextInput": {
            "required": true,
            "pdfHide": false,
            "disable": false,
            "capitalizeFirstLetterOfEveryWord": true
          }
        },
        "prefill": {
          "name": [
            {
              "input": "currentUser",
              "steps": ["userToFullNameString"]
            }
          ],
          "date": [
            {
              "input": "creationDateTime",
              "steps": ["dateTimeToDate"]
            }
          ],
          "location": [
            {
              "input": "assetId",
              "steps": [
                "assetIdToAsset",
                "assetToLocationAddress",
                "addressToCityString"
              ]
            }
          ]
        }
      }
    },
    {
      "id": "05_signatureCustomer",
      "type": "signatureSection",
      "config": {
        "headlineText": {
          "de": "Unterschrift Bearbeiter/in",
          "en": "Signature Processor"
        },
        "required": true,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "pdfHideIfValueIsEmpty": true,
        "pdfHide": false,
        "fields": {
          "dateInput": {
            "required": true,
            "pdfHide": false,
            "disable": false
          },
          "locationSingleLineTextInput": {
            "required": true,
            "pdfHide": false,
            "disable": false
          },
          "nameSingleLineTextInput": {
            "required": true,
            "pdfHide": false,
            "disable": false,
            "capitalizeFirstLetterOfEveryWord": true
          }
        },
        "prefill": {
          "date": [
            {
              "input": "creationDateTime",
              "steps": ["dateTimeToDate"]
            }
          ],
          "location": [
            {
              "input": "assetId",
              "steps": [
                "assetIdToAsset",
                "assetToLocationAddress",
                "addressToCityString"
              ]
            }
          ]
        }
      }
    },
    {
      "id": "06_send",
      "type": "emailSection",
      "config": {
        "headlineText": {
          "de": "Bericht als E-Mail senden/gesendet",
          "en": "Send/sent report as email"
        },
        "pdfHide": true,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "emailDialogPrefill": {
          "subject": {
            "static": "Reisebericht intern"
          },
          "body": {
            "static": "Diese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail."
          }
        }
      }
    }
  ]
}
