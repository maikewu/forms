{
  "$schema": "https://pastebin.com/raw/eysKfZ7M",

  "general": {
      "singleInstanceForm": false,
      "timezone": "Europe/Berlin"
  },
  "sections":[
    {
      "type": "fieldSection",
      "id": "01_generalInformation",
      "config": {
        "headlineText": {
          "de": "Allgemeine Information",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "type": "companySingleSelect",
          "id": "customer",
          "config": {
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "required": true,
            "pdfWidth": 0.5,
            "useAsFilterForFields": ["asset","customercontactperson"],
            "prefill": {
              "selectedCompany": [
                {
                  "input": "organizationId",
                  "steps": []
                }
              ]
            },
            "onChange": [
              {
                "target": {"id": "signatureTechnician", "propertyName": "location"},
                "steps": ["accountInfoToAccount", "accountToBillingAddressAddress", "addressToCityString"]
              },
              {
                "target": {"id": "signatureCustomer", "propertyName": "location"},
                "steps": ["accountInfoToAccount", "accountToBillingAddressAddress", "addressToCityString"]
              }
            ]
          }
        },
        {
          "type": "userSingleSelect",
          "id": "customercontactperson",
          "config": {
            "label": {
              "text": {
                "de": "Ansprechpartner Kunde",
                "en": "Customer contact person"
              }
            },
            "required": false,
            "pdfWidth": 0.5,
            "pdfHideIfValueIsEmpty": true,
            "value": {
              "pdfPrintEmailAddress": false
            },
            "onChange": [
              {
                "target": {"id": "phone"},
                "steps": ["userInfoToUser", "userToPhoneNumberString", "phoneNumberStringToPhoneNumberObject"]
              }
            ]
          }
        },
        {
          "type": "singleLineTextInput",
          "id": "customer_contact",
          "config": {
            "label": {
              "text": {
                "de": "Ansprechpartner Kunde",
                "en": "Customer contact person"
              }
            },
            "required": false,
            "pdfHideIfValueIsEmpty": true,
            "pdfWidth": 0.5
          }
        },
        {
          "type": "phoneNumberInput",
          "id": "phone",
          "config": {
            "label": {
              "text": {
                "de": "Telefonnummer",
                "en": "Phone nummer"
              }
            },
            "pdfHideIfValueIsEmpty": true,
            "pdfWidth": 0.5,
            "required": false
          }
        },
        {
          "type": "singleLineTextInput",
          "id": "order_number",
          "config": {
            "label": {
              "text": {
                "de": "Auftragsnummer",
                "en": "Order number"
              }
            },
            "required": true,
            "pdfWidth": 0.5
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Maschine",
                "en": "Machine"
              }
            },
            "required": true,
            "pdfWidth": 0.5,
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            },
            "onChange": [
              {
                "target": {"id": "customer"},
                "steps": ["assetInfoToCustomerId"]
              }
            ]
          }
        },
        {
          "type": "singleLineTextInput",
          "id": "license_plate",
          "config": {
            "label": {
              "text": {
                "de": "KFZ-Kennzeichen",
                "en": "License plate number"
              }
            },
            "required": false,
            "pdfHideIfValueIsEmpty": true,
            "pdfWidth": 0.5
          }
        },
        {
          "type": "singleLineTextInput",
          "id": "distance",
          "config": {
            "label": {
              "text": {
                "de": "Gesamtkilometer",
                "en": "Total kilometer"
              }
            },
            "required": false,
            "pdfHideIfValueIsEmpty": true,
            "pdfWidth": 0.5
          }
        }
      ]
    },
    {
      "type": "fieldSection",
      "id": "02_work_times",
      "config": {
        "headlineText": {
          "de": "Reise- und Arbeitszeiten",
          "en": "Travel and Working Times"
        }
      },
      "fields": [
        {
          "type": "fieldRepeater",
          "id": "journey_times",
          "config": {
            "label": {
              "text": {
                "de": "Reisezeiten",
                "en": "Journey times"
              }
            },
            "pdfWidth": 1,
            "pdfHideIfValueIsEmpty": true,
            "fields": [
              {
                "type": "dateTimeInput",
                "id": "repeater_abreise",
                "config": {
                  "label": {
                    "text": {
                      "de": "Abreise",
                      "en": "Departure"
                    }
                  },
                  "pdfFieldRepeaterCellAlignment": "left" 
                }
              },
              {
                "type": "dateTimeInput",
                "id": "repeater_ankunft",
                "config": {
                  "label": {
                    "text": {
                      "de": "Ankuft",
                      "en": "Arrival"
                    }
                  },
                  "pdfFieldRepeaterCellAlignment": "left" 
                }
              },
              {
                "type": "singleLineTextInput",
                "id": "repeater_dauer",
                "config": {
                  "label": {
                    "text": {
                      "de": "Dauer",
                      "en": "Hours"
                    }
                  },
                  "pdfFieldRepeaterCellAlignment": "left"
                }
              }
            ]
          }
        },
        {
          "type": "fieldRepeater",
          "id": "working_times",
          "config": {
            "label": {
              "text": {
                "de": "Arbeitszeiten",
                "en": "Assembling times"
              }
            },
            "pdfWidth": 1,
            "pdfHideIfValueIsEmpty": true,
            "helptextAfter": {
              "de": "Die in den Spalten genannten Pausenzeiten bzw. mindestens die gesetzlichen Pausenzeiten werden automatisch abgezogen.",
              "en": "The break times mentioned in the columns, respectively at least the legal break times will be automatically deducted."
            },
            "fields": [
              {
                "type": "staticSingleSelect",
                "id": "weekday",
                "config": {
                  "label": {
                    "text": {
                      "de": "Tag",
                      "en": "Day"
                    }
                  },
                  "value": {
                    "options": {
                      "1":{
                        "de": "Montag",
                        "en": "Monday"
                      },
                      "2":{
                        "de": "Dienstag",
                        "en": "Tuesday"
                      },
                      "3":{
                        "de": "Mittwoch",
                        "en": "Wednesday"
                      },
                      "4":{
                        "de": "Donnerstag",
                        "en": "Thursday"
                      },
                      "5":{
                        "de": "Freitag",
                        "en": "Friday"
                      },
                      "6":{
                        "de": "Samstag",
                        "en": "Saturday"
                      },
                      "7":{
                        "de": "Sonntag",
                        "en": "Sunday"
                      }
                    }
                  }
                }
              },
              {
                "type": "dateTimeInput",
                "id": "repeater_startzeit",
                "config": {
                  "label": {
                    "text": {
                      "de": "Start",
                      "en": "Start"
                    }
                  },
                  "pdfFieldRepeaterCellAlignment": "left" 
                }
              },
              {
                "type": "dateTimeInput",
                "id": "repeater_endzeit",
                "config": {
                  "label": {
                    "text": {
                      "de": "Ende",
                      "en": "End"
                    }
                  },
                  "pdfFieldRepeaterCellAlignment": "left" 
                }
              },
              {
                "type": "singleLineTextInput",
                "id": "repeater_arbeitsstunden",
                "config": {
                  "label": {
                    "text": {
                      "de": "Arbeitsstunden",
                      "en": "Working hours"
                    }
                  },
                  "pdfFieldRepeaterCellAlignment": "left"
                }
              },
              {
                "type": "singleLineTextInput",
                "id": "repeater_pause",
                "config": {
                  "label": {
                    "text": {
                      "de": "Pause",
                      "en": "Break"
                    }
                  },
                  "pdfFieldRepeaterCellAlignment": "left"
                }
              },
              {
                "type": "singleLineTextInput",
                "id": "repeater_normale_std",
                "config": {
                  "label": {
                    "text": {
                      "de": "Normale Std.",
                      "en": "Normal Hrs."
                    }
                  },
                  "pdfFieldRepeaterCellAlignment": "left"
                }
              },
              {
                "type": "singleLineTextInput",
                "id": "repeater_overtime_25",
                "config": {
                  "label": {
                    "text": {
                      "de": "Überstd. 25%",
                      "en": "Overtime 25%"
                    }
                  },
                  "pdfFieldRepeaterCellAlignment": "left"
                }
              },
              {
                "type": "singleLineTextInput",
                "id": "repeater_overtime_50",
                "config": {
                  "label": {
                    "text": {
                      "de": "Überstd. 50%",
                      "en": "Overtime 50%"
                    }
                  },
                  "pdfFieldRepeaterCellAlignment": "left"
                }
              },
              {
                "type": "singleLineTextInput",
                "id": "repeater_overtime_we",
                "config": {
                  "label": {
                    "text": {
                      "de": "Sonn- & Feiertag",
                      "en": "Sun- & holiday"
                    }
                  },
                  "pdfFieldRepeaterCellAlignment": "left"
                }
              }
            ]
          }
        }
      ]
    },
    {
      "type": "fieldSection",
      "id": "03_comments",
      "config": {
        "headlineText": {
          "de": "Kommentare",
          "en": "Comments"
        }
      },
      "fields": [
        {
          "id": "disclaimer",
          "type": "htmlDisplay",
          "config": {
            "text": {
              "de": "<b style='font-size:9pt'>Die durchgeführten Arbeiten wurden geprüft und genehmigt.</b>",
              "en": "<b style='font-size:9pt'>The works done have been checked and approved.</b>"
            },
            "pdfWidth": 1
          }
        },
        {
          "type": "multiLineTextInput",
          "id": "comment_area",
          "config": {
            "label": {
              "text": {
                "de": "Kommentar",
                "en": "Comment"
              }
            },
            "pdfWidth": 1,
            "required": false,
            "pdfHideIfValueIsEmpty": true,
            
          }
        }
      ]
    }
  ]
}