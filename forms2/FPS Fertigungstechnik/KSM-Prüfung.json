{
  "$schema": "https://pastebin.com/raw/eysKfZ7M",
  "general": {
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_general_information",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "en": "KSM Inspection Protocol",
          "de": "KSM Prüfprotokoll"
        }
      },
      "fields": [
        {
          "id": "location_creation",
          "type": "addressInput",
          "config": {
            "required": {
              "city": true
            },
            "pdfWidth": 0.25,
            "label": {
              "text": {
                "de": "Ort",
                "en": "Location"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "workOrderId",
                  "steps": [
                    "workOrderToLocationAddress"
                  ]
                },
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    "assetToLocationAddress"
                  ]
                },
                {
                  "input": "organizationId",
                  "steps": [
                    "accountIdToAccount",
                    "accountToBillingAddressAddress"
                  ]
                }
              ]
            }
          }
        },
        {
          "id": "date_creation",
          "type": "dateInput",
          "config": {
            "required": true,
            "pdfWidth": 0.25,
            "label": {
              "text": {
                "de": "Datum",
                "en": "Date"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "creationDateTime",
                  "steps": [
                    "dateTimeToDate"
                  ]
                }
              ]
            }
          }
        },
        {
          "id": "creator",
          "type": "userSingleSelect",
          "config": {
            "required": true,
            "pdfWidth": 0.25,
            "label": {
              "text": {
                "de": "Ersteller",
                "en": "Creator"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "currentUserId",
                  "steps": []
                }
              ]
            }
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "required": true,
            "pdfWidth": 0.25,
            "label": {
              "text": {
                "de": "Maschine / Anlage",
                "en": "Machine / System"
              }
            },
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            }
          }
        }
      ]
    },
    {
      "id": "02_Inspection_Records_customRepeater",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "en": "Documentation Inspections",
          "de": "Dokumentation Prüfungen"
        }
      },
      "fields": [
        {
          "id": "repeater_inspections",
          "type": "fieldRepeater",
          "config": {
            "label": {
              "text": {
                "de": "",
                "en": ""
              }
            },
            "fields": [
              {
                "id": "repeater_Concentration",
                "type": "singleLineTextInput",
                "config": {
                  "pdfWidth": 0.15,
                  "required": true,
                  "label": {
                    "text": {
                      "de": "Konzentration",
                      "en": "Concentration"
                    }
                  }
                }
              },
              {
                "id": "repeater_phValue",
                "type": "singleLineTextInput",
                "config": {
                  "pdfWidth": 0.10,
                  "required": true,
                  "label": {
                    "text": {
                      "de": "ph-Wert",
                      "en": "ph-Value"
                    }
                  }
                }
              },
              {
                "id": "repeater_Condition",
                "type": "staticSingleSelect",
                "config": {
                  "pdfWidth": 0.15,
                  "label": {
                    "text": {
                      "de": "Zustand \n (optisch)",
                      "en": "Condition \n (visual)"
                    }
                  },
                  "value": {
                    "options": {
                      "condition_good": {
                        "de": "gut",
                        "en": "good"
                      },
                      "condition_bad": {
                        "de": "schlecht",
                        "en": "gut"
                      }
                    }
                  }
                }
              },
              {
                "id": "repeater_OilSkim",
                "type": "staticSingleSelect",
                "config": {
                  "pdfWidth": 0.15,
                  "label": {
                    "text": {
                      "de": "Fremdöl \n abgeskimmt",
                      "en": "Foreign oil \n skimmed"
                    }
                  },
                  "value": {
                    "options": {
                      "OilSkim_yes": {
                        "de": "ja",
                        "en": "yes"
                      },
                      "OilSkim_no": {
                        "de": "nein",
                        "en": "no"
                      }
                    }
                  }
                }
              },
              {
                "id": "repeater_KSMchange",
                "type": "staticSingleSelect",
                "config": {
                  "pdfWidth": 0.15,
                  "label": {
                    "text": {
                      "de": "KSM \n getauscht",
                      "en": "KSM \n changed"
                    }
                  },
                  "value": {
                    "options": {
                      "KSMchange_yes": {
                        "de": "ja",
                        "en": "yes"
                      },
                      "KSMchange_no": {
                        "de": "nein",
                        "en": "no"
                      }
                    }
                  }
                }
              },
              {
                "id": "repeater_Date",
                "type": "dateInput",
                "config": {
                  "pdfWidth": 0.125,
                  "required": true,
                  "label": {
                    "text": {
                      "de": "Datum",
                      "en": "Date"
                    }
                  }
                }
              },
              {
                "id": "repeater_Signature",
                "type": "singleLineTextInput",
                "config": {
                  "pdfWidth": 0.175,
                  "required": true,
                  "label": {
                    "text": {
                      "de": "Signatur",
                      "en": "Signature"
                    }
                  }
                }
              }
            ]
          }
        }
      ]
    },
    {
      "id": "03_send",
      "type": "emailSection",
      "config": {
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "pdfHide": true,
        "whitelistedDomains": [ "remberg.de", "fps-germany.com"],
        "headlineText": {
          "de": "Bericht als E-Mail senden/gesendet",
          "en": "Send/sent form as E-Mail"
        },
        "emailDialogPrefill": {
          "to": {
            "assignee": false,
            "creator": false,
            "currentUser": false,
            "staticEmails": []
          },
          "cc": {
            "assignee": false,
            "creator": false,
            "currentUser": false,
            "staticEmails": []
          },
          "bcc": {
            "assignee": false,
            "creator": false,
            "currentUser": false,
            "staticEmails": []
          },
          "subject": {
            "static": "Prüfprotokoll"
          },
          "body": {
            "static": "Diese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail.\n"
          }
        }
      }
    }
  ]
}