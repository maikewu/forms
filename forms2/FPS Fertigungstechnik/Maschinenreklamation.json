{
  "general": {
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_general_information",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "en": "Report rework",
          "de": "Bericht Nacharbeit"
        }
      },
      "fields": [
        {
          "id": "location_creation",
          "type": "addressInput",
          "config": {
            "required": {
              "city": true
            },
            "pdfWidth": 0.25,
            "label": {
              "text": {
                "de": "Ort",
                "en": "Location"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "currentAccount",
                  "steps": [
                    "accountToBillingAddressAddress"
                  ]
                }
              ]
            }
          }
        },
        {
          "id": "date_creation",
          "type": "dateInput",
          "config": {
            "required": true,
            "pdfWidth": 0.25,
            "label": {
              "text": {
                "de": "Datum",
                "en": "Date"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "creationDateTime",
                  "steps": [
                    "dateTimeToDate"
                  ]
                }
              ]
            }
          }
        },
        {
          "id": "creator",
          "type": "userSingleSelect",
          "config": {
            "required": true,
            "pdfWidth": 0.25,
            "label": {
              "text": {
                "de": "Ersteller",
                "en": "Creator"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "currentUserId",
                  "steps": []
                }
              ]
            }
          }
        }
      ]
    },
    {
      "id": "02_Complaint",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "en": "Documentation Material Complaint",
          "de": "Dokumentation Materialreklamation"
        }
      },
      "fields": [
        {
          "id": "casting_number",
          "type": "singleLineTextInput",
          "config": {
            "required": true,
            "pdfWidth": 1,
            "label": {
              "text": {
                "de": "Gussteilnummer",
                "en": "Casting Number"
              }
            }
          }
        },
        {
          "id": "casting_date",
          "type": "dateInput",
          "config": {
            "required": true,
            "pdfWidth": 1,
            "label": {
              "text": {
                "de": "Gussdatum",
                "en": "Casting Date"
              }
            }
          }
        },
        {
          "id": "material_waste",
          "type": "staticSingleSelect",
          "config": {
            "required": false,
            "pdfWidth": 1,
            "label": {
              "text": {
                "de": "Materialausschuss",
                "en": "Material Waste"
              }
            },
            "value": {
              "options": {
                "repair": {
                  "de": "Ja",
                  "en": "Yes"
                },
                "material": {
                  "de": "Nein",
                  "en": "No"
                }
              }
            }
          }
        },
        {
          "id": "cost_repair",
          "type": "singleLineTextInput",
          "config": {
            "required": true,
            "pdfWidth": 1,
            "label": {
              "text": {
                "de": "Entstandene Reparaturkosten",
                "en": "Occured Cost of Repair"
              }
            }
          }
        },
        {
          "id": "cost_check",
          "type": "singleLineTextInput",
          "config": {
            "required": true,
            "pdfWidth": 1,
            "label": {
              "text": {
                "de": "Entstandene Fertigungskosten bis zur Ausschussfeststellung",
                "en": "Occured Cost of pre-Check before Identification as Scrap"
              }
            }
          }
        },
        {
          "id": "cost_tooling",
          "type": "singleLineTextInput",
          "config": {
            "required": true,
            "pdfWidth": 1,
            "label": {
              "text": {
                "de": "Enstandene Werkzeugkosten",
                "en": "Occured Cost of Tooling"
              }
            }
          }
        },
        {
          "id": "comment",
          "type": "multiLineTextInput",
          "config": {
            "required": false,
            "pdfWidth": 1,
            "pdfHideIfValueIsEmpty": true,
            "label": {
              "text": {
                "de": "Kommentar",
                "en": "Comment"
              }
            }
          }
        }
      ]
    },
    {
      "id": "03_send",
      "type": "emailSection",
      "config": {
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "pdfHide": true,
        "whitelistedDomains": [ "remberg.de", "fps-germany.com"],
        "headlineText": {
          "de": "Bericht als E-Mail senden/gesendet",
          "en": "Send/sent form as E-Mail"
        },
        "emailDialogPrefill": {
          "to": {
            "assignee": false,
            "creator": false,
            "currentUser": false,
            "staticEmails": []
          },
          "cc": {
            "assignee": false,
            "creator": false,
            "currentUser": false,
            "staticEmails": []
          },
          "bcc": {
            "assignee": false,
            "creator": false,
            "currentUser": false,
            "staticEmails": []
          },
          "subject": {
            "de": "Bericht Nacharbeit",
            "en": "Bericht Nacharbeit"
          },
          "body": {
            "de": "Diese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail.\n",
            "en": "Diese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail.\n"
          }
        }
      }
    }
  ]
}
