{
  "$schema": "https://pastebin.com/raw/eysKfZ7M",

  "general": {
      "singleInstanceForm": false,
      "timezone": "Europe/Berlin"
  },
  "sections":[
    {
      "type": "fieldSection",
      "id": "01_generalInformation",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "type": "companySingleSelect",
          "id": "customer",
          "config": {
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "required": true,
            "pdfWidth": 1,
            "useAsFilterForFields": ["asset","customer_contact"],
            "prefill": {
              "selectedCompany": [
                {
                  "input": "organizationId",
                  "steps": []
                }
              ]
            }
          }
        },
        {
          "type": "userSingleSelect",
          "id": "customer_contact",
          "config": {
            "label": {
              "text": {
                "de": "Ansprechpartner Kunde",
                "en": "Customer contact person"
              }
            },
            "value": {
              "pdfPrintEmailAddress": true
            },
            "required": false,
            "pdfWidth": 0.5,
            "onChange": [
              {
                "target": {"id": "customer_contact_phone"},
                "steps": ["userInfoToUser","userToPhoneNumberString","phoneNumberStringToPhoneNumberObject"]
              }
            ]
          }
        },
        {
          "type": "userSingleSelect",
          "id": "khb_contact",
          "config": {
            "label": {
              "text": {
                "de": "khb Ansprechpartner",
                "en": "khb contact person"
              }
            },
            "value": {
              "pdfPrintEmailAddress": true
            },
            "required": true,
            "pdfWidth": 0.5,
            "onChange": [
              {
                "target": {"id": "khb_contact_phone"},
                "steps": ["userInfoToUser","userToPhoneNumberString","phoneNumberStringToPhoneNumberObject"]
              }
            ]
          }
        },
        {
          "type": "phoneNumberInput",
          "id": "customer_contact_phone",
          "config": {
            "label": {
              "text": {
                "de": "Telefonnummer Kunde",
                "en": "Phone number customer"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "type": "phoneNumberInput",
          "id": "khb_contact_phone",
          "config": {
            "label": {
              "text": {
                "de": "khb Telefonnummer",
                "en": "khb Phone number"
              }
            },
            "pdfWidth": 0.5
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlage",
                "en": "Asset"
              }
            },
            "required": true,
            "pdfWidth": 0.5,
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            },
            "onChange": [
              {
                "target": {"id": "customer"},
                "steps": ["assetInfoToCustomerId", "accountIdToAccount", "accountToAccountInfo"]
              }
            ]
          }
        },
        {
          "type": "singleLineTextInput",
          "id": "order_number",
          "config": {
            "label": {
              "text": {
                "de": "Bestellnummer",
                "en": "Order number"
              }
            },
            "required": false,
            "pdfHideIfValueIsEmpty": true,
            "pdfWidth": 0.5
          }
        },
        {
          "type": "singleLineTextInput",
          "id": "khb_order_number",
          "config": {
            "label": {
              "text": {
                "de": "khb-Auftragsnummer",
                "en": "khb work order number"
              }
            },
            "required": true,
            "pdfHideIfValueIsEmpty": true,
            "pdfWidth": 0.5
          }
        },
        {
          "type": "personListInput",
          "id": "serviceTechnicians",
          "config": {
            "label": {
              "text": {
                "de": "Monteure",
                "en": "Technicians"
              }
            },
            "pdfHideIfValueIsEmpty": true,
            "pdfHide": true,
            "pdfWidth": 0.5
          }
        },
        {
          "id": "times",
          "type": "timeTrackingListInput",
          "config": {
            "label": {
              "text": {
                "en": "Working and travel times",
                "de": "Arbeits- und Reisezeiten"
              }
            },
            "pdfHide": false,
            "pdfHideIfValueIsEmpty": true,
            "fields": {
              "timeTrackingTypeStaticSingleSelect": {
                "pdfHide": true
              },
              "startDateTimeInput": {
                "pdfHide": false
              },
              "endDateTimeInput": {
                "pdfHide": false
              },
              "breakNumericInput": {
                "disabled": false,
                "required": false,
                "pdfHide": false
              },
              "durationDisplay": {
                "disabled": true,
                "pdfHide": true
              },
              "distanceNumericInput": {
                "disabled": true,
                "required": false,
                "pdfHide": true
              },
              "technicianUserSingleSelect": {
                "disabled": false,
                "required": false,
                "pdfHide": false,
                "pdfPrintEmailAddress": false
              },
              "commentMultiLineTextInput": {
                "disabled": false,
                "required": false,
                "pdfHide": false
              }
            }
          }
        }
      ]
    },
    {
      "type": "signatureSection",
      "id": "signature_technician",
      "config": {
        "headlineText": {
          "de": "Unterschrift Mitarbeiter",
          "en": "Signature Staff Member"
        },
        "required": true,
        "pdfHideIfValueIsEmpty": true,
        "hidePreviewPdfButton": false,
        "hideDownloadPdfButton": false,
        "pdfHide": false,
        "fields": {
          "dateInput": {
            "required": true,
            "disable": false,
            "pdfHide": false
          },
          "locationSingleLineTextInput": {
            "required": false,
            "disable": true,
            "pdfHide": true
          },
          "nameSingleLineTextInput": {
            "capitalizeFirstLetterOfEveryWord": true,
            "required": true,
            "disable": false,
            "pdfHide": false
          }
        },
        "prefill": {
          "name": [
            {
              "input": "assignedUserId",
              "steps": ["userIdToUser","userToFullNameString"]
            }
          ]
        }
      }
    },
    {
      "type": "signatureSection",
      "id": "signature_customer",
      "config": {
        "headlineText": {
          "de": "Unterschrift Kunde",
          "en": "Signature Customer"
        },
        "required": true,
        "pdfHideIfValueIsEmpty": true,
        "hidePreviewPdfButton": false,
        "hideDownloadPdfButton": false,
        "pdfHide": false,
        "fields": {
          "dateInput": {
            "required": true,
            "disable": false,
            "pdfHide": false
          },
          "locationSingleLineTextInput": {
            "required": false,
            "disable": true,
            "pdfHide": true
          },
          "nameSingleLineTextInput": {
            "capitalizeFirstLetterOfEveryWord": true,
            "required": true,
            "disable": false,
            "pdfHide": false
          }
        }
      }
    },
    {
      "type": "emailSection",
      "id": "send_customer_version",
      "config": {
        "headlineText": {
          "de": "Bericht als E-Mail senden/gesendet",
          "en": "Send/sent form as e-mail"
        },
        "pdfHide": true,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "emailDialogPrefill": {
          "subject": {
            "static": "Montagestundennachweis - khb Maschinen- und Anlagenbau GmbH"
          },
          "body": {
            "static": "Diese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail.\n\nSehr geehrte Damen und Herren,\n\nanbei erhalten sie den Montagestundennachweis unseres Monteurs für den Einsatz in Ihrem Unternehmen.\nWir hoffen, dass Sie mit der ausgeführten Tätigkeit zufrieden sind.\nFür weitere Fragen steht Ihnen unser Team zur Verfügung.\n\nMit freundlichen Grüßen\n\nIhr Team der khb Maschinen- und Anlagenbau GmbH\n\n--\n\nDear Sir and Madam,\n\nEnclosed you will find the service protocol of our technician for the work in your company.\nWe hope you are satisfied with the work.\nIf you have any further questions, please do not hesitate to contact our team.\n\nBest regards\n\nYour team from khb Maschinen- und Anlagenbau GmbH"
          },
          "bcc": {
            "currentUser": true,
            "staticEmails": [
              "a.becker@khb-anlagenbau.com"
            ]
          }
        }
      }
    }
  ]
}