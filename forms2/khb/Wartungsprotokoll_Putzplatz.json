            },
            "pdfWidth": 1,
            "required": true
          }
        },
        {
          "type": "booleanInput",
          "id": "checklist_item_12",
          "config": {
            "label": {
              "text": {
                "de": "Pneumatik Zylinder und Schläuche visuell auf Lecks überprüfen",
                "en": "Visually check pneumatics cylinders and hoses for leaks"
              }
            },
            "pdfWidth": 1,
            "required": true
          }
        },
        {
          "type": "booleanInput",
          "id": "checklist_item_13",
          "config": {
