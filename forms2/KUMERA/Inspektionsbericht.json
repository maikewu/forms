        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "required": true,
            "prefill": {
              "selectedCompany": [
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    "assetToCustomerAccountId"
                  ]
                }
              ]
            }
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "label": {
              "text": {
                "de": "Anlage", 
                "en": "Plant"
              }
            },
            "required": true,
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            },
            "onChange": [
              {
                "target": {
                  "id": "location"
                },
                "steps": [
                  "assetInfoToAsset",
                  "assetToLocationAddress"
                ]
              },
              {
                "target": {
                  "id": "5-signature", 
                  "propertyName": "location"
                },
                "steps": [
                  "assetInfoToAsset",
                  "assetToLocationAddress",
                  "addressToCityString"
                ]
