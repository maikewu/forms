        },
        {
          "id": "location",
          "type": "addressInput",
          "config": {
            "label": {
              "text": {
                "de": "Standort",
                "en": "Location"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "organizationId",
                  "steps": [
                    "accountIdToAccount",
                    "accountToBillingAddressAddress"
                  ]
                }
              ]
            }
          }
        },
        {
          "id": "date",
          "type": "dateInput",
          "config": {
            "label": {
              "text": {
                "de": "Datum",
                "en": "Date"
