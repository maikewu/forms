            "onChange": [
              {
                "target": {
                  "id": "location"
                },
                "steps": [
                  "assetInfoToAsset",
                  "assetToLocationAddress"
                ]
              },
              {
                "target": {
                  "id": "5-signature",
                  "propertyName": "location"
                },
                "steps": [
                  "assetInfoToAsset",
                  "assetToLocationAddress",
                  "addressToCityString"
