{
  "$schema": "https://pastebin.com/raw/eysKfZ7M",
  "general": {
    "singleInstanceForm": false,
    "timezone": "Europe/Berlin"
  },
  "sections": [
    {
      "id": "01_generalInformation",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Allgemeine Informationen",
          "en": "General Information"
        }
      },
      "fields": [
        {
          "id": "customer",
          "type": "companySingleSelect",
          "config": {
            "required": true,
            "pdfWidth": 1,
            "label": {
              "text": {
                "de": "Kunde",
                "en": "Customer"
              }
            },
            "prefill": {
              "selectedCompany": [
                {
                  "input": "organizationId",
                  "steps": []
                },
                {
                  "input": "assetId",
                  "steps": [
                    "assetIdToAsset",
                    "assetToCustomerAccountId"
                  ]
                }
              ]
            },
            "onChange": [
              {
                "target": {
                  "id": "customer_city"
                },
                "steps": [
                  "accountInfoToAccount",
                  "accountToBillingAddressAddress",
                  "addressToCityString"
                ]
              }
            ],
            "useAsFilterForFields": [
              "asset"
            ]
          }
        },
        {
          "id": "customer_city",
          "type": "singleLineTextInput",
          "config": {
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Montageort",
                "en": "Place"
              }
            },
            "onChange": [
              {
                "target": {
                  "id": "03_signature_customer",
                  "propertyName": "location"
                },
                "steps": []
              },
              {
                "target": {
                  "id": "04_signature_technician",
                  "propertyName": "location"
                },
                "steps": []
              }
            ]
          }
        },
        {
          "id": "customer_country",
          "type": "singleLineTextInput",
          "config": {
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Land",
                "en": "Country"
              }
            }
          }
        },
        {
          "id": "asset",
          "type": "assetSingleSelect",
          "config": {
            "required": true,
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Maschine / Anlage",
                "en": "Machine / System"
              }
            },
            "prefill": {
              "selectedAsset": [
                {
                  "input": "assetId",
                  "steps": []
                }
              ]
            },
            "onChange": [
              {
                "target": {"id": "customer"},
                "steps": ["assetInfoToCustomerId", "accountIdToAccount", "accountToAccountInfo"]
              }
            ]
          }
        },
        {
          "id": "operatingHours",
          "type": "singleLineTextInput",
          "config": {
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Betriebsstunden",
                "en": "Operating Hours"
              }
            }
          }
        },
        {
          "id": "year",
          "type": "singleLineTextInput",
          "config": {
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Jahr",
                "en": "Year"
              }
            }
          }
        },
        {
          "id": "week",
          "type": "singleLineTextInput",
          "config": {
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Woche",
                "en": "Week"
              }
            }
          }
        },
        {
          "id": "projectNr",
          "type": "singleLineTextInput",
          "config": {
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Projekt-Nr.",
                "en": "Project No."
              }
            }
          }
        },
        {
          "id": "projektbezeichnung",
          "type": "singleLineTextInput",
          "config": {
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Projekt-Bezeichnung",
                "en": "Project Name"
              }
            }
          }
        },
        {
          "id": "customercontact",
          "type": "singleLineTextInput",
          "config": {
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "Ansprechpartner Kunde",
                "en": "Contact Person Customer"
              }
            }
          }
        },
        {
          "id": "technician",
          "type": "userSingleSelect",
          "config": {
            "pdfWidth": 0.5,
            "label": {
              "text": {
                "de": "FILL Monteur",
                "en": "FILL Engineer"
              }
            },
            "prefill": {
              "value": [
                {
                  "input": "currentUserId",
                  "steps": []
                }
              ]
            }
          }
        }
      ]
    },
    {
      "id": "02_performed_tasks_customRepeater",
      "type": "fieldSection",
      "config": {
        "headlineText": {
          "de": "Ausgeführte Arbeiten",
          "en": "Work Performed"
        }
      },
      "fields": [
        {
          "id": "FieldRepeaterID",
          "type": "fieldRepeater",
          "config": {
            "helptextBefore": {},
            "helptextAfter": {},
            "label": {
              "text": {
                "de": "Ausgeführte Arbeiten",
                "en": "Work Performed"
              }
            },
            "fields": [
              {
                "id": "repeater_date",
                "type": "dateInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "Datum",
                      "en": "Date"
                    }
                  }
                }
              },
              {
                "id": "start_time",
                "type": "timeInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "Von",
                      "en": "From"
                    }
                  }
                }
              },
              {
                "id": "end_time",
                "type": "timeInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "Bis",
                      "en": "Until"
                    }
                  }
                }
              },
              {
                "id": "tasks_repeater",
                "type": "multiLineTextInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "Ausgeführte Arbeiten",
                      "en": "Work Performed"
                    }
                  }
                }
              },
              {
                "id": "comments_repeater",
                "type": "multiLineTextInput",
                "config": {
                  "label": {
                    "text": {
                      "de": "Bemerkung",
                      "en": "Notes"
                    }
                  }
                }
              }
            ]
          }
        }
      ]
    },
    {
      "id": "03_signature_customer",
      "type": "signatureSection",
      "config": {
        "required": true,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "pdfHide": false,
        "pdfHideIfValueIsEmpty": false,
        "headlineText": {
          "de": "Unterschrift Kunde",
          "en": "Signature Customer"
        },
        "fields": {
          "dateInput": {
            "disable": false,
            "pdfHide": false,
            "required": true
          },
          "locationSingleLineTextInput": {
            "disable": false,
            "pdfHide": false,
            "required": true
          },
          "nameSingleLineTextInput": {
            "capitalizeFirstLetterOfEveryWord": true,
            "disable": false,
            "pdfHide": false,
            "required": true
          }
        }
      }
    },
    {
      "id": "04_signature_technician",
      "type": "signatureSection",
      "config": {
        "required": true,
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "pdfHide": false,
        "pdfHideIfValueIsEmpty": false,
        "headlineText": {
          "de": "Unterschrift FILL",
          "en": "Signature FILL"
        },
        "fields": {
          "dateInput": {
            "disable": false,
            "pdfHide": false,
            "required": true
          },
          "locationSingleLineTextInput": {
            "disable": false,
            "pdfHide": false,
            "required": true
          },
          "nameSingleLineTextInput": {
            "capitalizeFirstLetterOfEveryWord": true,
            "disable": false,
            "pdfHide": false,
            "required": true
          }
        },
        "prefill": {
          "name": [
            {
              "input": "currentUserId",
              "steps": []
            }
          ]
        }
      }
    },
    {
      "id": "05-send",
      "type": "emailSection",
      "config": {
        "hideDownloadPdfButton": false,
        "hidePreviewPdfButton": false,
        "pdfHide": true,
        "headlineText": {
          "de": "Bericht als E-Mail senden/gesendet",
          "en": "Send/sent form as E-Mail"
        },
        "emailDialogPrefill": {
          "to": {
              "assignee": false,
              "creator": false,
              "currentUser": false,
              "staticEmails": []
          },
          "cc": {
              "assignee": false,
              "creator": false,
              "currentUser": true,
              "staticEmails": []
          },
          "bcc": {
              "assignee": false,
              "creator": false,
              "currentUser": false,
              "staticEmails": []
          },
          "subject": {
              "static": "Arbeitsbericht - FILL GmbH"
          },
          "body": {
              "static": "Diese E-Mail wurde automatisch generiert.\nBitte antworten Sie nicht auf diese E-Mail."
          }
        }
      }
    }
  ]
}
